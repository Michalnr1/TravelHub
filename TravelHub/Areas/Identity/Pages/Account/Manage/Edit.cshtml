@page
@model EditModel
@{
    ViewData["Title"] = "Edit profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.UserName" class="form-control" placeholder="Please choose your username." />
                <label asp-for="Input.UserName" class="form-label"></label>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="Please enter your email." />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" />
                <label asp-for="Input.FirstName" class="form-label"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" />
                <label asp-for="Input.LastName" class="form-label"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Nationality" class="form-control" />
                <label asp-for="Input.Nationality" class="form-label"></label>
                <span asp-validation-for="Input.Nationality" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <div class="autocomplete-container form-floating">
                    <input asp-for="Input.DefaultAirportCode"
                           class="form-control"
                           type="text"
                           id="Input_DefaultAirportCode"
                           placeholder="Enter airport..."
                           autocomplete="off" />
                    <label asp-for="Input.DefaultAirportCode">Default Airport Code</label>
                    <span asp-validation-for="Input.DefaultAirportCode" class="text-danger"></span>
                    <div id="autocompleteResults" class="autocomplete-results" hidden></div>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Birthday" class="form-control" type="date" />
                <label asp-for="Input.Birthday" class="form-label"></label>
                <span asp-validation-for="Input.Birthday" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.IsPrivate" class="form-label"></label>
                <div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Input.IsPrivate" value="false" id="isPrivateNo">
                        <label class="form-check-label" for="isPrivateNo">No</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="Input.IsPrivate" value="true" id="isPrivateYes">
                        <label class="form-check-label" for="isPrivateYes">Yes</label>
                    </div>
                </div>
                <span asp-validation-for="Input.IsPrivate" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>

    <!-- Prawa kolumna - ustawienia powiadomień W TYM SAMYM FORMULARZU -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Notification Settings</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="form-check form-switch align-items-start">
                        <input class="form-check-input" type="checkbox" asp-for="Input.ReceiveCommentNotifications" id="receiveCommentNotifications">
                        <label class="form-check-label ms-2" for="receiveCommentNotifications">
                            Receive email notifications when someone comments on my posts
                        </label>
                    </div>
                    <small class="form-text text-muted">
                        You will receive an email whenever someone adds a comment to your posts.
                    </small>
                </div>
                <small class="text-muted">Click "Save" button below to save notification settings</small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="~/js/airport-search-module.js"></script>

    <script>
        const input = document.getElementById("Input_DefaultAirportCode");
        const resultsDiv = document.getElementById("autocompleteResults");
        addAutocompleteFunctionality(input, resultsDiv);
    </script>

    <style>
        .autocomplete-container {
            position: relative;
        }

        .autocomplete-results {
            position: absolute;
            background: white;
            border: 1px solid #ccc;
            border-top: none;
            width: 100%;
            max-height: 200px;
            overflow-y: auto;
            z-index: 1000;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border-radius: 0 0 6px 6px;
        }

        .autocomplete-item {
            padding: 12px;
            cursor: pointer;
            border-bottom: 1px solid #f0f0f0;
            display: flex;
            justify-content: space-between;
        }

            .autocomplete-item:hover {
                background: #007bff;
                color: white;
            }

            .autocomplete-item:last-child {
                border-bottom: none;
            }

        .autocomplete-container.form-floating > .autocomplete-results {
            margin-top: 0.25rem;
        }

        .card {
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            padding: 1rem 1.25rem;
        }

        .form-switch .form-check-input {
            width: 3em;
            height: 1.5em;
        }
    </style>
}