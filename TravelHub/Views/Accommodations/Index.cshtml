@model List<TravelHub.Web.ViewModels.Accommodations.AccommodationViewModel>

@{
    ViewData["Title"] = "Accommodations";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Accommodations</h1>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Cost</th>
                            <th>Category</th>
                            <th>Day</th>
                            <th>Check-in</th>
                            <th>Check-out</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                @* <td>$@item.Cost</td> *@
                                <td>@item.CategoryName</td>
                                <td>@item.DayName</td>
                                <td>@item.CheckIn.ToString("MMM dd, yyyy")</td>
                                <td>@item.CheckOut.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Details</a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">No accommodations found.</p>
        }
    </div>
</div>