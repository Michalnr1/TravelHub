@model TravelHub.Web.ViewModels.Accommodations.AccommodationDetailsViewModel

@{
    ViewData["Title"] = "Delete Accommodation";
}

<h1>Delete Accommodation</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">@Model.Description</p>
                    <ul class="list-group list-group-flush">
                        @* <li class="list-group-item"><strong>Cost:</strong> $@Model.Cost</li> *@
                        <li class="list-group-item"><strong>Check-in:</strong> @Model.CheckIn.ToString("MMM dd, yyyy")</li>
                        <li class="list-group-item"><strong>Check-out:</strong> @Model.CheckOut.ToString("MMM dd, yyyy")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>