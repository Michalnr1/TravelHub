@model TravelHub.Web.ViewModels.Accommodations.AccommodationDetailsViewModel

@{
    ViewData["Title"] = "Accommodation details";

    // Sprawdzamy czy to publiczny podgląd
    var isPublicView = Context.Request.Query["source"] == "public";
    var returnUrl = ViewData["ReturnUrl"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Model.Name</h1>
    <div>
        @if (!isPublicView)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)" class="btn btn-secondary">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)" class="btn btn-danger">Delete</a>
        }
        <a href="@returnUrl" class="btn btn-outline-secondary">Back</a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Accommodation information</h5>
            </div>
            <div class="card-body">
                <p><strong>Name:</strong> @Model.Name</p>
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Duration:</strong> @Model.DurationString</p>
                <p><strong>Category:</strong> @Model.CategoryName</p>
                @* <p><strong>Cost:</strong> $@Model.Cost</p> *@
                <p><strong>Location:</strong> @Model.Latitude.ToString("F4"), @Model.Longitude.ToString("F4")</p>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Check-in/Check-out</h5>
            </div>
            <div class="card-body">
                <p><strong>Check-in date:</strong> @Model.CheckIn.ToString("MMM dd, yyyy")</p>
                <p><strong>Check-out date:</strong> @Model.CheckOut.ToString("MMM dd, yyyy")</p>
                <p><strong>Check-in time:</strong> @Model.CheckInTimeString</p>
                <p><strong>Check-out time:</strong> @Model.CheckOutTimeString</p>
                <p><strong>Nights:</strong> @((Model.CheckOut - Model.CheckIn).Days)</p>
            </div>
        </div>
    </div>
</div>