@model TravelHub.Web.ViewModels.TripsSearch.PublicTripDetailViewModel

@{
    ViewData["Title"] = "Trip Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Model.Name</h1>
    <div>
        <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#countriesModal">
            <i class="fas fa-globe"></i> View Countries
        </button>
        <a asp-controller="Trips" asp-action="MapView" asp-route-id="@Model.Id" class="btn btn-secondary">
            <i class="fas fa-map"></i> View on Map
        </a>
        <a href="#" class="btn btn-info" disabled title="Budget summary coming soon">
            <i class="fas fa-chart-pie"></i> Budget Summary
        </a>
        <a asp-action="Search" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Search
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<!-- Trip Overview -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                        <strong>Status:</strong> <span class="badge bg-info">@Model.Status</span>
                    </div>
                    <div class="col-md-2">
                        <strong>Dates:</strong> @Model.DateRange
                    </div>
                    <div class="col-md-2">
                        <strong>Duration:</strong> @Model.Duration days
                    </div>
                    <div class="col-md-3">
                        <strong>Actual Expenses:</strong> @Model.FormattedTotalExpenses
                    </div>
                    <div class="col-md-3">
                        @if (Model.EstimatedExpensesTotal > 0)
                        {
                            <strong>Estimated Expenses:</strong>
                            <span class="text-warning">@Model.FormattedEstimatedExpensesTotal</span>
                        }
                        else
                        {
                            <strong>Estimated Expenses:</strong>
                            <span class="text-muted">None</span>
                        }
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-4">
                        <strong>Owner:</strong> @Model.OwnerDisplay
                    </div>
                    <div class="col-md-4">
                        <strong>Participants:</strong> @Model.ParticipantsCount
                    </div>
                    <div class="col-md-4">
                        @if (Model.EstimatedExpensesTotal > 0)
                        {
                            <strong>Combined Total:</strong>
                            <span class="fw-bold">@Model.FormattedCombinedTotal</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-2 col-6">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-primary">@Model.Days.Count</h3>
                <p class="mb-0">Days</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-success">@Model.ActivitiesCount</h3>
                <p class="mb-0">Activities</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-warning">@Model.SpotsCount</h3>
                <p class="mb-0">Spots</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-info">@Model.TransportsCount</h3>
                <p class="mb-0">Transports</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-secondary">@Model.AccommodationsCount</h3>
                <p class="mb-0">Accommodations</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-danger">@Model.ExpensesCount</h3>
                <p class="mb-0">Expenses</p>
                @if (Model.EstimatedExpensesCount > 0)
                {
                    <small class="text-warning">(@Model.EstimatedExpensesCount estimated)</small>
                }
            </div>
        </div>
    </div>
</div>

<!-- Days and Groups -->
<div class="row mt-4">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">Days (@Model.NormalDaysCount)</h5>
            </div>
            <div class="card-body">
                @{
                    var normalDays = Model.Days.Where(d => !d.IsGroup).OrderBy(d => d.Number).ThenBy(d => d.Date).ToList();
                }
                @if (normalDays.Any())
                {
                    <div class="list-group">
                        @foreach (var day in normalDays)
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1 text-primary">@day.DisplayName</h6>
                                        <small class="text-muted">@day.Date.ToString("MMM dd, yyyy")</small>
                                        <br>
                                        <small>Activities: @day.ActivitiesCount</small>
                                    </div>
                                    <div>
                                        <a asp-controller="Days" asp-action="PublicDetails" asp-route-id="@day.Id" class="btn btn-sm btn-outline-primary">View</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No standard days added to this trip yet.</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">Groups (@Model.GroupsCount)</h5>
            </div>
            <div class="card-body">
                @{
                    var groups = Model.Days.Where(d => d.IsGroup).OrderBy(d => d.Date).ThenBy(d => d.Name).ToList();
                }
                @if (groups.Any())
                {
                    <div class="list-group">
                        @foreach (var group in groups)
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1 text-info">@group.DisplayName</h6>
                                        <small class="text-muted">@group.Date.ToString("MMM dd, yyyy")</small>
                                        <br>
                                        <small>Activities: @group.ActivitiesCount</small>
                                    </div>
                                    <div>
                                        <a asp-controller="Days" asp-action="PublicDetails" asp-route-id="@group.Id" class="btn btn-sm btn-outline-primary">View</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No groups added to this trip yet.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Content Sections -->
<div class="row">
    <!-- Accommodations -->
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Accommodations (@Model.AccommodationsCount)</h5>
            </div>
            <div class="card-body">
                @if (Model.Accommodations.Any())
                {
                    <div class="list-group">
                        @foreach (var accommodation in Model.Accommodations.OrderBy(a => a.CheckIn))
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@accommodation.Name</h6>
                                        <p class="mb-1 small text-muted">@accommodation.Description</p>
                                        <div class="small">
                                            <span class="badge bg-light text-dark">@accommodation.DurationString</span>
                                            @if (!string.IsNullOrEmpty(accommodation.CategoryName))
                                            {
                                                <span class="badge bg-secondary">@accommodation.CategoryName</span>
                                            }
                                            @if (!string.IsNullOrEmpty(accommodation.DayName))
                                            {
                                                <span class="badge bg-info">@accommodation.DayName</span>
                                            }
                                            <br>
                                            <small class="text-muted">
                                                🏨 @accommodation.CheckIn.ToString("MMM dd") - @accommodation.CheckOut.ToString("MMM dd")
                                            </small>
                                        </div>
                                    </div>
                                    <div>
                                        <a asp-controller="Accommodations" asp-action="PublicDetails" asp-route-id="@accommodation.Id" class="btn btn-sm btn-outline-primary">View</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No accommodations added to this trip yet.</p>
                }
            </div>
        </div>
    </div>

    <!-- Expenses -->
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    Expenses (@Model.ExpensesCount)
                    @if (Model.EstimatedExpensesCount > 0)
                    {
                        <span class="badge bg-warning text-dark">@Model.EstimatedExpensesCount estimated</span>
                    }
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Expenses.Any())
                {
                    <!-- Summary Stats -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body py-2">
                                    <small class="text-muted">Actual Total:</small>
                                    <div class="fw-bold text-success">@Model.FormattedTotalExpenses</div>
                                </div>
                            </div>
                        </div>
                        @if (Model.EstimatedExpensesTotal > 0)
                        {
                            <div class="col-md-6">
                                <div class="card bg-warning bg-opacity-10">
                                    <div class="card-body py-2">
                                        <small class="text-muted">Estimated Total:</small>
                                        <div class="fw-bold text-warning">@Model.FormattedEstimatedExpensesTotal</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Expenses List -->
                    <div class="list-group">
                        @foreach (var expense in Model.Expenses)
                        {
                            <div class="list-group-item @(expense.IsEstimated ? "estimated" : "actual")">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center mb-1">
                                            <h6 class="mb-0 me-2">@expense.Name</h6>
                                            @if (expense.IsEstimated)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-clock"></i> Estimated
                                                    @if (expense.Multiplier > 1)
                                                    {
                                                        <span class="ms-1">×@expense.Multiplier</span>
                                                    }
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check"></i> Actual
                                                </span>
                                            }
                                        </div>
                                        <div class="small">
                                            <span class="badge @(expense.IsEstimated ? "bg-warning text-dark" : "bg-success")">
                                                @if (expense.IsEstimated)
                                                {
                                                    @expense.EstimatedValue.ToString("F2") @(" " + expense.CurrencyCode)
                                                }
                                                else
                                                {
                                                    @expense.Value.ToString("F2") @(" " + expense.CurrencyCode)
                                                }
                                                @if (expense.IsEstimated && expense.Multiplier > 1)
                                                {
                                                    <text>(Total: @((expense.EstimatedValue * expense.Multiplier).ToString("F2")) @expense.CurrencyCode)</text>
                                                }
                                            </span>
                                            @if (!string.IsNullOrEmpty(expense.CategoryName))
                                            {
                                                <span class="badge bg-secondary">@expense.CategoryName</span>
                                            }
                                            <!-- UKRYTE: PaidByName -->
                                            <!-- UKRYTE: TransferredToName -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Summary Footer -->
                    <div class="mt-3 p-3 bg-light rounded">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Actual Total: @Model.FormattedTotalExpenses</strong>
                            </div>
                            @if (Model.EstimatedExpensesTotal > 0)
                            {
                                <div class="col-md-6">
                                    <strong class="text-warning">Estimated Total: @Model.FormattedEstimatedExpensesTotal</strong>
                                </div>
                            }
                        </div>
                        @if (Model.EstimatedExpensesTotal > 0)
                        {
                            <div class="mt-2">
                                <small class="text-muted">
                                    <i class="fas fa-lightbulb"></i>
                                    Total with estimates: @Model.FormattedCombinedTotal
                                </small>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No expenses added to this trip yet.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Activities -->
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Activities (@Model.ActivitiesCount)</h5>
            </div>
            <div class="card-body">
                @if (Model.Activities.Any())
                {
                    <div class="list-group">
                        @foreach (var activity in Model.Activities)
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@activity.Name</h6>
                                        <p class="mb-1 small text-muted">@activity.Description</p>
                                        <div class="small">
                                            <span class="badge bg-light text-dark">@activity.DurationString</span>
                                            @if (!string.IsNullOrEmpty(activity.CategoryName))
                                            {
                                                <span class="badge bg-secondary">@activity.CategoryName</span>
                                            }
                                            @if (!string.IsNullOrEmpty(activity.DayName))
                                            {
                                                <span class="badge bg-info">@activity.DayName</span>
                                            }
                                        </div>
                                    </div>
                                    <div>
                                        <a asp-controller="Activities" asp-action="PublicDetails" asp-route-id="@activity.Id" class="btn btn-sm btn-outline-primary">View</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No activities added to this trip yet.</p>
                }
            </div>
        </div>
    </div>

    <!-- Spots -->
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Spots (@Model.SpotsCount)</h5>
            </div>
            <div class="card-body">
                @if (Model.Spots.Any())
                {
                    <div class="list-group">
                        @foreach (var spot in Model.Spots)
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@spot.Name</h6>
                                        <p class="mb-1 small text-muted">@spot.Description</p>
                                        <div class="small">
                                            <span class="badge bg-light text-dark">@spot.DurationString</span>
                                            @if (!string.IsNullOrEmpty(spot.CategoryName))
                                            {
                                                <span class="badge bg-secondary">@spot.CategoryName</span>
                                            }
                                            <br>
                                            <small class="text-muted">
                                                📍 @spot.Latitude.ToString("F4"), @spot.Longitude.ToString("F4")
                                            </small>
                                        </div>
                                    </div>
                                    <div>
                                        <a asp-controller="Spots" asp-action="PublicDetails" asp-route-id="@spot.Id" class="btn btn-sm btn-outline-primary">View</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No spots added to this trip yet.</p>
                }
            </div>
        </div>
    </div>

    <!-- Transports -->
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Transports (@Model.TransportsCount)</h5>
            </div>
            <div class="card-body">
                @if (Model.Transports.Any())
                {
                    <div class="list-group">
                        @foreach (var transport in Model.Transports)
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@transport.Name</h6>
                                        <div class="small">
                                            <span class="badge bg-light text-dark">@transport.DurationString</span>
                                            <span class="badge bg-secondary">@transport.Type</span>
                                        </div>
                                        <div class="small text-muted">
                                            <div>From: @transport.FromSpotName</div>
                                            <div>To: @transport.ToSpotName</div>
                                        </div>
                                    </div>
                                    <div>
                                        <a asp-controller="Transports" asp-action="PublicDetails" asp-route-id="@transport.Id" class="btn btn-sm btn-outline-primary">View</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No transports added to this trip yet.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal dla krajów -->
<div class="modal fade" id="countriesModal" tabindex="-1" aria-labelledby="countriesModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="countriesModalLabel">Countries Visited in This Trip</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="countriesLoading" class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p>Loading countries...</p>
                </div>
                <div id="countriesContent" style="display: none;">
                    <div id="countriesList" class="list-group"></div>
                    <div id="noCountriesMessage" class="text-muted text-center" style="display: none;">
                        <p>No countries added to this trip yet.</p>
                        <p>Add spots with location information to see countries here.</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const countriesModal = document.getElementById('countriesModal');

            countriesModal.addEventListener('show.bs.modal', function() {
                loadCountries();
            });

            function loadCountries() {
                const loadingElement = document.getElementById('countriesLoading');
                const contentElement = document.getElementById('countriesContent');
                const countriesList = document.getElementById('countriesList');
                const noCountriesMessage = document.getElementById('noCountriesMessage');

                // Show loading, hide content
                loadingElement.style.display = 'block';
                contentElement.style.display = 'none';
                noCountriesMessage.style.display = 'none';
                countriesList.innerHTML = '';

                fetch(`@Url.Action("GetTripCountries", "Trips")/${@Model.Id}`)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(countries => {
                        // Hide loading
                        loadingElement.style.display = 'none';
                        contentElement.style.display = 'block';

                        if (countries && countries.length > 0) {
                            // Sort countries by name
                            countries.sort((a, b) => a.name.localeCompare(b.name));

                            // Populate countries list
                            countries.forEach(country => {
                                const countryElement = document.createElement('div');
                                countryElement.className = 'list-group-item d-flex justify-content-between align-items-center';
                                countryElement.innerHTML = `
                                    <div>
                                        <strong>${country.name}</strong>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">${country.spotsCount} spots</span>
                                `;
                                countriesList.appendChild(countryElement);
                            });
                        } else {
                            noCountriesMessage.style.display = 'block';
                        }
                    })
                    .catch(error => {
                        console.error('Error loading countries:', error);
                        loadingElement.style.display = 'none';
                        contentElement.style.display = 'block';
                        noCountriesMessage.innerHTML = '<p class="text-danger">Error loading countries. Please try again.</p>';
                        noCountriesMessage.style.display = 'block';
                    });
            }
        });
    </script>

    <style>
        .expense-item.estimated {
            border-left: 4px solid #ffc107;
            background-color: #fffbf0;
        }

        .expense-item.actual {
            border-left: 4px solid #198754;
        }
    </style>
}