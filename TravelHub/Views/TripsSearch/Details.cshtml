@model TravelHub.Web.ViewModels.TripsSearch.PublicTripDetailViewModel

@{
    ViewData["Title"] = "Trip Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Model.Name</h1>
    <div>
        <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#countriesModal">
            <i class="fas fa-globe"></i> View Countries
        </button>
        <a asp-controller="Trips" asp-action="MapView" asp-route-id="@Model.Id" asp-route-source="public" class="btn btn-secondary">
            <i class="fas fa-map"></i> View on Map
        </a>
        <a href="@Url.Action("PublicIndex", "BudgetSummary", new { tripId = Model.Id })" class="btn btn-info">
            <i class="fas fa-chart-pie"></i> Budget Summary
        </a>
        <a asp-action="Search" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Search
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<!-- Trip Overview -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                        <strong>Status:</strong> <span class="badge bg-info">@Model.Status</span>
                    </div>
                    <div class="col-md-2">
                        <strong>Dates:</strong> @Model.DateRange
                    </div>
                    <div class="col-md-2">
                        <strong>Duration:</strong> @Model.Duration days
                    </div>
                    <div class="col-md-3">
                        <strong>Actual Expenses:</strong> @Model.FormattedTotalExpenses
                    </div>
                    <div class="col-md-3">
                        @if (Model.EstimatedExpensesTotal > 0)
                        {
                            <strong>Estimated Expenses:</strong>
                            <span class="text-warning">@Model.FormattedEstimatedExpensesTotal</span>
                        }
                        else
                        {
                            <strong>Estimated Expenses:</strong>
                            <span class="text-muted">None</span>
                        }
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-4">
                        <strong>Owner:</strong> @Model.OwnerDisplay
                    </div>
                    <div class="col-md-4">
                        <strong>Participants:</strong> @Model.ParticipantsCount
                    </div>
                    <div class="col-md-4">
                        @if (Model.EstimatedExpensesTotal > 0)
                        {
                            <strong>Combined Total:</strong>
                            <span class="fw-bold">@Model.FormattedCombinedTotal</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-2 col-6">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-primary">@Model.Days.Count</h3>
                <p class="mb-0">Days + Groups</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-success">@Model.ActivitiesCount</h3>
                <p class="mb-0">Activities</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-warning">@Model.SpotsCount</h3>
                <p class="mb-0">Spots</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-info">@Model.TransportsCount</h3>
                <p class="mb-0">Transports</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-secondary">@Model.AccommodationsCount</h3>
                <p class="mb-0">Accommodations</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-danger">@Model.ParticipantsCount</h3>
                <p class="mb-0">Participants</p>
            </div>
        </div>
    </div>
</div>

<!-- Days and Groups -->
<div class="row mt-4">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">Days (@Model.NormalDaysCount)</h5>
            </div>
            <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                @{
                    var normalDays = Model.Days.Where(d => !d.IsGroup).OrderBy(d => d.Number).ThenBy(d => d.Date).ToList();
                }
                @if (normalDays.Any())
                {
                    <div class="list-group">
                        @foreach (var day in normalDays)
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1 text-primary">@day.DisplayName</h6>
                                        <small class="text-muted">@day.Date.ToString("MMM dd, yyyy")</small>
                                        <br>
                                        <small>Activities: @day.ActivitiesCount</small>
                                    </div>
                                    <div>
                                        <a asp-controller="Days" asp-action="Details" asp-route-id="@day.Id" asp-route-source="public" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No standard days added to this trip yet.</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">Groups (@Model.GroupsCount)</h5>
            </div>
            <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                @{
                    var groups = Model.Days.Where(d => d.IsGroup).OrderBy(d => d.Date).ThenBy(d => d.Name).ToList();
                }
                @if (groups.Any())
                {
                    <div class="list-group">
                        @foreach (var group in groups)
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1 text-info">@group.DisplayName</h6>
                                        <small class="text-muted">@group.Date.ToString("MMM dd, yyyy")</small>
                                        <br>
                                        <small>Activities: @group.ActivitiesCount</small>
                                    </div>
                                    <div>
                                        <a asp-controller="Days" asp-action="Details" asp-route-id="@group.Id" asp-route-source="public" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No groups added to this trip yet.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Content Tabs -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" id="contentTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="activities-tab" data-bs-toggle="tab" data-bs-target="#activities" type="button" role="tab" aria-controls="activities" aria-selected="true">
                            Activities & Spots (@(Model.ActivitiesCount + Model.SpotsCount))
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="accommodations-tab" data-bs-toggle="tab" data-bs-target="#accommodations" type="button" role="tab" aria-controls="accommodations" aria-selected="false">
                            Accommodations (@Model.AccommodationsCount)
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="transports-tab" data-bs-toggle="tab" data-bs-target="#transports" type="button" role="tab" aria-controls="transports" aria-selected="false">
                            Transports (@Model.TransportsCount)
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="expenses-tab" data-bs-toggle="tab" data-bs-target="#expenses" type="button" role="tab" aria-controls="expenses" aria-selected="false">
                            Expenses (@Model.ExpensesCount)
                        </button>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content" id="contentTabsContent">
                    <!-- Activities & Spots Tab -->
                    <div class="tab-pane fade show active" id="activities" role="tabpanel" aria-labelledby="activities-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="mb-3">Activities (@Model.ActivitiesCount)</h5>
                                <div style="max-height: 400px; overflow-y: auto;">
                                    @if (Model.Activities.Any())
                                    {
                                        <div class="list-group">
                                            @foreach (var activity in Model.Activities)
                                            {
                                                <div class="list-group-item">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div class="flex-grow-1">
                                                            <h6 class="mb-1">@activity.Name</h6>
                                                            <p class="mb-1 small text-muted">@activity.Description</p>
                                                            <div class="small">
                                                                <span class="badge bg-light text-dark">@activity.DurationString</span>
                                                                @if (!string.IsNullOrEmpty(activity.CategoryName))
                                                                {
                                                                    <span class="badge bg-secondary">@activity.CategoryName</span>
                                                                }
                                                                @if (!string.IsNullOrEmpty(activity.DayName))
                                                                {
                                                                    <span class="badge bg-info">@activity.DayName</span>
                                                                }
                                                            </div>
                                                        </div>
                                                        <div>
                                                            <a asp-controller="Activities" asp-action="Details" asp-route-id="@activity.Id" asp-route-source="public" class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted">No activities added to this trip yet.</p>
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h5 class="mb-3">Spots (@Model.SpotsCount)</h5>
                                <div style="max-height: 400px; overflow-y: auto;">
                                    @if (Model.Spots.Any())
                                    {
                                        <div class="list-group">
                                            @foreach (var spot in Model.Spots)
                                            {
                                                <div class="list-group-item">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div class="flex-grow-1">
                                                            <h6 class="mb-1">@spot.Name</h6>
                                                            <p class="mb-1 small text-muted">@spot.Description</p>
                                                            <div class="small">
                                                                <span class="badge bg-light text-dark">@spot.DurationString</span>
                                                                @if (!string.IsNullOrEmpty(spot.CategoryName))
                                                                {
                                                                    <span class="badge bg-secondary">@spot.CategoryName</span>
                                                                }
                                                                <br>
                                                                <small class="text-muted">
                                                                    📍 @spot.Latitude.ToString("F4"), @spot.Longitude.ToString("F4")
                                                                </small>
                                                            </div>
                                                        </div>
                                                        <div>
                                                            <a asp-controller="Spots" asp-action="Details" asp-route-id="@spot.Id" asp-route-source="public" class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted">No spots added to this trip yet.</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Accommodations Tab -->
                    <div class="tab-pane fade" id="accommodations" role="tabpanel" aria-labelledby="accommodations-tab">
                        <h5 class="mb-3">Accommodations (@Model.AccommodationsCount)</h5>
                        <div style="max-height: 400px; overflow-y: auto;">
                            @if (Model.Accommodations.Any())
                            {
                                <div class="list-group">
                                    @foreach (var accommodation in Model.Accommodations.OrderBy(a => a.CheckIn))
                                    {
                                        <div class="list-group-item">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1">@accommodation.Name</h6>
                                                    <p class="mb-1 small text-muted">@accommodation.Description</p>
                                                    <div class="small">
                                                        <span class="badge bg-light text-dark">@accommodation.DurationString</span>
                                                        @if (!string.IsNullOrEmpty(accommodation.CategoryName))
                                                        {
                                                            <span class="badge bg-secondary">@accommodation.CategoryName</span>
                                                        }
                                                        @if (!string.IsNullOrEmpty(accommodation.DayName))
                                                        {
                                                            <span class="badge bg-info">@accommodation.DayName</span>
                                                        }
                                                        <br>
                                                        <small class="text-muted">
                                                            🏨 @accommodation.CheckIn.ToString("MMM dd") - @accommodation.CheckOut.ToString("MMM dd")
                                                        </small>
                                                    </div>
                                                </div>
                                                <div>
                                                    <a asp-controller="Accommodations" asp-action="Details" asp-route-id="@accommodation.Id" asp-route-source="public" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No accommodations added to this trip yet.</p>
                            }
                        </div>
                    </div>

                    <!-- Transports Tab -->
                    <div class="tab-pane fade" id="transports" role="tabpanel" aria-labelledby="transports-tab">
                        <h5 class="mb-3">Transports (@Model.TransportsCount)</h5>
                        <div style="max-height: 400px; overflow-y: auto;">
                            @if (Model.Transports.Any())
                            {
                                <div class="list-group">
                                    @foreach (var transport in Model.Transports)
                                    {
                                        <div class="list-group-item">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1">@transport.Name</h6>
                                                    <div class="small">
                                                        <span class="badge bg-light text-dark">@transport.DurationString</span>
                                                        <span class="badge bg-secondary">@transport.Type</span>
                                                    </div>
                                                    <div class="small text-muted">
                                                        <div>From: @transport.FromSpotName</div>
                                                        <div>To: @transport.ToSpotName</div>
                                                    </div>
                                                </div>
                                                <div>
                                                    <a asp-controller="Transports" asp-action="Details" asp-route-id="@transport.Id" asp-route-source="public" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No transports added to this trip yet.</p>
                            }
                        </div>
                    </div>

                    <!-- Expenses Tab -->
                    <div class="tab-pane fade" id="expenses" role="tabpanel" aria-labelledby="expenses-tab">
                        <h5 class="mb-3">
                            Expenses (@Model.ExpensesCount)
                            @if (Model.EstimatedExpensesCount > 0)
                            {
                                <span class="badge bg-warning text-dark">@Model.EstimatedExpensesCount estimated</span>
                            }
                        </h5>

                        <!-- Summary Stats -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body py-2">
                                        <small class="text-muted">Actual Expenses Total:</small>
                                        <div class="fw-bold text-success">@Model.FormattedTotalExpenses</div>
                                        <small class="text-muted">Combined costs</small>
                                    </div>
                                </div>
                            </div>
                            @if (Model.EstimatedExpensesTotal > 0)
                            {
                                <div class="col-md-6">
                                    <div class="card bg-warning bg-opacity-10">
                                        <div class="card-body py-2">
                                            <small class="text-muted">Estimated Expenses Total:</small>
                                            <div class="fw-bold text-warning">@Model.FormattedEstimatedExpensesTotal</div>
                                            <small class="text-muted">@Model.EstimatedExpensesCount planned items</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div style="max-height: 400px; overflow-y: auto;">
                            <!-- Tylko wydatki szacowane na liście -->
                            @if (Model.Expenses.Any())
                            {
                                <div class="mb-3">
                                    <h6 class="text-warning">
                                        <i class="fas fa-clock me-1"></i>Estimated Expenses
                                    </h6>
                                    <div class="list-group">
                                        @foreach (var expense in Model.Expenses)
                                        {
                                            <div class="list-group-item estimated">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div class="flex-grow-1">
                                                        <h6 class="mb-1">@expense.Name</h6>
                                                        <div class="small">
                                                            <span class="badge bg-warning text-dark">
                                                                @expense.EstimatedValue.ToString("F2") @expense.CurrencyCode
                                                                @if (expense.Multiplier > 1)
                                                                {
                                                                    <text>×@expense.Multiplier</text>
                                                                }
                                                            </span>
                                                            @if (!string.IsNullOrEmpty(expense.CategoryName))
                                                            {
                                                                <span class="badge bg-secondary">@expense.CategoryName</span>
                                                            }
                                                            @if (!string.IsNullOrEmpty(expense.SpotName))
                                                            {
                                                                <span class="badge bg-info">@expense.SpotName</span>
                                                            }
                                                            @if (!string.IsNullOrEmpty(expense.TransportName))
                                                            {
                                                                <span class="badge bg-info">@expense.TransportName</span>
                                                            }
                                                        </div>
                                                        @if (expense.Multiplier > 1)
                                                        {
                                                            <small class="text-muted">
                                                                Total: @((expense.EstimatedValue * expense.Multiplier).ToString("F2")) @expense.CurrencyCode
                                                            </small>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }

                            @if (!Model.Expenses.Any() && Model.TotalExpenses == 0)
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">No expenses added to this trip.</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal dla krajów -->
<div class="modal fade" id="countriesModal" tabindex="-1" aria-labelledby="countriesModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="countriesModalLabel">Countries Visited in This Trip</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (Model.Countries.Any())
                {
                    <div class="list-group">
                        @foreach (var country in Model.Countries.OrderBy(c => c.Name))
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@country.Name</strong>
                                    @if (!string.IsNullOrEmpty(country.Code))
                                    {
                                        <small class="text-muted ms-2">(@country.Code)</small>
                                    }
                                </div>
                                <span class="badge bg-primary rounded-pill">@country.SpotsCount spots</span>
                            </div>
                        }
                    </div>

                    <div class="mt-3 text-center">
                        <small class="text-muted">
                            Total: @Model.Countries.Count countries visited
                        </small>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-globe-europe fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No countries added to this trip yet.</h5>
                        <p class="text-muted">Add spots with location information to see countries here.</p>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .expense-item.estimated {
            border-left: 4px solid #ffc107;
            background-color: #fffbf0;
        }

        .expense-item.actual {
            border-left: 4px solid #198754;
        }

        /* Custom scrollbar for better appearance */
        .card-body::-webkit-scrollbar {
            width: 6px;
        }

        .card-body::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 3px;
        }

        .card-body::-webkit-scrollbar-thumb {
            background: #c1c1c1;
            border-radius: 3px;
        }

            .card-body::-webkit-scrollbar-thumb:hover {
                background: #a8a8a8;
            }
    </style>
}