@model TravelHub.Web.ViewModels.Expenses.ExpenseDetailsViewModel

@{
    ViewData["Title"] = "Expense Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Expense Details</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        @if (Model.TripId > 0)
        {
            <a asp-controller="Trips" asp-action="Details" asp-route-id="@Model.TripId" class="btn btn-outline-secondary">
                Back to Trip
            </a>
        }
        else
        {
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Basic Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">@(Model.IsEstimated ? "Estimated Amount" : "Total Amount")</dt>
                    <dd class="col-sm-9">@(Model.IsEstimated ? Model.EstimatedValue.ToString("F2") : Model.Value.ToString("F2")) @Model.CurrencyKey</dd>

                    @if (Model.IsEstimated && Model.Multiplier > 1)
                    {
                        <dt class="col-sm-3">Multiplier</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">×@Model.Multiplier</span>
                            <small class="text-muted d-block mt-1">
                                This estimated expense will be multiplied by @Model.Multiplier in calculations.
                            </small>
                        </dd>
                    }

                    @if (!Model.IsEstimated && (Model.AdditionalFee > 0 || Model.PercentageFee > 0))
                    {
                        <dt class="col-sm-3">Currency Conversion Fees</dt>
                        <dd class="col-sm-9">
                            <div class="mb-1">
                                <small>Additional Fee: @Model.AdditionalFee.ToString("F2") @Model.CurrencyKey</small>
                            </div>
                            <div class="mb-1">
                                <small>Percentage Fee: @Model.PercentageFee.ToString("F1")%</small>
                            </div>
                            <div class="fw-bold">
                                <small>Total Fees: @Model.TotalFee.ToString("F2") @Model.TripCurrency</small>
                            </div>
                        </dd>
                    }

                    <dt class="col-sm-3">Paid By</dt>
                    <dd class="col-sm-9">@Model.PaidByName</dd>

                    <dt class="col-sm-3">Category</dt>
                    <dd class="col-sm-9">@(Model.CategoryName ?? "No category")</dd>

                    <dt class="col-sm-3">Currency</dt>
                    <dd class="col-sm-9">@Model.CurrencyName</dd>

                    @if (Model.TripId > 0)
                    {
                        <dt class="col-sm-3">Trip</dt>
                        <dd class="col-sm-9">
                            <a asp-controller="Trips" asp-action="Details" asp-route-id="@Model.TripId">@Model.TripName</a>
                        </dd>
                    }

                    @if (Model.CurrencyKey != Model.TripCurrency)
                    {
                        <dt class="col-sm-3">Exchange Rate</dt>
                        <dd class="col-sm-9">
                            1 @Model.CurrencyKey = @Model.ExchangeRateValue.ToString("F4") @Model.TripCurrency
                        </dd>

                        <dt class="col-sm-3">Converted Amount</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsEstimated)
                            {
                                <span>@Model.FormattedConvertedEstimatedValue</span>
                            }
                            else
                            {
                                <span>@Model.FormattedConvertedValue</span>
                            }
                            @if (!Model.IsEstimated && (Model.AdditionalFee > 0 || Model.PercentageFee > 0))
                            {
                                <small class="text-muted d-block mt-1">
                                    Includes conversion fees of @Model.FormattedTotalFee
                                </small>
                            }
                        </dd>
                    }

                    <dt class="col-sm-3">Expense Type</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsEstimated)
                        {
                            <span class="badge bg-warning text-dark">
                                <i class="fas fa-clock"></i> Estimated Expense
                            </span>
                            <small class="text-muted d-block mt-1">
                                This is a planned/estimated cost for budgeting purposes.
                            </small>
                        }
                        else if (!string.IsNullOrEmpty(Model.TransferredToName))
                        {
                            <span class="badge bg-info">
                                <i class="fas fa-exchange-alt"></i> Transfer
                            </span>
                            <small class="text-muted d-block mt-1">
                                This is a money transfer between participants.
                            </small>
                        }
                        else
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check"></i> Actual Expense
                            </span>
                            <small class="text-muted d-block mt-1">
                                This expense has been actually paid.
                            </small>
                        }
                    </dd>

                    @if (Model.SpotId.HasValue)
                    {
                        <dt class="col-sm-3">Related Spot</dt>
                        <dd class="col-sm-9">
                            <a asp-controller="Spots" asp-action="Details" asp-route-id="@Model.SpotId.Value">
                                @(Model.SpotName ?? "Related Spot")
                            </a>
                            <small class="text-muted d-block mt-1">
                                This expense is associated with a travel spot.
                            </small>
                        </dd>
                    }
                    else if (Model.TransportId.HasValue)
                    {
                        <dt class="col-sm-3">Related Transport</dt>
                        <dd class="col-sm-9">
                            <a asp-controller="Transports" asp-action="Details" asp-route-id="@Model.TransportId.Value">
                                @(Model.TransportName ?? "Related Transport")
                            </a>
                            <small class="text-muted d-block mt-1">
                                This expense is associated with a transport.
                            </small>
                        </dd>
                    }
                </dl>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0 d-flex justify-content-between align-items-center">
                    <span>Participants and Shares</span>
                    <span class="badge bg-primary">@Model.Participants.Count participants</span>
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Participants.Any() && string.IsNullOrEmpty(Model.TransferredToName))
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Participant</th>
                                    <th class="text-end">Share Amount</th>
                                    <th class="text-end">Percentage</th>
                                    <th class="text-end">Share of Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var participant in Model.Participants)
                                {
                                    <tr>
                                        <td>
                                            @participant.FullName
                                            @if (participant.FullName == Model.PaidByName)
                                            {
                                                <span class="badge bg-success ms-2">Paid</span>
                                            }
                                        </td>
                                        <td class="text-end fw-bold">@participant.ShareAmount.ToString("F2") @Model.CurrencyKey</td>
                                        <td class="text-end">@participant.SharePercentage.ToString("F1")%</td>
                                        <td class="text-end">
                                            <div class="progress" style="height: 20px; width: 100px; margin-left: auto;">
                                                <div class="progress-bar" role="progressbar"
                                                     style="width: @participant.SharePercentage%;"
                                                     aria-valuenow="@participant.SharePercentage"
                                                     aria-valuemin="0"
                                                     aria-valuemax="100">
                                                    @participant.SharePercentage.ToString("F0")%
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-group-divider">
                                <tr class="fw-bold">
                                    <td>Total</td>
                                    <td class="text-end">@Model.Value.ToString("F2") @Model.CurrencyKey</td>
                                    <td class="text-end">100%</td>
                                    <td class="text-end">
                                        <div class="progress" style="height: 20px; width: 100px; margin-left: auto;">
                                            <div class="progress-bar bg-success" role="progressbar"
                                                 style="width: 100%;"
                                                 aria-valuenow="100"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100">
                                                100%
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        @if (Model.IsEstimated)
                        {
                            <strong>Estimated Expense:</strong>
                            <span>No participants assigned. This is a planning expense for budgeting purposes.</span>
                        }
                        else if (!string.IsNullOrEmpty(Model.TransferredToName))
                        {
                            <strong>Transfer Expense:</strong>
                            <span>This is a money transfer from @Model.PaidByName to @Model.TransferredToName.</span>
                        }
                        else
                        {
                            <strong>No participants assigned to this expense.</strong>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Expense</a>

                    @if (Model.TripId > 0)
                    {
                        <a asp-controller="Trips" asp-action="Details" asp-route-id="@Model.TripId"
                           class="btn btn-outline-info">Back to Trip</a>
                    }
                    else
                    {
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    }

                    @if (Model.SpotId.HasValue)
                    {
                        <a asp-controller="Spots" asp-action="Details" asp-route-id="@Model.SpotId.Value"
                           class="btn btn-outline-warning">
                            View Related Spot
                        </a>
                    }

                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-grid">
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you sure you want to delete this expense?')">
                            Delete Expense
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Expense Summary</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3 p-2 @(Model.IsEstimated ? "bg-warning bg-opacity-10" : "bg-success bg-opacity-10") rounded">
                    <strong>Status:</strong>
                    @if (Model.IsEstimated)
                    {
                        <span class="badge bg-warning text-dark">
                            <i class="fas fa-clock"></i> Estimated
                        </span>
                    }
                    else if (!string.IsNullOrEmpty(Model.TransferredToName))
                    {
                        <span class="badge bg-info">
                            <i class="fas fa-exchange-alt"></i> Transfer
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-success">
                            <i class="fas fa-check"></i> Actual
                        </span>
                    }
                </div>

                <div class="d-flex justify-content-between mb-2">
                    <strong>@(Model.IsEstimated ? "Estimated Amount" : "Total Amount"):</strong>
                    <span class="fw-bold">@(Model.IsEstimated? Model.EstimatedValue.ToString("F2") : Model.Value.ToString("F2")) @Model.CurrencyKey</span>
                </div>

                @if (Model.IsEstimated && Model.Multiplier > 1)
                {
                    <div class="d-flex justify-content-between mb-2">
                        <strong>Multiplier:</strong>
                        <span class="badge bg-info">×@Model.Multiplier</span>
                    </div>
                }

                @if (!Model.IsEstimated && (Model.AdditionalFee > 0 || Model.PercentageFee > 0))
                {
                    <div class="d-flex justify-content-between mb-2">
                        <strong>Conversion Fees:</strong>
                        <span class="fw-bold text-danger">@Model.FormattedTotalFee</span>
                    </div>
                }

                @if (Model.CurrencyKey != Model.TripCurrency)
                {
                    <div class="d-flex justify-content-between mb-2">
                        <strong>Converted Amount:</strong>
                        <span class="fw-bold">
                            @if (Model.IsEstimated)
                            {
                                @Model.FormattedConvertedEstimatedValue
                            }
                            else
                            {
                                @Model.FormattedConvertedValue
                            }
                        </span>
                    </div>
                }

                @if (!Model.IsEstimated)
                {
                    <div class="d-flex justify-content-between mb-2">
                        <strong>Participants:</strong>
                        <span>@Model.Participants.Count</span>
                    </div>
                }

                @if (Model.Participants.Any())
                {
                    <div class="d-flex justify-content-between mb-2">
                        <strong>Average Share:</strong>
                        <span>@((Model.Value / Model.Participants.Count).ToString("F2")) @Model.CurrencyKey</span>
                    </div>
                }

                <div class="d-flex justify-content-between mb-2">
                    <strong>Paid by:</strong>
                    <span>@Model.PaidByName</span>
                </div>

                @if (!string.IsNullOrEmpty(Model.TransferredToName))
                {
                    <div class="d-flex justify-content-between mb-2">
                        <strong>Transferred to:</strong>
                        <span>@Model.TransferredToName</span>
                    </div>
                }

                <div class="d-flex justify-content-between">
                    <strong>Category:</strong>
                    <span>@(Model.CategoryName ?? "No category")</span>
                </div>

                @if (Model.SpotId.HasValue)
                {
                    <div class="mt-3 p-2 bg-light rounded">
                        <small class="text-muted">
                            <i class="fas fa-map-marker-alt"></i>
                            <strong>Linked to Spot:</strong>
                            <a asp-controller="Spots" asp-action="Details" asp-route-id="@Model.SpotId.Value" class="text-decoration-none">
                                @(Model.SpotName ?? "View Spot")
                            </a>
                        </small>
                    </div>
                }
                else if (Model.TransportId.HasValue)
                {
                    <div class="mt-3 p-2 bg-light rounded">
                        <small class="text-muted">
                            <i class="fas fa-bus"></i>
                            <strong>Linked to Transport:</strong>
                            <a asp-controller="Transports" asp-action="Details" asp-route-id="@Model.TransportId.Value" class="text-decoration-none">
                                @(Model.TransportName ?? "View Transport")
                            </a>
                        </small>
                    </div>
                }
            </div>
        </div>

        @if (Model.Participants.Any() && string.IsNullOrEmpty(Model.TransferredToName))
        {
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="card-title mb-0 d-flex justify-content-between align-items-center">
                        <span>Share Distribution</span>
                        @if (Model.IsEstimated)
                        {
                            <span class="badge bg-warning text-dark">Estimated</span>
                        }
                    </h5>
                </div>
                <div class="card-body">
                    <canvas id="shareChart" width="300" height="300"></canvas>
                </div>
            </div>
        }
        else if (Model.IsEstimated)
        {
            <div class="card mt-4">
                <div class="card-header bg-warning bg-opacity-25">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-lightbulb"></i> Planning Note
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-0">
                        <small>
                            This is an estimated expense for planning purposes.
                            Participants can be assigned later when the actual expense occurs.
                        </small>
                    </p>
                </div>
            </div>
        }
        else if (!string.IsNullOrEmpty(Model.TransferredToName))
        {
            <div class="card mt-4">
                <div class="card-header bg-info bg-opacity-25">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-exchange-alt"></i> Transfer Information
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-0">
                        <small>
                            This is a money transfer from <strong>@Model.PaidByName</strong> to <strong>@Model.TransferredToName</strong>.
                            The amount of @Model.Value.ToString("F2") @Model.CurrencyKey has been recorded.
                        </small>
                    </p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @if (Model.Participants.Any() && string.IsNullOrEmpty(Model.TransferredToName))
    {
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                var ctx = document.getElementById('shareChart').getContext('2d');
                var chart = new Chart(ctx, {
                    type: 'pie',
                    data: {
                        labels: [
                            @foreach (var participant in Model.Participants)
                            {
                                    @Html.Raw($"'{participant.FullName} ({participant.ShareAmount.ToString("F2")} {Model.CurrencyName})',")
                            }
                        ],
                        datasets: [{
                            data: [
                                @foreach (var participant in Model.Participants)
                                {
                                        @Html.Raw($"'{participant.ShareAmount.ToString("F2")}',")
                                }
                            ],
                            backgroundColor: [
                                '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0',
                                '#9966FF', '#FF9F40', '#FF6384', '#C9CBCF'
                            ]
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'bottom',
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        var label = context.label || '';
                                        var value = context.parsed;
                                        var percentage = (value / @Model.Value * 100).toFixed(1);
                                        return label + ': ' + value + ' @Model.CurrencyKey' + ' (' + percentage + '%)';
                                    }
                                }
                            },
                            @if (Model.IsEstimated)
                            {
                                    <text>
                                    title: {
                                        display: true,
                                        text: 'Estimated Distribution',
                                        color: '#856404'
                                    }
                                    </text>
                            }
                        }
                    }
                });
            });
        </script>
    }
}