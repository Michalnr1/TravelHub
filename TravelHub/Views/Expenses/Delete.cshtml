@model TravelHub.Web.ViewModels.Expenses.ExpenseDetailsViewModel

@{
    ViewData["Title"] = "Delete Expense";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Delete Expense</h1>
    @if (Model.TripId > 0)
    {
        <a asp-controller="Trips" asp-action="Details" asp-route-id="@Model.TripId" class="btn btn-outline-secondary">Back to Trip</a>
    }
    else
    {
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    }
</div>

<h3 class="text-danger">Are you sure you want to delete this expense?</h3>

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h5 class="card-title mb-0">Expense to Delete</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Value)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Value) @Html.DisplayFor(model => model.CurrencyName)
            </dd>

            <dt class="col-sm-3">
                Paid By
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.PaidByName)
            </dd>

            <dt class="col-sm-3">
                Category
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CategoryName)
            </dd>

            <dt class="col-sm-3">
                Participants
            </dt>
            <dd class="col-sm-9">
                @if (Model.Participants.Any())
                {
                    <ul class="list-unstyled">
                        @foreach (var participant in Model.Participants)
                        {
                            <li>
                                • @participant.FullName
                                <span class="text-muted">
                                    - @participant.ShareAmount.ToString("F2") @Model.CurrencyName (@participant.SharePercentage.ToString("F1")%)
                                </span>
                            </li>
                        }
                    </ul>
                    <div class="mt-2 fw-bold">
                        Total: @Model.Value.ToString("F2") @Model.CurrencyName
                    </div>
                }
                else
                {
                    <span class="text-muted">No participants</span>
                }
            </dd>
        </dl>

        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Warning:</strong> This action cannot be undone. All expense data including participant shares will be permanently deleted.
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete Expense
                </button>
                @if (Model.TripId > 0)
                {
                    <a asp-controller="Trips" asp-action="Details" asp-route-id="@Model.TripId" class="btn btn-secondary">Cancel</a>
                }
                else
                {
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                }
            </div>
        </form>
    </div>
</div>