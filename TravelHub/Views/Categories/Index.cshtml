@model IEnumerable<TravelHub.Web.ViewModels.Categories.CategoryViewModel>

@{
    ViewData["Title"] = "Kategorie";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Kategorie</h1>
    <a asp-action="Create" class="btn btn-primary">Utwórz nową kategorię</a>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Kolor</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Name</td>
                <td>
                    <span style="display:inline-block;width:28px;height:20px;background:@cat.Color;border:1px solid #ccc;"></span>
                    <span class="ms-2">@cat.Color</span>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@cat.Id" class="btn btn-sm btn-outline-primary">Szczegóły</a>
                    <a asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-sm btn-outline-secondary">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-sm btn-outline-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>