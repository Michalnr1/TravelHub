@model TravelHub.Web.ViewModels.Categories.CategoryViewModel

@{
    ViewData["Title"] = "Category Details";
}

<h1>@Model.Name</h1>

<div class="mb-3">
    <strong>Color:</strong>
    <span style="display:inline-block;width:28px;height:20px;background:@Model.Color;border:1px solid #ccc;"></span>
    <span class="ms-2">@Model.Color</span>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
<a asp-action="Index" class="btn btn-link">Back</a>