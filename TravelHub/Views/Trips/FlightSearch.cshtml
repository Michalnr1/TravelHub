@model TravelHub.Web.ViewModels.Trips.FlightSearchViewModel

@{
    ViewData["Title"] = "Find flight";
}

<div class="flight-search-container">
    <div class="mb-4">
        <a href="@Url.Action("Details", "Trips", new { id = Model.TripId })" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Trip
        </a>
    </div>

    <form id="flightForm" class="flight-form">
        <div class="form-row">
            <div class="form-group">
                <label for="from">From</label>
                <div class="autocomplete-container">
                    <input type="text" id="from" name="from" placeholder="Enter airport..." autocomplete="off" />
                    <div id="autocompleteResultsFrom" class="autocomplete-results" hidden></div>
                </div>
            </div>

            <div class="swap-button-container">
                <button type="button" id="swapButton" class="swap-btn" title="Swap airports">
                    ⇄
                </button>
            </div>

            <div class="form-group">
                <label for="to">To</label>
                <div class="autocomplete-container">
                    <input type="text" id="to" name="to" placeholder="Enter airport..." autocomplete="off" />
                    <div id="autocompleteResultsTo" class="autocomplete-results" hidden></div>
                </div>
            </div>

            <div class="form-group">
                <label for="date">Date</label>
                <input type="date" id="date" name="date"/>
            </div>
        </div>

        <fieldset class="travelers-section">
            <legend>Travelers</legend>
            <div class="travelers-grid">
                <div class="traveler-item">
                    <label for="adults">Adults</label>
                    <input type="number" id="adults" name="adults" value="@Math.Min(Model.Participants,9)" min="0" max="9" />
                    <small>12+ years</small>
                </div>
                <div class="traveler-item">
                    <label for="children">Children</label>
                    <input type="number" id="children" name="children" value="0" min="0" max="9" />
                    <small>2-11 years</small>
                </div>
                <div class="traveler-item">
                    <label for="seatedInfants">Seated infants</label>
                    <input type="number" id="seatedInfants" name="seatedInfants" value="0" max="9" />
                    <small>Under 2 years</small>
                </div>
                <div class="traveler-item">
                    <label for="heldInfants">Held infants</label>
                    <input type="number" id="heldInfants" name="heldInfants" value="0" max="9" />
                    <small>Under 2 years</small>
                </div>
            </div>
        </fieldset>

        <div class="advanced-options">
            <button type="button" id="toggleAdvanced" class="toggle-advanced-btn">
                <span class="toggle-text">Advanced Options</span>
                <span class="toggle-icon">▼</span>
            </button>

            <div id="advancedOptions" class="advanced-options-content hidden">
                <div class="advanced-grid">
                    <div class="form-group">
                        <label for="currency">Currency</label>
                        <select id="currency" name="currency" class="form-control">
                            @foreach (var currency in Model.Currencies)
                            {
                                bool isSelected = (Model.DefaultCurrencyCode == currency.Key);
                                <option value="@currency.Key" selected="@isSelected">
                                    @currency.DropdownText
                                </option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="maxPrice">Max Price</label>
                        <div class="price-input-container">
                            <input type="number" id="maxPrice" name="maxPrice" min="0" placeholder="Enter max price" />
                            <span class="currency-display" id="currencyDisplay"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="maxStops">Max Stops</label>
                        <select id="maxStops" name="maxStops" class="form-control">
                            <option value="">Any</option>
                            <option value="0">Direct</option>
                            <option value="1">1 stop max</option>
                            <option value="2">2 stops max</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <button type="submit" class="submit-btn">Search Flights</button>
    </form>

    <div id="loading" class="loading hidden">
        <div class="spinner"></div>
        <p>Searching for flights...</p>
    </div>

    <div id="flights" class="flights-results"></div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/lib/luxon/luxon.js"></script>

    <script src="~/js/airport-search-module.js"></script>

    <script>
        const defaultToAirportCode = "@Html.Raw(Model.ToAirportCode)";
        const defaultFromAirportCode = "@Html.Raw(Model.FromAirportCode)";

        // Initialize form with default values
        document.addEventListener('DOMContentLoaded', function() {
            if (defaultToAirportCode.length > 0) {
                document.getElementById("to").value = defaultToAirportCode;
            }
            if (defaultFromAirportCode.length > 0) {
                document.getElementById("from").value = defaultFromAirportCode;
            }

            // Set minimum date to today
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('date').min = today;

            // Set default date to 7 days from today
            const defaultDate = new Date('@Model.DefaultDate.ToString("yyyy-MM-dd")');
            document.getElementById('date').value = defaultDate.toISOString().split('T')[0];
        });

        // Swap airports functionality
        document.getElementById('swapButton').addEventListener('click', function() {
            const fromInput = document.getElementById('from');
            const toInput = document.getElementById('to');

            const tempValue = fromInput.value;
            fromInput.value = toInput.value;
            toInput.value = tempValue;
        });

        // Advanced options toggle
        document.getElementById('toggleAdvanced').addEventListener('click', function() {
            const advancedOptions = document.getElementById('advancedOptions');
            const toggleIcon = this.querySelector('.toggle-icon');
            const toggleText = this.querySelector('.toggle-text');

            advancedOptions.classList.toggle('hidden');
            toggleIcon.textContent = advancedOptions.classList.contains('hidden') ? '▼' : '▲';
            toggleText.textContent = advancedOptions.classList.contains('hidden') ? 'Advanced Options' : 'Hide Options';
        });
        
        // Currency display update
        document.getElementById('currency').addEventListener('change', function() {
            const currencyDisplay = document.getElementById('currencyDisplay');
            const selectedCurrency = this.value;
            currencyDisplay.textContent = selectedCurrency || '';
        });

        // Form submission
        document.getElementById("flightForm").addEventListener("submit", function (event) {
            event.preventDefault();

            const form = event.target;
            const from = form.from.value.trim();
            const to = form.to.value.trim();
            const date = form.date.value;
            const adults = parseInt(form.adults.value || "0");
            const children = parseInt(form.children.value || "0");
            const seatedInfants = parseInt(form.seatedInfants.value || "0");
            const heldInfants = parseInt(form.heldInfants.value || "0");
            const currency = form.currency.value || null;
            const maxPrice = form.maxPrice.value ? parseInt(form.maxPrice.value) : null;
            const maxStops = form.maxStops.value ? parseInt(form.maxStops.value) : null;

            // Validation
            if (!from || !to) {
                alert("Please enter both departure and arrival airports.");
                return;
            }

            if (!date) {
                alert("Please select a date.");
                return;
            }

            if (new Date(date) < new Date().setHours(0,0,0,0)) {
                alert("Date cannot be in the past.");
                return;
            }

            if (adults < 1) {
                alert("There must be at least one adult traveler.");
                return;
            }

            if ((seatedInfants + heldInfants) > adults) {
                alert("Each infant must be accompanied by an adult.");
                return;
            }

            if ((adults + children) > 9) {
                alert("There may be at most 9 adults and children in total.");
                return;
            }

            if (maxPrice && !currency) {
                alert("Please select a currency when setting a maximum price.");
                return;
            }

            if (maxPrice && maxPrice < 0) {
                alert("Maximum price cannot be negative.");
                return;
            }

            handleFlightSearch({
                from, to, date, adults, children, seatedInfants, heldInfants,
                currency, maxPrice, maxStops
            });
        });

        function make_get_request(endpoint, on_success){
            fetch(endpoint, {
                method: "GET",
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                on_success(data);
            })
            .catch(error => {
                console.error('Error:', error);
                showError('An error occurred while searching for flights.');
            });
        }

        function handleFlightSearch(params) {
            const searchParams = new URLSearchParams();
            Object.keys(params).forEach(key => {
                if (params[key] !== null && params[key] !== undefined) {
                    searchParams.append(key, params[key]);
                }
            });

            clearFlightCards();
            showLoading(true);

            make_get_request(`/Trips/Flights?${searchParams}`, processFlightList);
        }

        function showLoading(show) {
            const loadingElement = document.getElementById('loading');
            if (show) {
                loadingElement.classList.remove('hidden');
            } else {
                loadingElement.classList.add('hidden');
            }
        }

        function showError(message) {
            const flightsDiv = document.getElementById('flights');
            flightsDiv.innerHTML = `
                <div class="error-message">
                    <i class="error-icon">⚠️</i>
                    <p>${message}</p>
                </div>
            `;
            showLoading(false);
        }

        function clearFlightCards(){
            document.getElementById("flights").innerHTML = '';
        }

        function processFlightList(flights){
            showLoading(false);
            const listDiv = document.getElementById('flights');

            if (!flights || flights.length === 0) {
                listDiv.innerHTML = `
                    <div class="no-flights">
                        <i class="no-results-icon">✈️</i>
                        <h3>No flights found</h3>
                        <p>Try adjusting your search criteria or dates</p>
                    </div>
                `;
                return;
            }

            const flightsHeader = document.createElement('h2');
            flightsHeader.textContent = `Found ${flights.length} flight${flights.length === 1 ? '' : 's'}`;
            flightsHeader.className = 'flights-header';
            listDiv.appendChild(flightsHeader);

            flights.slice(0, Math.min(10, flights.length)).forEach((flight, index) => {
                listDiv.appendChild(buildFlightCard(flight, index));
            });
        }

        function buildFlightCard(flight, index) {
            const card = document.createElement("div");
            card.className = 'flight-card';

            // Format times and duration
            const departureTime = formatTime(flight.departureTime);
            const arrivalTime = formatTime(flight.arrivalTime);
            const duration = formatDuration(flight.duration);

            card.innerHTML = `
                <div class="flight-card-header">
                    <div class="route">
                        <span class="airport-code">${flight.originAirportCode}</span>
                        <span class="route-arrow">→</span>
                        <span class="airport-code">${flight.destinationAirportCode}</span>
                    </div>
                    <div class="price">${flight.totalPrice} ${flight.currency}</div>
                </div>

                <div class="flight-times">
                    <div class="time-group">
                        <span class="time">${departureTime}</span>
                        <span class="airport">${flight.originAirportCode}</span>
                    </div>
                    <div class="duration">
                        <span class="duration-text">${duration}</span>
                        <div class="duration-line"></div>
                    </div>
                    <div class="time-group">
                        <span class="time">${arrivalTime}</span>
                        <span class="airport">${flight.destinationAirportCode}</span>
                    </div>
                </div>

                <div class="flight-details">
                    <div class="detail-item">
                        <span class="detail-label">Duration:</span>
                        <span class="detail-value">${duration}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Stops:</span>
                        <span class="detail-value">${calculateStops(flight.segments)}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Travelers:</span>
                        <span class="detail-value">${flight.adults || 1} Adult${flight.adults !== 1 ? 's' : ''}</span>
                    </div>
                </div>

                <div class="flight-segments">
                    ${buildSegmentsHTML(flight.segments)}
                </div>

                <div class="flight-card-actions">
                    <button class="select-btn">Select Flight</button>
                </div>
            `;

            // Zaktualizuj przycisk select
            card.querySelector('.select-btn').addEventListener('click', () => {
                selectFlight(flight);
            });

            return card;
        }

        function calculateStops(segments) {
            if (!segments || segments.length <= 1) return 'Direct';
            return `${segments.length - 1} stop${segments.length - 1 > 1 ? 's' : ''}`;
        }

        function buildSegmentsHTML(segments) {
            if (!segments || segments.length === 0) return '';

            if (segments.length === 1) {
                const segment = segments[0];
                return `
                    <div class="single-segment">
                        <div class="segment-airline">
                            ${segment.carrierCode}${segment.flightNumber}
                        </div>
                        <div class="segment-route">
                            ${segment.originAirportCode} → ${segment.destinationAirportCode}
                        </div>
                    </div>
                `;
            }

            return `
                <div class="multi-segments">
                    <div class="segments-header">${segments.length} segments • ${calculateStops(segments)}</div>
                    ${segments.map((segment, idx) => `
                        <div class="segment ${idx < segments.length - 1 ? 'segment-with-connection' : ''}">
                            <div class="segment-info">
                                <span class="segment-airline">${segment.carrierCode}${segment.flightNumber}</span>
                                <span class="segment-route">${segment.originAirportCode} → ${segment.destinationAirportCode}</span>
                            </div>
                            <div class="segment-times">
                                <span>${formatTime(segment.departureTime)} - ${formatTime(segment.arrivalTime)}</span>
                                <span class="segment-duration">${formatDuration(segment.duration)}</span>
                            </div>
                        </div>
                    `).join('')}
                </div>
            `;
        }

        function formatTime(timeString) {
            if (!timeString) return '--:--';
            try {
                const date = new Date(timeString);
                return date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            } catch {
                return timeString;
            }
        }

        function formatDuration(duration) {
            if (!duration) return '';
            // Assuming duration is in format like "PT2H30M" or similar
            return duration.replace('PT', '').toLowerCase();
        }

                function selectFlight(flight) {
            if (confirm(`Add flight ${flight.originAirportCode} → ${flight.destinationAirportCode} to your trip?`)) {
                showLoading(true);

                // Przygotuj dane segmentów z pełnymi numerami lotów
                const segments = flight.segments?.map(segment => ({
                    originAirportCode: segment.originAirportCode,
                    destinationAirportCode: segment.destinationAirportCode,
                    departureTime: segment.departureTime,
                    arrivalTime: segment.arrivalTime,
                    duration: segment.duration,
                    carrierCode: segment.carrierCode,
                    flightNumber: segment.flightNumber
                })) || [];

                const flightData = {
                    originAirportCode: flight.originAirportCode,
                    destinationAirportCode: flight.destinationAirportCode,
                    departureTime: flight.departureTime,
                    arrivalTime: flight.arrivalTime,
                    duration: flight.duration,
                    totalPrice: flight.totalPrice,
                    currency: flight.currency,
                    carrierCode: flight.segments?.[0]?.carrierCode,
                    segments: segments
                };

                fetch(`/Trips/SaveFlightFromSearch?tripId=${@Model.TripId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify(flightData)
                })
                .then(response => response.json())
                .then(data => {
                    showLoading(false);
                    if (data.success) {
                        if (confirm(data.message + ' View saved flights?')) {
                            window.location.href = data.redirectUrl;
                        }
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    showLoading(false);
                    console.error('Error:', error);
                    alert('An error occurred while saving the flight.');
                });
            }
        }

        const inputFrom = document.getElementById("from");
        const resultsDivFrom = document.getElementById("autocompleteResultsFrom");
        const inputTo = document.getElementById("to");
        const resultsDivTo = document.getElementById("autocompleteResultsTo");

        addAutocompleteFunctionality(inputFrom, resultsDivFrom);
        addAutocompleteFunctionality(inputTo, resultsDivTo);
    </script>
}

