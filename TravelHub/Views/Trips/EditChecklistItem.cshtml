@using TravelHub.Web.ViewModels.Checklists;
@model EditChecklistItemViewModel

@{
    ViewData["Title"] = "Edit checklist item";
}

<h2>Edit checklist item</h2>

<form asp-action="EditChecklistItem" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="TripId" />
    <input type="hidden" asp-for="OldItem" />

    <div class="mb-3">
        <label asp-for="NewItem" class="form-label">Item title</label>
        <input asp-for="NewItem" class="form-control" />
        
    </div>

    @* Show validation summary *@
    <div asp-validation-summary="All" class="text-danger"></div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Checklist" asp-route-tripId="@Model.TripId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
