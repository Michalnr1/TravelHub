@using TravelHub.Web.ViewModels.Checklists;
@model ChecklistPageViewModel

@{
    var tripId = ViewBag.TripId;
}

<h3>Checklist</h3>

<table class="table">
    <thead>
        <tr>
            <th>Done</th>
            <th>Item</th>
            <th>Assigned</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var it in Model.Checklist.Items)
        {
            <tr>
                <td>
                    <input type="checkbox" disabled @(it.IsCompleted ? "checked" : "") />

                    <!-- Toggle form (POST) -->
                    <form method="post"
                          asp-controller="Trips"
                          asp-action="ToggleChecklistItem"
                          asp-route-tripId="@tripId"
                          asp-route-item="@it.Title"
                          style="display:inline;margin-left:0.5rem;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-link p-0 m-0">Mark</button>
                    </form>
                </td>

                <td>@it.Title</td>

                <td>
                    @if (it.AssignedParticipantId != null)
                    {
                        <span>@it.AssignedParticipantName</span>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>

                <td>
                    <!-- Assign form per-row (POST) -->
                    <form method="post"
                          asp-controller="Trips"
                          asp-action="AssignParticipant"
                          style="display:inline-block;margin-right:0.5rem;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="tripId" value="@Model.TripId" />
                        <input type="hidden" name="itemTitle" value="@it.Title" />

                        <select name="participantId" class="form-select d-inline-block" style="width:auto; display:inline-block;">
                            <option value="">(unassign)</option>
                            @foreach (var p in Model.Participants)
                            {
                                <option value="@p.Id" selected="@(string.Equals(it.AssignedParticipantId, p.Id, StringComparison.Ordinal) ? "selected" : null)">
                                    @p.DisplayName
                                </option>
                            }
                        </select>

                        <button type="submit" class="btn btn-sm btn-primary">Assign</button>
                    </form>

                    <!-- Edit link (GET) -->
                    <a asp-controller="Trips"
                       asp-action="EditChecklistItem"
                       asp-route-tripId="@tripId"
                       asp-route-item="@it.Title"
                       class="btn btn-sm btn-link">
                        Edit
                    </a>

                    <!-- Delete form (POST) -->
                    <form method="post"
                          asp-controller="Trips"
                          asp-action="DeleteChecklistItem"
                          asp-route-tripId="@tripId"
                          asp-route-item="@it.Title"
                          style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-link text-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Add new item form (separate, not nested inside table form) -->
<form id="addForm" method="post" asp-controller="Trips" asp-action="AddChecklistItem" asp-route-tripId="@tripId">
    @Html.AntiForgeryToken()
    <input type="text" name="item" id="newItem" />
    <button type="submit">Add</button>
</form>

<div class="mb-3">
    <!-- Back to Trip details -->
    <a asp-controller="Trips"
       asp-action="Details"
       asp-route-id="@tripId"
       class="btn btn-secondary">
        Back to Trip
    </a>
</div>


