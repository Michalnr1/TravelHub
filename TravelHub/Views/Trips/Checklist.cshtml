@using TravelHub.Web.ViewModels.Checklists;
@model ChecklistPageViewModel

<h3>Checklist</h3>

<form method="post" asp-action="AssignParticipant" asp-controller="Trip">
    @Html.AntiForgeryToken()
    <input type="hidden" name="tripId" value="@Model.TripId" />
    <table class="table">
        <thead>
            <tr>
                <th>Done</th>
                <th>Item</th>
                <th>Assigned</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var it in Model.Checklist.Items)
        {
            <tr>
                <td><input type="checkbox" disabled @(it.IsCompleted ? "checked" : "") /></td>
                <td>@it.Title</td>
                <td>
                    @if (it.AssignedParticipantId.HasValue)
                    {
                        <span>@it.AssignedParticipantName</span>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>
                <td>
                    <!-- Assign form: select participant and submit; each row has its own select + hidden itemTitle -->
                    <input type="hidden" name="itemTitle" value="@it.Title" />
                    <select name="participantId" class="form-select d-inline-block" style="width:auto;">
                        <option value="">(unassign)</option>
                        @foreach(var p in Model.Participants)
                        {
                                <option value="@p.Id" selected="@(it.AssignedParticipantId == p.Id ? "selected" : null)">
                                    @p.DisplayName
                                </option>
                        }
                    </select>
                    <button type="submit" class="btn btn-sm btn-primary">Assign</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</form>



