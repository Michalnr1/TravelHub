@model TravelHub.Web.ViewModels.Trips.AddDayViewModel

@{
    ViewData["Title"] = "Add Group";

    string formAction = "AddGroup";

    // Etykiety
    string headerText = "Group Details";
    string nameLabel = "Group Name (Required)";
}

<h1>@ViewData["Title"] to @Model.TripName</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@formAction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TripId" />
            <input type="hidden" asp-for="MinDate" />
            <input type="hidden" asp-for="MaxDate" />
            <input type="hidden" asp-for="IsGroup" />

            <h5>@headerText</h5>

            <div class="form-group mb-3" id="groupNameField">
                <label for="Name" class="control-label">@nameLabel</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type="date" class="form-control" min="@Model.MinDate.ToString("yyyy-MM-dd")" max="@Model.MaxDate.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create Group" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.TripId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}