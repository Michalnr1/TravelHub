@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const expenseItems = document.querySelectorAll('.expense-item');
            const noExpensesMessage = document.getElementById('noExpensesMessage');
            const filterButtons = document.querySelectorAll('.expense-filter');

            function filterExpenses(filterType) {
                let visibleCount = 0;

                expenseItems.forEach(item => {
                    const isVisible = filterType === 'all' || item.classList.contains(filterType);

                    if (isVisible) {
                        item.style.display = 'block';
                        visibleCount++;
                    } else {
                        item.style.display = 'none';
                    }
                });

                if (noExpensesMessage != null)
                {
                    // Show/hide no results message
                    if (visibleCount === 0 && filterType !== 'all') {
                        noExpensesMessage.style.display = 'block';
                    } else {
                        noExpensesMessage.style.display = 'none';
                    }
                }

                // Update active filter button
                filterButtons.forEach(btn => {
                    if (btn.getAttribute('data-filter') === filterType) {
                        btn.classList.add('active');
                    } else {
                        btn.classList.remove('active');
                    }
                });
            }

            // Add click events to filter buttons
            filterButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const filterType = this.getAttribute('data-filter');
                    filterExpenses(filterType);

                    // Update dropdown button text
                    const dropdownButton = document.getElementById('expenseFilterDropdown');
                    const filterText = this.textContent;
                    dropdownButton.innerHTML = `<i class="fas fa-filter"></i> ${filterText}`;
                });
            });

            // Initialize with all expenses shown
            filterExpenses('all');

            const countriesModal = document.getElementById('countriesModal');

            countriesModal.addEventListener('show.bs.modal', function() {
                loadCountries();
            });

            function loadCountries() {
                const loadingElement = document.getElementById('countriesLoading');
                const contentElement = document.getElementById('countriesContent');
                const countriesList = document.getElementById('countriesList');
                const noCountriesMessage = document.getElementById('noCountriesMessage');

                // Show loading, hide content
                loadingElement.style.display = 'block';
                contentElement.style.display = 'none';
                noCountriesMessage.style.display = 'none';
                countriesList.innerHTML = '';

                fetch(`@Url.Action("GetTripCountries", "Trips")/${@Model.Id}`)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(countries => {
                        // Hide loading
                        loadingElement.style.display = 'none';
                        contentElement.style.display = 'block';

                        if (countries && countries.length > 0) {
                            // Sort countries by name
                            countries.sort((a, b) => a.name.localeCompare(b.name));

                            // Populate countries list
                            countries.forEach(country => {
                                const countryElement = document.createElement('div');
                                countryElement.className = 'list-group-item d-flex justify-content-between align-items-center';
                                countryElement.innerHTML = `
                                    <div>
                                        <strong>${country.name}</strong>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">${country.spotsCount} spots</span>
                                `;
                                countriesList.appendChild(countryElement);
                            });
                        } else {
                            noCountriesMessage.style.display = 'block';
                        }
                    })
                    .catch(error => {
                        console.error('Error loading countries:', error);
                        loadingElement.style.display = 'none';
                        contentElement.style.display = 'block';
                        noCountriesMessage.innerHTML = '<p class="text-danger">Error loading countries. Please try again.</p>';
                        noCountriesMessage.style.display = 'block';
                    });
            }
        });
    </script>

