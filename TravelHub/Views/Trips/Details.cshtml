@model TravelHub.Web.ViewModels.Trips.TripDetailViewModel

@{
    ViewData["Title"] = "Trip Details";
}

<div class="row">
    <!-- Sidebar -->
    <div class="col-lg-2 col-md-4">
        @await Html.PartialAsync("_TripSidebar", Model, new ViewDataDictionary(ViewData))
    </div>

    <!-- Main Content -->
    <div class="col-lg-10 col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="trip-main-title">@Model.Name</h1>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <!-- Trip Overview -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-2">
                                <strong>Status:</strong> <span class="badge bg-info">@Model.Status</span>
                            </div>
                            <div class="col-md-2">
                                <strong>Dates:</strong> @Model.DateRange
                            </div>
                            <div class="col-md-2">
                                <strong>Duration:</strong> @Model.Duration days
                            </div>
                            <div class="col-md-3">
                                <strong>Actual Expenses:</strong> @Model.FormattedTotalExpenses
                            </div>
                            <div class="col-md-3">
                                @if (Model.EstimatedExpensesTotal > 0)
                                {
                                    <strong>Estimated Expenses:</strong>
                                    <span class="text-warning">@Model.FormattedEstimatedExpensesTotal</span>
                                }
                                else
                                {
                                    <strong>Estimated Expenses:</strong>
                                    <span class="text-muted">None</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-2 col-6">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-primary">@Model.Days.Count</h3>
                        <p class="mb-0">Days + Groups</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-6">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-success">@Model.ActivitiesCount</h3>
                        <p class="mb-0">Activities</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-6">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-warning">@Model.SpotsCount</h3>
                        <p class="mb-0">Spots</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-6">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-info">@Model.TransportsCount</h3>
                        <p class="mb-0">Transports</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-6">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-secondary">@Model.AccommodationsCount</h3>
                        <p class="mb-0">Accommodations</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-6">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="text-danger">@Model.ExpensesCount</h3>
                        <p class="mb-0">Expenses</p>
                        @if (Model.EstimatedExpensesCount > 0)
                        {
                            <small class="text-warning">(@Model.EstimatedExpensesCount estimated)</small>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Days and Groups -->
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center bg-light">
                        <h5 class="card-title mb-0">Days (@Model.NormalDaysCount)</h5>
                        <form asp-action="AddDay" asp-route-id="@Model.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-success">Add Day</button>
                            @Html.AntiForgeryToken()
                        </form>
                    </div>
                    <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                        @{
                            var normalDays = Model.Days.Where(d => !d.IsGroup).OrderBy(d => d.Number).ThenBy(d => d.Date).ToList();
                        }
                        @if (normalDays.Any())
                        {
                            <div class="list-group">
                                @foreach (var day in normalDays)
                                {
                                    <div class="list-group-item list-group-item-action">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="list-item-content">
                                                <h6 class="mb-1 text-primary text-wrap-full">@day.DisplayName</h6>
                                                <small class="text-muted">@day.Date.ToString("MMM dd, yyyy")</small>
                                                <br>
                                                <small>Activities: @day.ActivitiesCount</small>
                                            </div>
                                            <div class="btn-group" role="group">
                                                <a asp-controller="Days" asp-action="Details" asp-route-id="@day.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <form asp-controller="Days" asp-action="Delete" asp-route-id="@day.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this day?')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No standard days added to this trip yet.</p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center bg-light">
                        <h5 class="card-title mb-0">Groups (@Model.GroupsCount)</h5>
                        <a asp-action="AddGroup" asp-route-id="@Model.Id" class="btn btn-sm btn-success">Add Group</a>
                    </div>
                    <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                        @{
                            var groups = Model.Days.Where(d => d.IsGroup).OrderBy(d => d.Date).ThenBy(d => d.Name).ToList();
                        }
                        @if (groups.Any())
                        {
                            <div class="list-group">
                                @foreach (var group in groups)
                                {
                                    <div class="list-group-item list-group-item-action">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="list-item-content">
                                                <h6 class="mb-1 text-info text-wrap-full">@group.DisplayName</h6>
                                                <small class="text-muted">@group.Date.ToString("MMM dd, yyyy")</small>
                                                <br>
                                                <small>Activities: @group.ActivitiesCount</small>
                                            </div>
                                            <div class="btn-group" role="group">
                                                <a asp-controller="Days" asp-action="Details" asp-route-id="@group.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-controller="Days" asp-action="EditGroup" asp-route-id="@group.Id" class="btn btn-sm btn-outline-secondary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form asp-controller="Days" asp-action="Delete" asp-route-id="@group.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this group?')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No groups added to this trip yet.</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Content Tabs -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs" id="contentTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="activities-tab" data-bs-toggle="tab" data-bs-target="#activities" type="button" role="tab" aria-controls="activities" aria-selected="true">
                                    Activities & Spots (@(Model.ActivitiesCount + Model.SpotsCount))
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="accommodations-tab" data-bs-toggle="tab" data-bs-target="#accommodations" type="button" role="tab" aria-controls="accommodations" aria-selected="false">
                                    Accommodations (@Model.AccommodationsCount)
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="transports-tab" data-bs-toggle="tab" data-bs-target="#transports" type="button" role="tab" aria-controls="transports" aria-selected="false">
                                    Transports (@Model.TransportsCount)
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="expenses-tab" data-bs-toggle="tab" data-bs-target="#expenses" type="button" role="tab" aria-controls="expenses" aria-selected="false">
                                    Expenses (@Model.ExpensesCount)
                                </button>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content" id="contentTabsContent">
                            <!-- Activities & Spots Tab -->
                            <div class="tab-pane fade show active" id="activities" role="tabpanel" aria-labelledby="activities-tab">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h5>Activities (@Model.ActivitiesCount)</h5>
                                            <a asp-controller="Activities" asp-action="AddToTrip" asp-route-tripId="@Model.Id" class="btn btn-sm btn-success">Add Activity</a>
                                        </div>
                                        <div style="max-height: 400px; overflow-y: auto;">
                                            @if (Model.Activities.Any())
                                            {
                                                <div class="list-group">
                                                    @foreach (var activity in Model.Activities)
                                                    {
                                                        <div class="list-group-item">
                                                            <div class="d-flex justify-content-between align-items-start">
                                                                <div class="list-item-content">
                                                                    <h6 class="mb-1 text-wrap-full">@activity.Name</h6>
                                                                    @if (!string.IsNullOrEmpty(activity.Description))
                                                                    {
                                                                        <p class="mb-1 small-text-muted description-truncate" title="@activity.Description">@activity.Description</p>
                                                                    }
                                                                    <div class="small">
                                                                        <span class="badge bg-light text-dark">@activity.DurationString</span>
                                                                        @if (!string.IsNullOrEmpty(activity.CategoryName))
                                                                        {
                                                                            <span class="badge bg-secondary text-wrap">@activity.CategoryName</span>
                                                                        }
                                                                        @if (!string.IsNullOrEmpty(activity.DayName))
                                                                        {
                                                                            <span class="badge bg-info text-wrap">@activity.DayName</span>
                                                                        }
                                                                    </div>
                                                                </div>
                                                                <div class="btn-group ms-2 flex-shrink-0">
                                                                    <a asp-controller="Activities" asp-action="Details" asp-route-id="@activity.Id" class="btn btn-sm btn-outline-primary">
                                                                        <i class="fas fa-eye"></i>
                                                                    </a>
                                                                    <a asp-controller="Activities" asp-action="Edit" asp-route-id="@activity.Id" class="btn btn-sm btn-outline-secondary">
                                                                        <i class="fas fa-edit"></i>
                                                                    </a>
                                                                    <form asp-controller="Activities" asp-action="Delete" asp-route-id="@activity.Id" method="post" class="d-inline">
                                                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this activity?')">
                                                                            <i class="fas fa-trash"></i>
                                                                        </button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <p class="text-muted">No activities added to this trip yet.</p>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h5>Spots (@Model.SpotsCount)</h5>

                                            <div class="d-flex gap-2">
                                                <a asp-controller="Trips" asp-action="Recommendations" asp-route-id="@Model.Id"
                                                   class="btn btn-sm btn-success">Recommendations</a>

                                                <a asp-controller="Spots" asp-action="AddToTrip" asp-route-tripId="@Model.Id"
                                                   class="btn btn-sm btn-success">Add Spot</a>
                                            </div>
                                        </div>
                                        <div style="max-height: 400px; overflow-y: auto;">
                                            @if (Model.Spots.Any())
                                            {
                                                <div class="list-group">
                                                    @foreach (var spot in Model.Spots)
                                                    {
                                                        <div class="list-group-item">
                                                            <div class="d-flex justify-content-between align-items-start">
                                                                <div class="list-item-content">
                                                                    <h6 class="mb-1 text-wrap-full">@spot.Name</h6>
                                                                    @if (!string.IsNullOrEmpty(spot.Description))
                                                                    {
                                                                        <p class="mb-1 small-text-muted description-truncate" title="@spot.Description">@spot.Description</p>
                                                                    }
                                                                    <div class="small">
                                                                        <span class="badge bg-light text-dark">@spot.DurationString</span>
                                                                        @if (!string.IsNullOrEmpty(spot.CategoryName))
                                                                        {
                                                                            <span class="badge bg-secondary text-wrap">@spot.CategoryName</span>
                                                                        }
                                                                        <br>
                                                                        <small class="text-muted">
                                                                            📍 @spot.Latitude.ToString("F4"), @spot.Longitude.ToString("F4")
                                                                        </small>
                                                                    </div>
                                                                </div>
                                                                <div class="btn-group ms-2 flex-shrink-0">
                                                                    <a asp-controller="Spots" asp-action="Details" asp-route-id="@spot.Id" class="btn btn-sm btn-outline-primary">
                                                                        <i class="fas fa-eye"></i>
                                                                    </a>
                                                                    <a asp-controller="Spots" asp-action="Edit" asp-route-id="@spot.Id" class="btn btn-sm btn-outline-secondary">
                                                                        <i class="fas fa-edit"></i>
                                                                    </a>
                                                                    <form asp-controller="Spots" asp-action="Delete" asp-route-id="@spot.Id" method="post" class="d-inline">
                                                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this spot?')">
                                                                            <i class="fas fa-trash"></i>
                                                                        </button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <p class="text-muted">No spots added to this trip yet.</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Accommodations Tab -->
                            <div class="tab-pane fade" id="accommodations" role="tabpanel" aria-labelledby="accommodations-tab">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5>Accommodations (@Model.AccommodationsCount)</h5>
                                    <a asp-controller="Accommodations" asp-action="AddToTrip" asp-route-tripId="@Model.Id" class="btn btn-sm btn-success">Add Accommodation</a>
                                </div>
                                <div style="max-height: 400px; overflow-y: auto;">
                                    @if (Model.Accommodations.Any())
                                    {
                                        <div class="list-group">
                                            @foreach (var accommodation in Model.Accommodations.OrderBy(a => a.CheckIn))
                                            {
                                                <div class="list-group-item">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div class="list-item-content">
                                                            <h6 class="mb-1 text-wrap-full">@accommodation.Name</h6>
                                                            @if (!string.IsNullOrEmpty(accommodation.Description))
                                                            {
                                                                <p class="mb-1 small-text-muted description-truncate" title="@accommodation.Description">@accommodation.Description</p>
                                                            }
                                                            <div class="small">
                                                                <span class="badge bg-light text-dark">@accommodation.DurationString</span>
                                                                @if (!string.IsNullOrEmpty(accommodation.CategoryName))
                                                                {
                                                                    <span class="badge bg-secondary text-wrap">@accommodation.CategoryName</span>
                                                                }
                                                                @if (!string.IsNullOrEmpty(accommodation.DayName))
                                                                {
                                                                    <span class="badge bg-info text-wrap">@accommodation.DayName</span>
                                                                }
                                                                <br>
                                                                <small class="text-muted">
                                                                    🏨 @accommodation.CheckIn.ToString("MMM dd") - @accommodation.CheckOut.ToString("MMM dd")
                                                                </small>
                                                            </div>
                                                        </div>
                                                        <div class="btn-group ms-2 flex-shrink-0">
                                                            <a asp-controller="Accommodations" asp-action="Details" asp-route-id="@accommodation.Id" asp-route-returnUrl="@Context.Request.Path" class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                            <a asp-controller="Accommodations" asp-action="Edit" asp-route-id="@accommodation.Id" asp-route-returnUrl="@Context.Request.Path" class="btn btn-sm btn-outline-secondary">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <form asp-controller="Accommodations" asp-action="Delete" asp-route-id="@accommodation.Id" asp-route-returnUrl="@Context.Request.Path" method="post" class="d-inline">
                                                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this accommodation?')">
                                                                    <i class="fas fa-trash"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted">No accommodations added to this trip yet.</p>
                                    }
                                </div>
                            </div>

                            <!-- Transports Tab -->
                            <div class="tab-pane fade" id="transports" role="tabpanel" aria-labelledby="transports-tab">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5>Transports (@Model.TransportsCount)</h5>
                                    <a asp-controller="Transports" asp-action="AddToTrip" asp-route-tripId="@Model.Id" class="btn btn-sm btn-success">Add Transport</a>
                                </div>
                                <div style="max-height: 400px; overflow-y: auto;">
                                    @if (Model.Transports.Any())
                                    {
                                        <div class="list-group">
                                            @foreach (var transport in Model.Transports)
                                            {
                                                <div class="list-group-item">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div class="list-item-content">
                                                            <h6 class="mb-1 text-wrap-full">@transport.Name</h6>
                                                            <div class="small">
                                                                <span class="badge bg-light text-dark">@transport.DurationString</span>
                                                                <span class="badge bg-secondary text-wrap">@transport.Type</span>
                                                            </div>
                                                            <div class="small text-muted">
                                                                <div class="text-wrap-full">From: @transport.FromSpotName</div>
                                                                <div class="text-wrap-full">To: @transport.ToSpotName</div>
                                                            </div>
                                                        </div>
                                                        <div class="btn-group ms-2 flex-shrink-0">
                                                            <a asp-controller="Transports" asp-action="Details" asp-route-id="@transport.Id" class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                            <a asp-controller="Transports" asp-action="Edit" asp-route-id="@transport.Id" class="btn btn-sm btn-outline-secondary">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <form asp-controller="Transports" asp-action="Delete" asp-route-id="@transport.Id" method="post" class="d-inline">
                                                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this transport?')">
                                                                    <i class="fas fa-trash"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted">No transports added to this trip yet.</p>
                                    }
                                </div>
                            </div>

                            <!-- Expenses Tab -->
                            <div class="tab-pane fade" id="expenses" role="tabpanel" aria-labelledby="expenses-tab">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5>
                                        Expenses (@Model.ExpensesCount)
                                        @if (Model.EstimatedExpensesCount > 0)
                                        {
                                            <span class="badge bg-warning text-dark">@Model.EstimatedExpensesCount estimated</span>
                                        }
                                    </h5>
                                    <div class="btn-group">
                                        <div class="dropdown me-2">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="expenseFilterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="fas fa-filter"></i> Filter
                                            </button>
                                            <ul class="dropdown-menu" aria-labelledby="expenseFilterDropdown">
                                                <li><a class="dropdown-item expense-filter" href="#" data-filter="all">All Expenses</a></li>
                                                <li><a class="dropdown-item expense-filter" href="#" data-filter="actual">Actual Expenses</a></li>
                                                <li><a class="dropdown-item expense-filter" href="#" data-filter="estimated">Estimated Expenses</a></li>
                                                <li><a class="dropdown-item expense-filter" href="#" data-filter="transfers">Transfers</a></li>
                                            </ul>
                                        </div>
                                        <a asp-controller="Expenses" asp-action="AddToTrip" asp-route-tripId="@Model.Id" class="btn btn-sm btn-success rounded">Add Expense</a>
                                        <a asp-controller="Expenses" asp-action="AddTransferToTrip" asp-route-tripId="@Model.Id" class="btn btn-sm btn-info rounded">Add Transfer</a>
                                    </div>
                                </div>

                                <!-- Sticky Summary Stats - POZA kontenerem z overflow -->
                                <div class="sticky-summary-container">
                                    <div class="row mb-3 sticky-summary">
                                        <div class="col-md-6">
                                            <div class="card bg-light">
                                                <div class="card-body py-2">
                                                    <small class="text-muted">Actual Total:</small>
                                                    <div class="fw-bold text-success">@Model.FormattedTotalExpenses</div>
                                                </div>
                                            </div>
                                        </div>
                                        @if (Model.EstimatedExpensesTotal > 0)
                                        {
                                            <div class="col-md-6">
                                                <div class="card bg-warning bg-opacity-10">
                                                    <div class="card-body py-2">
                                                        <small class="text-muted">Estimated Total:</small>
                                                        <div class="fw-bold text-warning">@Model.FormattedEstimatedExpensesTotal</div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <!-- Kontener z przewijaniem - BEZ summary wewnątrz -->
                                <div class="expenses-scroll-container" style="max-height: 400px; overflow-y: auto;">
                                    @if (Model.Expenses.Any())
                                    {
                                        <!-- Expenses List -->
                                        <div class="list-group" id="expensesList">
                                            @foreach (var expense in Model.Expenses)
                                            {
                                                <div class="list-group-item expense-item @(expense.IsEstimated ? "estimated" : string.IsNullOrEmpty(expense.TransferredToName) ? "actual" : "transfer")"
                                                     data-expense-type="@(expense.IsEstimated ? "estimated" : string.IsNullOrEmpty(expense.TransferredToName) ? "actual" : "transfer")">
                                                    <div class="d-flex justify-content-between align-items-start">
