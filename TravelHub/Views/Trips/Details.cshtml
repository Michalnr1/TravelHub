                                                                @if (expense.IsEstimated)
                                                                {
                                                                    <span class="badge bg-warning text-dark">
                                                                        <i class="fas fa-clock"></i> Estimated
                                                                        @if (expense.Multiplier > 1)
                                                                        {
                                                                            <span class="ms-1">×@expense.Multiplier</span>
                                                                        }
                                                                    </span>
                                                                }
                                                                else if (!string.IsNullOrEmpty(expense.TransferredToName))
                                                                {
                                                                    <span class="badge bg-info">
                                                                        <i class="fas fa-exchange-alt"></i> Transfer
