                                                            <a asp-controller="Expenses" asp-action="Details" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-primary rounded" title="View Details">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                            <a asp-controller="Expenses" asp-action="Edit" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-secondary rounded" title="Edit">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
