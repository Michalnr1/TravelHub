@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const expenseItems = document.querySelectorAll('.expense-item');
            const noExpensesMessage = document.getElementById('noExpensesMessage');
            const filterButtons = document.querySelectorAll('.expense-filter');

            function filterExpenses(filterType) {
                let visibleCount = 0;

                expenseItems.forEach(item => {
                    const isVisible = filterType === 'all' || item.classList.contains(filterType);

                    if (isVisible) {
                        item.style.display = 'block';
                        visibleCount++;
                    } else {
                        item.style.display = 'none';
                    }
                });

                if (noExpensesMessage != null)
                {
                    // Show/hide no results message
                    if (visibleCount === 0 && filterType !== 'all') {
                        noExpensesMessage.style.display = 'block';
                    } else {
                        noExpensesMessage.style.display = 'none';
                    }
                }

                // Update active filter button
                filterButtons.forEach(btn => {
                    if (btn.getAttribute('data-filter') === filterType) {
                        btn.classList.add('active');
                    } else {
                        btn.classList.remove('active');
                    }
                });
            }

            // Add click events to filter buttons
            filterButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const filterType = this.getAttribute('data-filter');
                    filterExpenses(filterType);

                    // Update dropdown button text
                    const dropdownButton = document.getElementById('expenseFilterDropdown');
                    const filterText = this.textContent;
                    dropdownButton.innerHTML = `<i class="fas fa-filter"></i> ${filterText}`;
                });
            });

            // Initialize with all expenses shown
            filterExpenses('all');

            const countriesModal = document.getElementById('countriesModal');

            countriesModal.addEventListener('show.bs.modal', function() {
                loadCountries();
            });

            function loadCountries() {
                const loadingElement = document.getElementById('countriesLoading');
                const contentElement = document.getElementById('countriesContent');
                const countriesList = document.getElementById('countriesList');
                const noCountriesMessage = document.getElementById('noCountriesMessage');

                // Show loading, hide content
                loadingElement.style.display = 'block';
                contentElement.style.display = 'none';
                noCountriesMessage.style.display = 'none';
                countriesList.innerHTML = '';

                fetch(`@Url.Action("GetTripCountries", "Trips")/${@Model.Id}`)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(countries => {
                        // Hide loading
                        loadingElement.style.display = 'none';
                        contentElement.style.display = 'block';

                        if (countries && countries.length > 0) {
                            // Sort countries by name
                            countries.sort((a, b) => a.name.localeCompare(b.name));

                            // Populate countries list
                            countries.forEach(country => {
                                const countryElement = document.createElement('div');
                                countryElement.className = 'list-group-item d-flex justify-content-between align-items-center';
                                countryElement.innerHTML = `
                                    <div>
                                        <strong class="text-wrap-full">${country.name}</strong>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">${country.spotsCount} spots</span>
                                `;
                                countriesList.appendChild(countryElement);
                            });
                        } else {
                            noCountriesMessage.style.display = 'block';
                        }
                    })
                    .catch(error => {
                        console.error('Error loading countries:', error);
                        loadingElement.style.display = 'none';
                        contentElement.style.display = 'block';
                        noCountriesMessage.innerHTML = '<p class="text-danger">Error loading countries. Please try again.</p>';
                        noCountriesMessage.style.display = 'block';
                    });
            }

            const participantsModal = document.getElementById('participantsModal');

            participantsModal.addEventListener('show.bs.modal', function() {
                loadParticipants();
            });

            function loadParticipants() {
                const loadingElement = document.getElementById('participantsLoading');
                const contentElement = document.getElementById('participantsContent');
                const noParticipantsMessage = document.getElementById('noParticipantsMessage');

                // Pokaż loading, ukryj resztę
                loadingElement.style.display = 'block';
                contentElement.style.display = 'none';
                noParticipantsMessage.style.display = 'none';

                // Wyczysc listy
                ['allParticipantsList', 'ownerList', 'acceptedList', 'pendingList', 'declinedList']
                    .forEach(id => {
                        document.getElementById(id).innerHTML = '';
                    });

                // Resetuj liczniki
                ['allCount', 'ownerCount', 'acceptedCount', 'pendingCount', 'declinedCount', 'participantsCountBadge']
                    .forEach(id => {
                        const element = document.getElementById(id);
                        if (element) element.textContent = '0';
                    });

                fetch(`@Url.Action("GetTripParticipants", "Trips")/${@Model.Id}`)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(participants => {
                        // Ukryj loading
                        loadingElement.style.display = 'none';

                        if (participants && participants.length > 0) {
                            contentElement.style.display = 'block';
                            populateParticipants(participants);
                        } else {
                            noParticipantsMessage.style.display = 'block';
                        }
                    })
                    .catch(error => {
                        console.error('Error loading participants:', error);
                        loadingElement.style.display = 'none';
                        noParticipantsMessage.innerHTML = '<p class="text-danger">Error loading participants. Please try again.</p>';
                        noParticipantsMessage.style.display = 'block';
                    });
            }

            function populateParticipants(participants) {
                const counters = {
                    all: participants.length,
                    owner: 0,
                    accepted: 0,
                    pending: 0,
                    declined: 0
                };

                // Sortuj uczestników: właściciel pierwszy, potem status, potem nazwisko
                participants.sort((a, b) => {
                    // Właściciel na górze
                    if (a.isOwner && !b.isOwner) return -1;
                    if (!a.isOwner && b.isOwner) return 1;

                    // Status: Accepted > Pending > Declined
                    const statusOrder = { 'Owner': 0, 'Accepted': 1, 'Pending': 2, 'Declined': 3 };
                    if (statusOrder[a.status] !== statusOrder[b.status]) {
                        return statusOrder[a.status] - statusOrder[b.status];
                    }

                    // Alfabetycznie po nazwisku
                    return a.lastName.localeCompare(b.lastName);
                });

                // Wypełnij listy
                participants.forEach(participant => {
                    const participantElement = createParticipantElement(participant);

                    // Dodaj do ogólnej listy
                    document.getElementById('allParticipantsList').appendChild(participantElement.cloneNode(true));

                    // Dodaj do odpowiedniej kategorii
                    if (participant.isOwner) {
                        counters.owner++;
                        document.getElementById('ownerList').appendChild(createParticipantElement(participant));
                    }

                    if (participant.status === 'Accepted') {
                        counters.accepted++;
                        document.getElementById('acceptedList').appendChild(createParticipantElement(participant));
                    } else if (participant.status === 'Pending') {
                        counters.pending++;
                        document.getElementById('pendingList').appendChild(createParticipantElement(participant));
                    } else if (participant.status === 'Declined') {
                        counters.declined++;
                        document.getElementById('declinedList').appendChild(createParticipantElement(participant));
                    }
                });

                // Zaktualizuj liczniki
                document.getElementById('allCount').textContent = counters.all;
                document.getElementById('ownerCount').textContent = counters.owner;
                document.getElementById('acceptedCount').textContent = counters.accepted;
                document.getElementById('pendingCount').textContent = counters.pending;
                document.getElementById('declinedCount').textContent = counters.declined;
                document.getElementById('participantsCountBadge').textContent = counters.all;
            }

            function createParticipantElement(participant) {
                const div = document.createElement('div');
                div.className = 'list-group-item d-flex justify-content-between align-items-start';

                // Ikona statusu
                let statusIcon = '';
                let statusClass = '';

                if (participant.isOwner) {
                    statusIcon = '<i class="fas fa-crown text-warning"></i>';
                    statusClass = 'badge bg-warning text-dark';
                } else if (participant.status === 'Accepted') {
                    statusIcon = '<i class="fas fa-check-circle text-success"></i>';
                    statusClass = 'badge bg-success';
                } else if (participant.status === 'Pending') {
                    statusIcon = '<i class="fas fa-clock text-warning"></i>';
                    statusClass = 'badge bg-warning';
                } else if (participant.status === 'Declined') {
                    statusIcon = '<i class="fas fa-times-circle text-danger"></i>';
                    statusClass = 'badge bg-danger';
                }

                div.innerHTML = `
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <div class="avatar-placeholder bg-primary rounded-circle d-flex align-items-center justify-content-center"
                                 style="width: 40px; height: 40px;">
                                <span class="text-white fw-bold">${getInitials(participant.firstName, participant.lastName)}</span>
                            </div>
                        </div>
                        <div class="list-item-content">
                            <div class="fw-bold text-wrap-full">
                                ${participant.firstName} ${participant.lastName}
                                ${participant.isOwner ? '<span class="badge bg-warning text-dark ms-2">Owner</span>' : ''}
                            </div>
                            <div class="small text-muted text-wrap-full">${participant.email}</div>
                            <div class="mt-1">
                                <span class="${statusClass}">
                                    ${participant.isOwner ? 'Owner' : participant.status}
                                </span>
                                ${!participant.isOwner ?
                                    `<small class="text-muted ms-2">Joined: ${formatDate(participant.joinedAt)}</small>` : ''}
                            </div>
                        </div>
                    </div>
                `;

                return div;
            }

            function getInitials(firstName, lastName) {
                return (firstName.charAt(0) + lastName.charAt(0)).toUpperCase();
            }

            function formatDate(dateString) {
                if (!dateString) return 'N/A';
                const date = new Date(dateString);
                return date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                });
            }
        });
    </script>

