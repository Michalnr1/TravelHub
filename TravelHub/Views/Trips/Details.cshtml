@model TravelHub.Web.ViewModels.Trips.TripDetailViewModel

@{
    ViewData["Title"] = "Trip Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Model.Name</h1>
    <div>
        <a asp-controller="Accommodations" asp-action="AddToTrip" asp-route-tripId="@Model.Id" class="btn btn-success">Add Accommodation</a>
        <a asp-controller="Expenses" asp-action="AddToTrip" asp-route-tripId="@Model.Id" class="btn btn-success">Add Expense</a>
        <a asp-controller="Activities" asp-action="AddToTrip" asp-route-tripId="@Model.Id" class="btn btn-success">Add Activity</a>
        <a asp-controller="Spots" asp-action="AddToTrip" asp-route-tripId="@Model.Id" class="btn btn-success">Add Spot</a>
        <a asp-controller="Transports" asp-action="AddToTrip" asp-route-tripId="@Model.Id" class="btn btn-success">Add Transport</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit Trip</a>
        <a asp-action="MyTrips" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<!-- Trip Overview -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <strong>Status:</strong> <span class="badge bg-info">@Model.Status</span>
                    </div>
                    <div class="col-md-3">
                        <strong>Dates:</strong> @Model.DateRange
                    </div>
                    <div class="col-md-3">
                        <strong>Duration:</strong> @Model.Duration days
                    </div>
                    <div class="col-md-3">
                        <strong>Total Expenses:</strong> @Model.TotalExpenses.ToString("C")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-2 col-6">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-primary">@Model.Days.Count</h3>
                <p class="mb-0">Days</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-success">@Model.ActivitiesCount</h3>
                <p class="mb-0">Activities</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-warning">@Model.SpotsCount</h3>
                <p class="mb-0">Spots</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-info">@Model.TransportsCount</h3>
                <p class="mb-0">Transports</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-secondary">@Model.AccommodationsCount</h3>
                <p class="mb-0">Accommodations</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-6">
        <div class="card text-center">
            <div class="card-body">
                <h3 class="text-danger">@Model.ExpensesCount</h3>
                <p class="mb-0">Expenses</p>
            </div>
        </div>
    </div>
</div>

<!-- Days and Groups -->
<div class="row mt-4">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center bg-light">
                <h5 class="card-title mb-0">Days (@Model.NormalDaysCount)</h5>
            </div>
            <div class="card-body">
                @{
                    var normalDays = Model.Days.Where(d => !d.IsGroup).OrderBy(d => d.Number).ThenBy(d => d.Date).ToList();
                }
                @if (normalDays.Any())
                {
                    <div class="list-group">
                        @foreach (var day in normalDays)
                        {
                            <div class="list-group-item list-group-item-action">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1 text-primary">@day.DisplayName</h6>
                                        <small class="text-muted">@day.Date.ToString("MMM dd, yyyy")</small>
                                        <br>
                                        <small>Activities: @day.ActivitiesCount</small>
                                    </div>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Days" asp-action="Details" asp-route-id="@day.Id" class="btn btn-sm btn-outline-primary">View</a>
                                        <a asp-controller="Activities" asp-action="Create" asp-route-tripId="@Model.Id" asp-route-dayId="@day.Id" class="btn btn-sm btn-outline-success">Add Activity</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No standard days added to this trip yet.</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center bg-light">
                <h5 class="card-title mb-0">Groups (@Model.GroupsCount)</h5>
            </div>
            <div class="card-body">
                @{
                    var groups = Model.Days.Where(d => d.IsGroup).OrderBy(d => d.Date).ThenBy(d => d.Name).ToList();
                }
                @if (groups.Any())
                {
                    <div class="list-group">
                        @foreach (var group in groups)
                        {
                            <div class="list-group-item list-group-item-action">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1 text-info">@group.DisplayName</h6>
                                        <small class="text-muted">@group.Date.ToString("MMM dd, yyyy")</small>
                                        <br>
                                        <small>Activities: @group.ActivitiesCount</small>
                                    </div>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Days" asp-action="Details" asp-route-id="@group.Id" class="btn btn-sm btn-outline-primary">View</a>
                                        <a asp-controller="Activities" asp-action="Create" asp-route-tripId="@Model.Id" asp-route-dayId="@group.Id" class="btn btn-sm btn-outline-success">Add Activity</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No groups added to this trip yet.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Content Sections -->
<div class="row">
    <!-- Accommodations -->
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Accommodations</h5>
                <span class="badge bg-primary">@Model.AccommodationsCount</span>
            </div>
            <div class="card-body">
                @if (Model.Accommodations.Any())
                {
                    <div class="list-group">
                        @foreach (var accommodation in Model.Accommodations.OrderBy(a => a.CheckIn))
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@accommodation.Name</h6>
                                        <p class="mb-1 small text-muted">@accommodation.Description</p>
                                        <div class="small">
                                            <span class="badge bg-light text-dark">@accommodation.DurationString</span>
                                            <span class="badge bg-warning">$@accommodation.Cost</span>
                                            @if (!string.IsNullOrEmpty(accommodation.CategoryName))
                                            {
                                                <span class="badge bg-secondary">@accommodation.CategoryName</span>
                                            }
                                            @if (!string.IsNullOrEmpty(accommodation.DayName))
                                            {
                                                <span class="badge bg-info">@accommodation.DayName</span>
                                            }
                                            <br>
                                            <small class="text-muted">
                                                🏨 @accommodation.CheckIn.ToString("MMM dd") - @accommodation.CheckOut.ToString("MMM dd")
                                            </small>
                                        </div>
                                    </div>
                                    <div class="btn-group ms-2 flex-shrink-0">
                                        <a asp-controller="Accommodations" asp-action="Details" asp-route-id="@accommodation.Id" class="btn btn-sm btn-outline-primary">View</a>
                                        <a asp-controller="Accommodations" asp-action="Edit" asp-route-id="@accommodation.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <form asp-controller="Accommodations" asp-action="Delete" asp-route-id="@accommodation.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this accommodation?')">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No accommodations added to this trip yet.</p>
                    <a asp-controller="Accommodations" asp-action="AddToTrip" asp-route-tripId="@Model.Id" class="btn btn-sm btn-success">Add Accommodation</a>
                }
            </div>
        </div>
    </div>

    <!-- Expenses -->
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Expenses</h5>
                <span class="badge bg-primary">@Model.ExpensesCount</span>
            </div>
            <div class="card-body">
                @if (Model.Expenses.Any())
                {
                    <div class="list-group">
                        @foreach (var expense in Model.Expenses)
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@expense.Name</h6>
                                        <div class="small">
                                            <span class="badge bg-success">@expense.Value @expense.CurrencyName</span>
                                            <span class="badge bg-secondary">@expense.CategoryName</span>
                                            <span class="badge bg-info">Paid by: @expense.PaidByName</span>
                                        </div>
                                    </div>
                                    <div class="btn-group ms-2 flex-shrink-0">
                                        <a asp-controller="Expenses" asp-action="Details" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-primary">View</a>
                                        <a asp-controller="Expenses" asp-action="Edit" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <form asp-controller="Expenses" asp-action="Delete" asp-route-id="@expense.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this expense?')">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="mt-3 p-2 bg-light rounded">
                        <strong>Total Expenses: @Model.TotalExpenses.ToString("C")</strong>
                    </div>
                }
                else
                {
                    <p class="text-muted">No expenses added to this trip yet.</p>
                    <a asp-controller="Expenses" asp-action="AddToTrip" asp-route-tripId="@Model.Id" class="btn btn-sm btn-success">Add Expense</a>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Activities -->
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Activities</h5>
                <span class="badge bg-primary">@Model.ActivitiesCount</span>
            </div>
            <div class="card-body">
                @if (Model.Activities.Any())
                {
                    <div class="list-group">
                        @foreach (var activity in Model.Activities.OrderBy(a => a.Order))
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@activity.Name</h6>
                                        <p class="mb-1 small text-muted">@activity.Description</p>
                                        <div class="small">
                                            <span class="badge bg-light text-dark">@activity.DurationString</span>
                                            @if (!string.IsNullOrEmpty(activity.CategoryName))
                                            {
                                                <span class="badge bg-secondary">@activity.CategoryName</span>
                                            }
                                            @if (!string.IsNullOrEmpty(activity.DayName))
                                            {
                                                <span class="badge bg-info">@activity.DayName</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="btn-group ms-2 flex-shrink-0">
                                        <a asp-controller="Activities" asp-action="Details" asp-route-id="@activity.Id" class="btn btn-sm btn-outline-primary">View</a>
                                        <a asp-controller="Activities" asp-action="Edit" asp-route-id="@activity.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <form asp-controller="Activities" asp-action="Delete" asp-route-id="@activity.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this activity?')">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No activities added to this trip yet.</p>
                    <a asp-controller="Activities" asp-action="AddToTrip" asp-route-tripId="@Model.Id" class="btn btn-sm btn-success">Add Activity</a>
                }
            </div>
        </div>
    </div>

    <!-- Spots -->
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Spots</h5>
                <span class="badge bg-primary">@Model.SpotsCount</span>
            </div>
            <div class="card-body">
                @if (Model.Spots.Any())
                {
                    <div class="list-group">
                        @foreach (var spot in Model.Spots.OrderBy(s => s.Order))
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@spot.Name</h6>
                                        <p class="mb-1 small text-muted">@spot.Description</p>
                                        <div class="small">
                                            <span class="badge bg-light text-dark">@spot.DurationString</span>
                                            <span class="badge bg-warning">$@spot.Cost</span>
                                            @if (!string.IsNullOrEmpty(spot.CategoryName))
                                            {
                                                <span class="badge bg-secondary">@spot.CategoryName</span>
                                            }
                                            <br>
                                            <small class="text-muted">
                                                📍 @spot.Latitude.ToString("F4"), @spot.Longitude.ToString("F4")
                                            </small>
                                        </div>
                                    </div>
                                    <div class="btn-group ms-2 flex-shrink-0">
                                        <a asp-controller="Spots" asp-action="Details" asp-route-id="@spot.Id" class="btn btn-sm btn-outline-primary">View</a>
                                        <a asp-controller="Spots" asp-action="Edit" asp-route-id="@spot.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <form asp-controller="Spots" asp-action="Delete" asp-route-id="@spot.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this spot?')">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No spots added to this trip yet.</p>
                    <a asp-controller="Spots" asp-action="AddToTrip" asp-route-tripId="@Model.Id" class="btn btn-sm btn-success">Add Spot</a>
                }
            </div>
        </div>
    </div>

    <!-- Transports -->
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Transports</h5>
                <span class="badge bg-primary">@Model.TransportsCount</span>
            </div>
            <div class="card-body">
                @if (Model.Transports.Any())
                {
                    <div class="list-group">
                        @foreach (var transport in Model.Transports)
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@transport.Name</h6>
                                        <div class="small">
                                            <span class="badge bg-light text-dark">@transport.Duration.ToString("F1")h</span>
                                            <span class="badge bg-secondary">@transport.Type</span>
                                        </div>
                                        <div class="small text-muted">
                                            <div>From: @transport.FromSpotName</div>
                                            <div>To: @transport.ToSpotName</div>
                                        </div>
                                    </div>
                                    <div class="btn-group ms-2 flex-shrink-0">
                                        <a asp-controller="Transports" asp-action="Details" asp-route-id="@transport.Id" class="btn btn-sm btn-outline-primary">View</a>
                                        <a asp-controller="Transports" asp-action="Edit" asp-route-id="@transport.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <form asp-controller="Transports" asp-action="Delete" asp-route-id="@transport.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this transport?')">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No transports added to this trip yet.</p>
                    <a asp-controller="Transports" asp-action="AddToTrip" asp-route-tripId="@Model.Id" class="btn btn-sm btn-success">Add Transport</a>
                }
            </div>
        </div>
    </div>
</div>