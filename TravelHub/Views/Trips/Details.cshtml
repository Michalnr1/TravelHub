                                                                }
                                                            </div>
                                                        </div>
                                                        <div class="btn-group ms-2 flex-shrink-0">
                                                            <a asp-controller="Expenses" asp-action="Details" asp-route-id="@expense.Id" class="btn btn-sm btn-outline-primary rounded" title="View Details">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                            <a asp-controller="Expenses" asp-action="Edit" asp-route-id="@expense.Id" asp-route-returnUrl="@Context.Request.Path" class="btn btn-sm btn-outline-secondary rounded" title="Edit">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <form asp-controller="Expenses" asp-action="Delete" asp-route-id="@expense.Id" asp-route-returnUrl="@Context.Request.Path" method="post" class="d-inline">
                                                                <button type="submit" class="btn btn-sm btn-outline-danger rounded" onclick="return confirm('Are you sure you want to delete this expense?')" title="Delete">
                                                                    <i class="fas fa-trash"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>

                                        <!-- No Results Message (hidden by default) -->
                                        <div id="noExpensesMessage" class="alert alert-info mt-3" style="display: none;">
                                            <i class="fas fa-info-circle"></i> No expenses match the selected filter.
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center py-4">
                                            <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
                                            <p class="text-muted">No expenses added to this trip yet.</p>
                                            <div class="btn-group">
                                                <a asp-controller="Expenses" asp-action="AddToTrip" asp-route-tripId="@Model.Id" class="btn btn-success">
                                                    <i class="fas fa-plus"></i> Add Expense
