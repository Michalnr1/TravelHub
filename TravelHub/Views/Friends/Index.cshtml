@model IReadOnlyList<TravelHub.Domain.Entities.Person>
@{
    ViewData["Title"] = "My Friends";
    var friendsCount = ViewBag.FriendsCount as int? ?? Model.Count;
    var pendingCount = ViewBag.PendingRequestsCount as int? ?? 0;
}

<div class="container">
    <h2>My Friends (@friendsCount)</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="mb-3">
        <a href="@Url.Action("AddFriend")" class="btn btn-primary">Add Friend</a>
        <a href="@Url.Action("Pending")" class="btn btn-outline-secondary position-relative">
            Pending Requests
            @if (pendingCount > 0)
            {
                <span class="badge rounded-pill bg-danger position-absolute translate-middle" style="right: -1.4rem;">
                    @pendingCount
                    <span class="visually-hidden">pending requests</span>
                </span>
            }
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var friend in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@friend.FirstName @friend.LastName</h5>
                            <p class="card-text">
                                <strong>Username:</strong> @friend.UserName<br />
                                <strong>Nationality:</strong> @friend.Nationality<br />
                                <strong>Email:</strong> @friend.Email
                            </p>
                            <form asp-action="RemoveFriend" method="post" asp-route-friendId="@friend.Id" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to remove this friend?')">Remove Friend</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p>You don't have any friends yet. <a href="@Url.Action("AddFriend")">Add some friends</a> to get started!</p>
        </div>
    }
</div>