@model IEnumerable<TravelHub.Web.ViewModels.Transports.TransportViewModel>

@{
    ViewData["Title"] = "Transports";
}

<h1>Transports</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Transport</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Type)</th>
            <th>@Html.DisplayNameFor(model => model.Duration)</th>
            <th>Trip</th>
            <th>From Spot</th>
            <th>To Spot</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>
                    <span class="badge badge-info">@Html.DisplayFor(modelItem => item.Type)</span>
                </td>
                <td>@Html.DisplayFor(modelItem => item.DurationString)</td>
                <td>@Html.DisplayFor(modelItem => item.TripName)</td>
                <td>@Html.DisplayFor(modelItem => item.FromSpotName)</td>
                <td>@Html.DisplayFor(modelItem => item.ToSpotName)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>