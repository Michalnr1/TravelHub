@model TravelHub.Web.ViewModels.Transports.TransportDetailsViewModel

@{
    ViewData["Title"] = "Transport Details";

    // Sprawdzamy czy to publiczny podgląd
    var isPublicView = Context.Request.Query["source"] == "public";
    var returnUrl = ViewData["ReturnUrl"];
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Model.Name</h1>
    <div>
        @if (!isPublicView)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)" class="btn btn-warning">Edit</a>
        }
        <a href="@returnUrl" class="btn btn-outline-secondary">Back to Trip</a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-bus text-primary"></i> Transport Information
                </h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Type)</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-primary">
                            <i class="fas fa-bus"></i> @Html.DisplayFor(model => model.Type)
                        </span>
                    </dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Duration)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Duration) hours</dd>

                    <dt class="col-sm-3">Trip</dt>
                    <dd class="col-sm-9">
                        <a href="@returnUrl" class="text-decoration-none">
                            @Html.DisplayFor(model => model.TripName)
                        </a>
                    </dd>
                </dl>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card border-success">
                    <div class="card-header bg-success bg-opacity-10">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-flag text-success"></i> From Spot
                        </h5>
                    </div>
                    <div class="card-body">
                        <h6>@Html.DisplayFor(model => model.FromSpotName)</h6>
                        <small class="text-muted">
                            <i class="fas fa-location-arrow"></i>
                            @Model.FromSpotCoordinates
                        </small>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card border-info">
                    <div class="card-header bg-info bg-opacity-10">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-location-arrow text-info"></i> To Spot
                        </h5>
                    </div>
                    <div class="card-body">
                        <h6>@Html.DisplayFor(model => model.ToSpotName)</h6>
                        <small class="text-muted">
                            <i class="fas fa-location-arrow"></i>
                            @Model.ToSpotCoordinates
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle text-info"></i> Quick Info
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-3">
                    <strong>Type:</strong>
                    <span class="badge bg-primary">@Model.Type</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <strong>Duration:</strong>
                    <span class="badge bg-info">@Model.Duration hours</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <strong>Trip:</strong>
                    <span>@Model.TripName</span>
                </div>
                <div class="mb-3">
                    <strong>Route:</strong><br>
                    <small class="text-muted">
                        <i class="fas fa-arrow-right text-success"></i> @Model.FromSpotName<br>
                        <i class="fas fa-arrow-right text-info ms-2"></i> @Model.ToSpotName
                    </small>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-tools text-warning"></i> Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    @if (!isPublicView)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit Transport
                        </a>
                    }
                    <a href="@returnUrl" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Trip
                    </a>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header bg-light">
                <h5 class="card-title mb-0">
                    <i class="fas fa-route text-primary"></i> Transport Summary
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div class="mb-3">
                        <i class="fas fa-bus fa-2x text-primary mb-2"></i>
                        <h6>@Model.Name</h6>
                    </div>
                    <div class="transport-route">
                        <div class="d-flex align-items-center mb-2">
                            <div class="route-point">
                                <i class="fas fa-circle text-success"></i>
                            </div>
                            <div class="route-details ms-2">
                                <small class="fw-bold">From</small><br>
                                <small>@Model.FromSpotName</small>
                            </div>
                        </div>
                        <div class="route-line ms-2 mb-2" style="border-left: 2px dashed #6c757d; height: 20px; margin-left: 6px;"></div>
                        <div class="d-flex align-items-center">
                            <div class="route-point">
                                <i class="fas fa-circle text-info"></i>
                            </div>
                            <div class="route-details ms-2">
                                <small class="fw-bold">To</small><br>
                                <small>@Model.ToSpotName</small>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3 p-2 bg-primary bg-opacity-10 rounded">
                        <small class="text-primary">
                            <i class="fas fa-clock"></i> Duration: @Model.Duration hours
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .transport-route {
        padding: 10px;
    }

    .route-point {
        width: 20px;
        text-align: center;
    }

    .route-line {
        margin-left: 10px;
    }
</style>