@model TravelHub.Web.ViewModels.Transports.TransportCreateEditViewModel

@{
    ViewData["Title"] = "Edit Transport";
    var returnUrl = ViewData["ReturnUrl"] as string ?? Url.Action("Details", "Trips", new { id = Model.TripId });
}

<h1>Edit Transport</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="TripId" />

            <!-- Sekcja podstawowych danych Transport -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Transport Details</h5>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Type" class="control-label"></label>
                        <select asp-for="Type" class="form-control">
                            <option value="">-- Select Transportation Type --</option>
                            @foreach (var type in Model.TransportationTypes)
                            {
                                <option value="@type.Value" selected="@(type.Value == Model.Type)">@type.Name</option>
                            }
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DurationString" class="control-label"></label>
                        <input asp-for="DurationString" class="form-control" type="time" step="300" />
                        <span asp-validation-for="DurationString" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FromSpotId" class="control-label"></label>
                                <select asp-for="FromSpotId" class="form-control">
                                    <option value="">-- Select From Spot --</option>
                                    @foreach (var spot in Model.Spots)
                                    {
                                        <option value="@spot.Id" selected="@(spot.Id == Model.FromSpotId)">@spot.Name (@spot.Coordinates)</option>
                                    }
                                </select>
                                <span asp-validation-for="FromSpotId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ToSpotId" class="control-label"></label>
                                <select asp-for="ToSpotId" class="form-control">
                                    <option value="">-- Select To Spot --</option>
                                    @foreach (var spot in Model.Spots)
                                    {
                                        <option value="@spot.Id" selected="@(spot.Id == Model.ToSpotId)">@spot.Name (@spot.Coordinates)</option>
                                    }
                                </select>
                                <span asp-validation-for="ToSpotId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sekcja Expense -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Estimated Transport Cost (Optional)</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        This is an estimated cost for planning purposes.
                        <strong>The default currency is set to your trip's base currency with exchange rate 1.</strong>
                        You can skip this section if you don't know the cost yet.
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="ExpenseValue" class="form-label">Estimated Cost</label>
                                <input asp-for="ExpenseValue" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="ExpenseValue" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="ExpenseCurrencyCode" class="form-label">Currency</label>
                                <select asp-for="ExpenseCurrencyCode" class="form-control" id="currencySelect">
                                    <option value="">-- Select Currency --</option>
                                    @{
                                        var usedCurrencies = Model.CurrenciesGroups.Where(c => c.IsUsed).ToList();
                                        var allCurrencies = Model.CurrenciesGroups.Where(c => !c.IsUsed).ToList();
                                    }

                                    @if (usedCurrencies.Any())
                                    {
                                        <optgroup label="-- Used Currency (Currency, Rate) --">
                                            @foreach (var currency in usedCurrencies)
                                            {
                                                bool isSelected = (Model.ExpenseCurrencyCode == currency.Key && Model.ExpenseExchangeRateValue == currency.ExchangeRate);
                                                <option value="@currency.Key"
                                                        data-rate="@currency.ExchangeRate.ToString(System.Globalization.CultureInfo.InvariantCulture)"
                                                        selected="@isSelected">
                                                    @currency.DropdownText
                                                </option>
                                            }
                                        </optgroup>
                                    }

                                    <optgroup label="-- All currencies --">
                                        @foreach (var currency in allCurrencies)
                                        {
                                            bool isSelected = (Model.ExpenseCurrencyCode == currency.Key && Model.ExpenseExchangeRateValue == 1.0M)
                                                              || (Model.ExpenseCurrencyCode == null && Model.TripCurrency == currency.Key);
                                            <option value="@currency.Key"
                                                    selected="@isSelected">
                                                @currency.DropdownText
                                            </option>
                                        }
                                    </optgroup>
                                </select>
                                <span asp-validation-for="ExpenseCurrencyCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label asp-for="ExpenseExchangeRateValue" class="form-label">Exchange Rate (to Base)</label>
                                <input asp-for="ExpenseExchangeRateValue" class="form-control" type="number" step="0.000001" />
                                <span asp-validation-for="ExpenseExchangeRateValue" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a href="@returnUrl" class="btn btn-secondary">Back to Trip</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/currency-utils.js"></script>

    <script src="~/js/currency-conversion-module.js"></script>

    <script>
        var tripCurrency = "@Html.Raw(Model.TripCurrency)";
        var $currencySelect = $('#currencySelect');
        var $exchangeRateInput = $('#ExpenseExchangeRateValue');
    </script>
}