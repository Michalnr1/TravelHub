@model TravelHub.Web.ViewModels.Activities.SpotDetailsViewModel

@{
    ViewData["Title"] = "Delete Spot";
}

<h1>Delete Spot</h1>

<h3>Are you sure you want to delete this spot?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration) hours
        </dd>

        <dt class="col-sm-2">
            Coordinates
        </dt>
        <dd class="col-sm-10">
            @Model.Latitude.ToString("F6"), @Model.Longitude.ToString("F6")
        </dd>

        @* <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd> *@

        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

        <dt class="col-sm-2">
            Trip
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TripName)
        </dd>

        <dt class="col-sm-2">
            Day
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DayName)
        </dd>

        <dt class="col-sm-2">
            Photos
        </dt>
        <dd class="col-sm-10">
            <span class="badge badge-info">@Model.PhotoCount</span>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="alert alert-warning">
            <strong>Warning:</strong> This action cannot be undone. All data related to this spot including photos and transport connections will be permanently deleted.
        </div>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>