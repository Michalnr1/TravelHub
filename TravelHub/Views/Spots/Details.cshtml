@using TravelHub.Web.ViewModels.Activities
@model TravelHub.Web.ViewModels.Activities.SpotDetailsViewModel

@{
    ViewData["Title"] = "Spot Details";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<h1>Spot Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration) hours
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order)
        </dd>

        <dt class="col-sm-2">
            Coordinates
        </dt>
        <dd class="col-sm-10">
            @Model.Latitude.ToString("F6"), @Model.Longitude.ToString("F6")
        </dd>

        @* <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cost)
        </dd> *@

        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

        <dt class="col-sm-2">
            Trip
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TripName)
        </dd>

        <dt class="col-sm-2">
            Day
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DayName)
        </dd>

        <dt class="col-sm-2">
            Photos
        </dt>
        <dd class="col-sm-10">
            <span class="badge badge-info">@Model.PhotoCount</span>
        </dd>
        
        <dt class="col-sm-2">
            Transports From
        </dt>
        <dd class="col-sm-10">
            <span class="badge badge-secondary">@Model.TransportsFromCount</span>
        </dd>

        <dt class="col-sm-2">
            Transports To
        </dt>
        <dd class="col-sm-10">
            <span class="badge badge-secondary">@Model.TransportsToCount</span>
        </dd>
    </dl>
</div>

<div class="spot-photos mb-3">
    @foreach (var p in Model.Photos ?? Enumerable.Empty<PhotoViewModel>())
    {
        <div class="d-inline-block me-2 mb-2">
            <img src="~/images/spots/@p.Name" alt="@p.Alt" style="width:150px;height:auto;border:1px solid #ddd" />
            <form asp-controller="Photos" asp-action="Delete" method="post" class="mt-1">
                <input type="hidden" name="id" value="@p.Id" />
                <input type="hidden" name="spotId" value="@Model.Id" />
                <button type="submit" class="btn btn-sm btn-danger">Usuń</button>
            </form>
        </div>
    }
</div>

<div>
    <h4 class="mb-3 text-center">Add photo to spot</h4>

    <form asp-controller="Photos" asp-action="Upload" method="post" enctype="multipart/form-data">
        <input type="hidden" name="spotId" value="@Model.Id" />
        <div class="mb-2">
            <input type="file" name="photoFile" accept=".jpg,.jpeg,.png,.webp" />
        </div>
        <div class="mb-2">
            <input type="text" name="alt" placeholder="Description (alternative)" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Add photo</button>
    </form>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Export" asp-route-id="@Model.Id" class="btn btn-outline-primary ms-2">Export to TXT</a>
    <a asp-controller="Trips" asp-action="Details" asp-route-id="@Model.TripId" class="btn btn-secondary">Back to trip</a>
</div>