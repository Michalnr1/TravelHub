@using TravelHub.Web.ViewModels.Activities
@model TravelHub.Web.ViewModels.Activities.SpotDetailsViewModel

@{
    ViewData["Title"] = "Spot Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Model.Name</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-controller="Activities" asp-action="ChecklistActivity" asp-route-activityId="@Model.Id" class="btn btn-primary">
            View checklist
        </a>
        <a asp-action="ExportPdf" asp-controller="Spots" asp-route-id="@Model.Id" class="btn btn-info">
            Download as PDF
        </a>
        <a asp-controller="Trips" asp-action="Details" asp-route-id="@Model.TripId" class="btn btn-outline-secondary">Back to Trip</a>
    </div>
</div>

@if (TempData["FilePassword"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show mt-4" role="alert">
        <h5><i class="fas fa-key"></i> File Password</h5>
        <strong class="d-block mt-2">Save this password securely:</strong>
        <code class="d-block mt-1 p-2 bg-light border rounded">@TempData["FilePassword"]</code>
        <small class="text-muted d-block mt-2">
            <i class="fas fa-exclamation-triangle"></i> This password will not be shown again. Save it now — without it, you won't be able to open the encrypted file.
        </small>
        <div class="mt-3">
            <button type="button" class="btn btn-outline-secondary btn-sm"
                    onclick="navigator.clipboard.writeText('@TempData["FilePassword"]'); alert('Password copied!');">
                <i class="fas fa-copy"></i> Copy password
            </button>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-map-marker-alt text-success"></i> Spot Information
                </h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.StartTimeString)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.StartTimeString)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Duration)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DurationString) hours</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Rating)</dt>
                    <dd class="col-sm-9">
                        @if (Model.Rating.HasValue)
                        {
                            <div class="d-flex align-items-center">
                                @for (int i = 0; i < 5; i++)
                                {
                                    <i class="fas fa-star @(i < (int)Model.Rating ? "text-warning" : "text-muted")"></i>
                                }
                                <span class="ms-2">(@Model.Rating.Value.ToString("F1"))</span>
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">Not rated</span>
                        }
                    </dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Order)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Order)</dd>

                    <dt class="col-sm-3">Coordinates</dt>
                    <dd class="col-sm-9">
                        <i class="fas fa-location-arrow text-muted"></i>
                        @Model.Latitude.ToString("F6"), @Model.Longitude.ToString("F6")
                    </dd>

                    <dt class="col-sm-3">Category</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>
                </dl>
            </div>
        </div>

        <!-- Photos Section -->
        <div class="card mt-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-images text-info"></i> Photos
                    <span class="badge bg-info ms-2">@Model.PhotoCount</span>
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Photos?.Any() == true)
                {
                    <div class="row">
                        @foreach (var p in Model.Photos)
                        {
                            <div class="col-md-4 mb-3">
                                <div class="card">
                                    <img src="~/images/spots/@p.Name" alt="@p.Alt" class="card-img-top" style="height: 200px; object-fit: cover;">
                                    <div class="card-body text-center">
                                        <p class="card-text small text-muted">@p.Alt</p>
                                        <form asp-controller="Photos" asp-action="DeleteSpotPhoto" method="post">
                                            <input type="hidden" name="id" value="@p.Id" />
                                            <input type="hidden" name="spotId" value="@Model.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger"
                                                    onclick="return confirm('Are you sure you want to delete this photo?')">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No photos added yet.
                    </div>
                }

                <div class="mt-4">
                    <h6>Add New Photo</h6>
                    <form asp-controller="Photos" asp-action="UploadSpotPhoto" method="post" enctype="multipart/form-data" class="row g-3">
                        <input type="hidden" name="spotId" value="@Model.Id" />
                        <div class="col-md-6">
                            <input type="file" name="photoFile" accept=".jpg,.jpeg,.png,.webp" class="form-control" required />
                        </div>
                        <div class="col-md-4">
                            <input type="text" name="alt" placeholder="Photo description" class="form-control" />
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-upload"></i> Upload
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Files Section -->
        <div class="card mt-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-file-alt text-warning"></i> Files
                    <span class="badge bg-warning ms-2">@(Model.Files?.Count() ?? 0)</span>
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Files?.Any() == true)
                {
                    <div class="list-group">
                        @foreach (var f in Model.Files)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fas fa-file-pdf text-danger me-2"></i>
                                    <strong>@f.Name</strong>
                                </div>
                                <div>
                                    <a class="btn btn-sm btn-outline-primary me-2"
                                       asp-controller="Files"
                                       asp-action="Download"
                                       asp-route-id="@f.Id"
                                       asp-route-spotId="@f.spotId">
                                        <i class="fas fa-download"></i> Download
                                    </a>
                                    <form asp-controller="Files" asp-action="Delete" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@f.Id" />
                                        <input type="hidden" name="spotId" value="@Model.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Are you sure you want to delete this file?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> No files added yet.
                    </div>
                }

                <div class="mt-4">
                    <h6>Add New File</h6>
                    <form asp-controller="Files" asp-action="Upload" method="post" enctype="multipart/form-data" class="row g-3">
                        <input type="hidden" name="spotId" value="@Model.Id" />
                        <div class="col-md-8">
                            <input type="file" name="fileFile" accept=".pdf" class="form-control" required />
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-warning w-100">
                                <i class="fas fa-upload"></i> Upload File
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-map-marked-alt text-info"></i> Trip Information
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Trip:</strong><br>
                    <a asp-controller="Trips" asp-action="Details" asp-route-id="@Model.TripId" class="text-decoration-none">
                        @Html.DisplayFor(model => model.TripName)
                    </a>
                </div>

                <div class="mb-3">
                    <strong>Day:</strong><br>
                    @Html.DisplayFor(model => model.DayName)
                </div>

                <!-- Transports From Section -->
                <div class="mb-3">
                    <strong>Transports from this spot:</strong><br>
                    @if (Model.TransportsFrom?.Any() == true)
                    {
                        <div class="mt-2">
                            @foreach (var transport in Model.TransportsFrom)
                            {
                                <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-2">
                                    <div>
                                        <i class="fas fa-arrow-right text-success me-2"></i>
                                        <strong>@transport.Name</strong>
                                        <small class="text-muted">to @transport.ToSpotName</small>
                                        <small class="text-muted ms-2">(@transport.Duration hours)</small>
                                    </div>
                                    <a asp-controller="Transports" asp-action="Details" asp-route-id="@transport.Id"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <span class="text-muted">No transports from this spot</span>
                    }
                </div>

                <!-- Transports To Section -->
                <div class="mb-3">
                    <strong>Transports to this spot:</strong><br>
                    @if (Model.TransportsTo?.Any() == true)
                    {
                        <div class="mt-2">
                            @foreach (var transport in Model.TransportsTo)
                            {
                                <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-2">
                                    <div>
                                        <i class="fas fa-arrow-left text-info me-2"></i>
                                        <strong>@transport.Name</strong>
                                        <small class="text-muted">from @transport.FromSpotName</small>
                                        <small class="text-muted ms-2">(@transport.Duration hours)</small>
                                    </div>
                                    <a asp-controller="Transports" asp-action="Details" asp-route-id="@transport.Id"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <span class="text-muted">No transports to this spot</span>
                    }
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle text-info"></i> Quick Info
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <strong>Start time:</strong>
                    <span class="badge bg-info">@Model.StartTimeString</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <strong>Duration:</strong>
                    <span class="badge bg-info">@Model.DurationString</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <strong>Order:</strong>
                    <span class="badge bg-secondary">@Model.Order</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <strong>Rating:</strong>
                    <span>
                        @if (Model.Rating.HasValue)
                        {
                            @for (int i = 0; i < 5; i++)
                            {
                                <i class="fas fa-star @(i < (int)Model.Rating ? "text-warning" : "text-muted")" style="font-size: 0.8em;"></i>
                            }
                        }
                        else
                        {
                            <span class="text-muted">Not rated</span>
                        }
                    </span>
                </div>
                <div class="d-flex justify-content-between">
                    <strong>Category:</strong>
                    <span>@(Model.CategoryName ?? "No category")</span>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-tools text-warning"></i> Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit Spot
                    </a>
                    <a asp-controller="Activities" asp-action="ChecklistActivity" asp-route-activityId="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-list-check"></i> View Checklist
                    </a>
                    <a asp-action="ExportPdf" asp-controller="Spots" asp-route-id="@Model.Id" class="btn btn-info">
                        <i class="fas fa-download"></i> Download as PDF
                    </a>
                    <a asp-controller="Trips" asp-action="Details" asp-route-id="@Model.TripId" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Trip
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>