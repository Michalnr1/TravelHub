@model TravelHub.Web.ViewModels.BudgetSummary.BudgetSummaryViewModel

@{
    ViewData["Title"] = "Budget Summary - " + Model.TripName;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3">Budget Summary</h1>
            <p class="text-muted">@Model.TripName</p>
        </div>
        <div>
            <a href="@Url.Action("Details", "Trips", new { id = Model.TripId })" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Trip
            </a>
        </div>
    </div>

    <!-- Filtry -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Filters</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-action="Index" id="filterForm">
                <input type="hidden" asp-for="TripId" />

                <div class="row">
                    <!-- Filter by Person -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="FilterByPersonId" class="form-label">Filter by Person</label>
                            <select asp-for="FilterByPersonId" asp-items="Model.AvailablePeopleSelectList" class="form-select" onchange="this.form.submit()">
                                <option value="">All People</option>
                            </select>
                        </div>
                    </div>

                    <!-- Filter by Category -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="FilterByCategoryId" class="form-label">Filter by Category</label>
                            <select asp-for="FilterByCategoryId" asp-items="Model.AvailableCategoriesSelectList" class="form-select" onchange="this.form.submit()">
                                <option value="">All Categories</option>
                            </select>
                        </div>
                    </div>

                    <!-- Filter by Expense Type -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label">Include</label>
                            <div class="form-check">
                                <input asp-for="IncludeTransfers" class="form-check-input" onchange="this.form.submit()" />
                                <label asp-for="IncludeTransfers" class="form-check-label">Transfers</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="IncludeEstimated" class="form-check-input" onchange="this.form.submit()" />
                                <label asp-for="IncludeEstimated" class="form-check-label">Estimated Expenses</label>
                            </div>
                        </div>
                    </div>

                    <!-- Actions on filters -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="form-label">Actions</label>
                            <div>
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fas fa-filter"></i> Apply Filters
                                </button>
                                <a href="@Url.Action("Index", new { tripId = Model.TripId })" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-times"></i> Clear
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Aktywne filtry -->
    @if (!string.IsNullOrEmpty(Model.FilterByPersonName) || !string.IsNullOrEmpty(Model.FilterByCategoryName))
    {
        <div class="alert alert-info mb-4">
            <strong>Active Filters:</strong>
            @if (!string.IsNullOrEmpty(Model.FilterByPersonName))
            {
                <span class="badge bg-primary me-2">Person: @Model.FilterByPersonName</span>
            }
            @if (!string.IsNullOrEmpty(Model.FilterByCategoryName))
            {
                <span class="badge bg-success me-2">Category: @Model.FilterByCategoryName</span>
            }
        </div>
    }

    <!-- Podsumowanie ogólne -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Actual Expenses</h6>
                            <h3 class="card-text">@Model.TotalActualExpenses.ToString("N2") @Model.TripCurrency</h3>
                            <small>Real payments made</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-receipt fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Estimated Expenses</h6>
                            <h3 class="card-text">@Model.TotalEstimatedExpenses.ToString("N2") @Model.TripCurrency</h3>
                            <small>Planned budget</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Transfers</h6>
                            <h3 class="card-text">@Model.TotalTransfers.ToString("N2") @Model.TripCurrency</h3>
                            <small>Money between participants</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-exchange-alt fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card @(Model.Balance >= 0 ? "bg-danger" : "bg-success") text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Balance</h6>
                            <h3 class="card-text">@Model.Balance.ToString("N2") @Model.TripCurrency</h3>
                            <small>Actual vs Estimated</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-balance-scale fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Dodatkowe wyjaśnienie -->
    <div class="alert alert-light mb-4">
        <h6><i class="fas fa-info-circle"></i> How to read this summary:</h6>
        <ul class="mb-0">
            <li><strong>Actual Expenses:</strong> Real money spent during the trip</li>
            <li><strong>Estimated Expenses:</strong> Planned budget before the trip</li>
            <li><strong>Transfers:</strong> Money exchanged between participants (doesn't affect total budget)</li>
            <li><strong>Budget Balance:</strong> Difference between actual and estimated expenses (red - over budger, green - under budget)</li>
        </ul>
    </div>

    <!-- Podsumowanie per kategoria -->
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Expenses by Category</h5>
                </div>
                <div class="card-body">
                    @if (Model.CategorySummaries.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Category</th>
                                        <th class="text-end">Actual</th>
                                        <th class="text-end">Estimated</th>
                                        <th class="text-end">Transfers</th>
                                        <th class="text-end">Total</th>
                                        <th class="text-end">%</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model.CategorySummaries.OrderByDescending(c => c.Total))
                                    {
                                        <tr>
                                            <td>
                                                <i class="fas fa-circle me-2" style="color: @category.CategoryColor"></i>
                                                @category.CategoryName
                                            </td>
                                            <td class="text-end">@category.ActualExpenses.ToString("N2")</td>
                                            <td class="text-end">@category.EstimatedExpenses.ToString("N2")</td>
                                            <td class="text-end">@category.Transfers.ToString("N2")</td>
                                            <td class="text-end fw-bold">@category.Total.ToString("N2")</td>
                                            <td class="text-end">@category.PercentageOfTotal.ToString("N1")%</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="fw-bold">
                                    <tr>
                                        <td>Total</td>
                                        <td class="text-end">@Model.CategorySummaries.Sum(c => c.ActualExpenses).ToString("N2")</td>
                                        <td class="text-end">@Model.CategorySummaries.Sum(c => c.EstimatedExpenses).ToString("N2")</td>
                                        <td class="text-end">@Model.CategorySummaries.Sum(c => c.Transfers).ToString("N2")</td>
                                        <td class="text-end">@Model.CategorySummaries.Sum(c => c.Total).ToString("N2")</td>
                                        <td class="text-end">100%</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-chart-pie fa-3x mb-3"></i>
                            <p>No expense data available for the selected filters.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Podsumowanie per osoba -->
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Expenses by Person</h5>
                </div>
                <div class="card-body">
                    @if (Model.PersonSummaries.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Person</th>
                                        <th class="text-end">Actual</th>
                                        <th class="text-end">Estimated</th>
                                        <th class="text-end">Transfers</th>
                                        <th class="text-end">Total</th>
                                        <th class="text-end">%</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var person in Model.PersonSummaries.OrderByDescending(p => p.Total))
                                    {
                                        <tr>
                                            <td>@person.PersonName</td>
                                            <td class="text-end">@person.ActualExpenses.ToString("N2")</td>
                                            <td class="text-end">@person.EstimatedExpenses.ToString("N2")</td>
                                            <td class="text-end">@person.Transfers.ToString("N2")</td>
                                            <td class="text-end fw-bold">@person.Total.ToString("N2")</td>
                                            <td class="text-end">@person.PercentageOfTotal.ToString("N1")%</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="fw-bold">
                                    <tr>
                                        <td>Total</td>
                                        <td class="text-end">@Model.PersonSummaries.Sum(p => p.ActualExpenses).ToString("N2")</td>
                                        <td class="text-end">@Model.PersonSummaries.Sum(p => p.EstimatedExpenses).ToString("N2")</td>
                                        <td class="text-end">@Model.PersonSummaries.Sum(p => p.Transfers).ToString("N2")</td>
                                        <td class="text-end">@Model.PersonSummaries.Sum(p => p.Total).ToString("N2")</td>
                                        <td class="text-end">100%</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-users fa-3x mb-3"></i>
                            <p>No person data available for the selected filters.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Wykresy (opcjonalnie) -->
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Category Distribution</h5>
                </div>
                <div class="card-body">
                    <canvas id="categoryChart" width="400" height="300"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Person Distribution</h5>
                </div>
                <div class="card-body">
                    <canvas id="personChart" width="400" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Inicjalizacja wykresów
        document.addEventListener('DOMContentLoaded', function() {
            // Wykres kategorii
            var categoryCtx = document.getElementById('categoryChart').getContext('2d');
            var categoryChart = new Chart(categoryCtx, {
                type: 'doughnut',
                data: {
                    labels: [
                        @foreach (var category in Model.CategorySummaries)
                        {
                                @:'@category.CategoryName',
                        }
                    ],
                    datasets: [{
                        data: [
                            @foreach (var category in Model.CategorySummaries)
                            {
                                    @:'@category.Total',
                            }
                        ],
                        backgroundColor: [
                            @foreach (var category in Model.CategorySummaries)
                            {
                                    @:'@category.CategoryColor',
                            }
                        ],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    var label = context.label || '';
                                    var value = context.raw || 0;
                                    var total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    var percentage = Math.round((value / total) * 100);
                                    return label + ': ' + value.toFixed(2) + ' @Model.TripCurrency (' + percentage + '%)';
                                }
                            }
                        }
                    }
                }
            });

            // Wykres osób
            var personCtx = document.getElementById('personChart').getContext('2d');
            var personChart = new Chart(personCtx, {
                type: 'pie',
                data: {
                    labels: [
                        @foreach (var person in Model.PersonSummaries)
                        {
                                @:'@person.PersonName',
                        }
                    ],
                    datasets: [{
                        data: [
                            @foreach (var person in Model.PersonSummaries)
                            {
                                    @:'@person.Total',
                            }
                        ],
                        backgroundColor: [
                            '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b',
                            '#858796', '#5a5c69', '#6f42c1', '#e83e8c', '#fd7e14'
                        ],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    var label = context.label || '';
                                    var value = context.raw || 0;
                                    var total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    var percentage = Math.round((value / total) * 100);
                                    return label + ': ' + value.toFixed(2) + ' @Model.TripCurrency (' + percentage + '%)';
                                }
                            }
                        }
                    }
                }
            });
        });

        // Auto-submit form when filters change
        document.querySelectorAll('.form-select, .form-check-input').forEach(element => {
            element.addEventListener('change', function() {
                document.getElementById('filterForm').submit();
            });
        });
    </script>
}