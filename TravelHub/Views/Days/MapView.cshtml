@using TravelHub.Domain.Entities
@using TravelHub.Web.ViewModels.Activities
@using Microsoft.AspNetCore.Http
@model TravelHub.Web.ViewModels.Trips.DayDetailViewModel
@{
    bool isGroup = Model.Number == null;
    ViewData["Title"] = isGroup ? "Group Details" : $"Day {Model.Number} Details";
    var apiKey = ViewData["GoogleApiKey"];
    var startLat = ViewData["Latitude"];
    var startLng = ViewData["Longitude"];
    var allActivities = new List<ActivityDetailsViewModel>();
    allActivities.AddRange(Model.Spots);
    allActivities.AddRange(Model.Activities);
    allActivities.Sort((a1, a2) => a1.Order.CompareTo(a2.Order));

    // Sprawdzamy czy to publiczny podgląd
    var isPublicView = Context.Request.Query["source"] == "public";
    var backUrl = isPublicView ? Url.Action("Details", "TripsSearch", new { id = Model.Trip!.Id }) : Url.Action("Details", "Trips", new { id = Model.Trip!.Id });
}

<h1>@ViewData["Title"]</h1>

<div id="warning-container" class="mt-3"></div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
            @if (isGroup)
            {
                <span class="badge bg-info ms-2">Group</span>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("D")
        </dd>

        <dt class="col-sm-2">
            Trip
        </dt>
        <dd class="col-sm-10">
            @Model.Trip?.Name
        </dd>
    </dl>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title h5 mb-0">Route Planning</h2>
            </div>
            <div class="card-body">
                <div id="map" style="height:400px;width:100%;"></div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="start-time" class="form-label">Start Time</label>
                            <input type="time" class="form-control" id="start-time" value="08:00">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="transit-threshold" class="form-label">Max Walking Time (minutes)</label>
                            <input type="number" class="form-control" id="transit-threshold" value="30" min="1" max="120">
                        </div>
                    </div>
                </div>

                <div class="route-controls">
                    <h6 class="mb-2">Find Route:</h6>
                    <div class="btn-group-vertical w-100" role="group">
                        <button id="route-walk-btn" class="btn btn-outline-primary text-start">
                            <i class="fas fa-walking me-2"></i>Find Route
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Spots -->
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Spots (@(Model.Spots.Count()))</h5>
                @if (!isPublicView)
                {
                    <a asp-controller="Spots" asp-action="AddToTrip" asp-route-tripId="@Model.Trip!.Id" asp-route-dayId="@Model.Id" asp-route-returnUrl="@Context.Request.Path" class="btn btn-sm btn-success">
                        <i class="fas fa-plus me-1"></i>Add Spot
                    </a>
                }
            </div>
            <div class="card-body p-0">
                <div class="list-group-item bg-light border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <strong>Default Travel Mode</strong>
                        <div>
                            <label class="me-3">
                                <input type="radio" name="global-travel-mode" value="WALKING" checked>
                                <i class="fas fa-walking"></i> Walking
                            </label>
                            <label class="me-3">
                                <input type="radio" name="global-travel-mode" value="DRIVING">
                                <i class="fas fa-car"></i> Driving
                            </label>
                            <label>
                                <input type="radio" name="global-travel-mode" value="TRANSIT">
                                <i class="fas fa-bus"></i> Transit
                            </label>
                        </div>
                    </div>
                </div>
                @if (allActivities.Any())
                {
                    int i = 0;
                    <div class="list-group list-group-flush" id="activitiesContainer">
                        @foreach (var activity in allActivities)
                        {
                            string id;
                            bool isSpot = activity is SpotDetailsViewModel;
                            string controller = "Spots";
                            @if (isSpot)
                            {
                                id = "spot-" + activity.Id;
                                if (Model.PreviousAccommodation?.Id == activity.Id && i == 0)
                                {
                                    id = id + "-prev";
                                } else if (Model.NextAccommodation?.Id == activity.Id && i == allActivities.Count - 1)
                                {
                                    id = id + "-next";
                                }
                            }
                            else
                            {
                                id = "activity-" + activity.Id;
                                controller = "Activities";
                            }
                            if (activity is AccommodationBasicViewModel)
                            {
                                controller = "Accommodations";
                            }
                            <div class="list-group-item d-flex justify-content-between align-items-start
                                            @(isSpot ? "border-success" : "border-primary") activity-item"
                                 style="border-left-width: 4px;"
                                 data-activity-id="@activity.Id"
                                 data-order="@activity.Order"
                                 draggable="true"
                                 id=@(id)>
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@activity.Name</h6>
                                        <p class="mb-1 small text-muted">@activity.Description</p>
                                        <div class="small">
                                            <span class="badge bg-light text-dark">@activity.DurationString h</span>
                                            @* <span class="badge bg-warning">$@spot.Cost</span> *@
                                            @if (activity.CategoryName != null)
                                            {
                                                <span class="badge bg-secondary">@activity.CategoryName</span>
                                            }
                                            <br>
                                            @if (activity is SpotDetailsViewModel)
                                            {
                                                <small class="text-muted">
                                                    📍 @((activity as SpotDetailsViewModel).Latitude.ToString("F4")), @((activity as SpotDetailsViewModel).Longitude.ToString("F4"))
                                                </small>
                                            }

                                        </div>
                                    </div>
                                    <div class="btn-group ms-2 flex-shrink-0">
                                        <a asp-controller="@controller" asp-action="Details" asp-route-id="@activity.Id" asp-route-source="@(isPublicView ? "public" : "")" asp-route-returnUrl="@Context.Request.Path" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (!isPublicView)
                                        {
                                            <a asp-controller="@controller" asp-action="Edit" asp-route-id="@activity.Id" asp-route-returnUrl="@Context.Request.Path" class="btn btn-sm btn-outline-secondary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-controller="@controller" asp-action="Delete" asp-route-id="@activity.Id" asp-route-returnUrl="@Context.Request.Path" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this spot?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                                <div class="drag-handle ms-2 text-muted" style="cursor: grab;">
                                    <i class="fas fa-grip-vertical"></i>
                                </div>
                            </div>
                            i++;
                            @if (isSpot)
                            {
                                id = "travel-" + activity.Id;
                                var radioName = "travel-mode-" + activity.Id;
                                <div class="list-group-item" id="@id">
                                    <div class="d-flex justify-content-between align-items-stretch">
        
                                        <!-- LEFT COLUMN - vertical layout -->
                                        <div class="travel-info d-flex flex-column justify-content-start">
                                            <!-- dynamic content added here -->
                                        </div>

                                        <!-- RIGHT COLUMN - radio buttons -->
                                        <div class="d-flex align-items-center gap-2">
                                            <i class="fas fa-walking"></i>
                                            <input type="radio" name="@radioName" value="WALKING" class="travel-mode-radio-button" checked>

                                            <i class="fas fa-car text-primary"></i>
                                            <input type="radio" name="@radioName" value="DRIVING" class="travel-mode-radio-button"/>

                                            <i class="fas fa-bus text-primary"></i>
                                            <input type="radio" name="@radioName" value="TRANSIT" class="travel-mode-radio-button"/>
                                        </div>

                                    </div>
                                </div>
                                
                            }
                        }
                    </div>
                }
                else
                {
                    <div class="text-center p-4">
                        <p class="text-muted mb-3">No spots added to this trip yet.</p>
                        @if (!isPublicView)
                        {
                            <a asp-controller="Spots" asp-action="AddToTrip" asp-route-tripId="@Model.Trip!.Id" asp-route-dayId="@Model.Id" asp-route-returnUrl="@Context.Request.Path" class="btn btn-success">
                                <i class="fas fa-plus me-1"></i>Add Spot
                            </a>
                        }
                    </div>
                }
            </div>

            <button id="order-apply" class="btn btn-outline-primary text-start" onclick="applyActivityOrder()" @(isPublicView ? "hidden" : "")>
                Apply order change
            </button>
            <button id="optimize" class="btn btn-outline-primary text-start" onclick="getOptimizedActivityOrders('WALK')">
                Optimize for walking
            </button>
            <button id="optimize" class="btn btn-outline-primary text-start" onclick="getOptimizedActivityOrders('DRIVE')">
                Optimize for driving
            </button>
            <button id="optimize" class="btn btn-outline-primary text-start" onclick="getOptimizedActivityOrders('TRANSIT')">
                Optimize for public transit
            </button>
            @if(Model.PreviousAccommodation == null)
            {
                <span>Keep first spot fixed</span> <input type="checkbox" id="firstFixed" value="off"/>
            } else
            {
                <input type="checkbox" id="firstFixed" value="off" hidden/>
            }
            @if(Model.NextAccommodation == null)
            {
                <span>Keep last spot fixed</span> <input type="checkbox" id="lastFixed" value="off"/>
            } else
            {
                <input type="checkbox" id="lastFixed" value="off" hidden/>
            }
        </div>
    </div>
    <div class="mt-4 d-flex flex-wrap gap-2">
        <button id="exportPdfBtn" class="btn btn-primary">
            <i class="fas fa-file-pdf"></i> Eksportuj do PDF
        </button>
        <a asp-controller="Days" asp-action="Details" asp-route-id="@Model.Id" asp-route-source="@(isPublicView ? "public" : "")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Day 
        </a>
        <a href="@backUrl" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Trip
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Najpierw załaduj luxon.js i inne biblioteki -->
    <script src="~/lib/luxon/luxon.js"></script>
    <script src="~/js/map-functions.js"></script>
    <script src="~/js/route-functions.js"></script>

    <!-- Ustaw zmienne przed załadowaniem day-mapview.js -->
    <script>
        // Deklaruj zmienne jako globalne
        window.points = JSON.parse('@Html.Raw(Json.Serialize(Model.Spots))');
        window.otherActivities = JSON.parse('@Html.Raw(Json.Serialize(Model.Activities))');
        window.activities = JSON.parse('@Html.Raw(Json.Serialize(allActivities))');
        window.previousAccommodation = JSON.parse('@Html.Raw(Json.Serialize(Model.PreviousAccommodation))');
        window.nextAccommodation = JSON.parse('@Html.Raw(Json.Serialize(Model.NextAccommodation))');
        window.center = { 
            lat: parseFloat("@Html.Raw(startLat)".replace(',', '.')), 
            lng: parseFloat("@Html.Raw(startLng)".replace(',', '.')) 
        };
        window.dayDate = luxon.DateTime.fromISO('@Html.Raw(Model.Date.ToString("yyyy-MM-dd"))');
        window.dayId = @Model.Id;
        window.isGroup = @Json.Serialize(isGroup);
        window.routeOptimizationUrl = '@Url.Action("RouteOptimization", "Days")';
        window.updateActivityOrderUrl = '@Url.Action("UpdateActivityOrder", "Days")';
        
        // Global variables for map functions
        window.totalRouteDistance = 0;
        window.totalRouteDuration = 0;
        window.directionsResult = null;
        
        // Get user defined route durations
        if (window.fillFixedDurations && window.points) {
            window.fillFixedDurations(window.points);
        }
    </script>

    <!-- Teraz załaduj day-mapview.js -->
    <script src="~/js/pages/day-mapview.js"></script>

    <!-- Na końcu załaduj Google Maps API -->
    <script>
        function loadGoogleMapsAPI() {
            return new Promise((resolve, reject) => {
                // Sprawdź czy API jest już załadowane
                if (window.google && window.google.maps) {
                    console.log('Google Maps API already loaded');
                    resolve();
                    return;
                }
                
                const script = document.createElement('script');
                script.src = `https://maps.googleapis.com/maps/api/js?key=@apiKey&libraries=places,geometry,marker,routes&callback=initGoogleMaps`;
                script.async = true;
                script.defer = true;
                
                script.onload = function() {
                    console.log('Google Maps API loaded successfully');
                    resolve();
                };
                
                script.onerror = function(error) {
                    console.error('Failed to load Google Maps API:', error);
                    reject(error);
                };
                
                document.head.appendChild(script);
            });
        }

        // Funkcja callback dla Google Maps
        window.initGoogleMaps = function() {
            console.log('Google Maps API callback called');
            
            // Poczekaj chwilę na pełne załadowanie
            setTimeout(function() {
                if (typeof initMap === 'function') {
                    console.log('Calling initMap()');
                    initMap();
                } else {
                    console.error('initMap function not found');
                    // Spróbuj ponownie za 500ms
                    setTimeout(function() {
                        if (typeof initMap === 'function') {
                            initMap();
                        } else {
                            console.error('initMap still not found after retry');
                        }
                    }, 500);
                }
            }, 100);
        };

        function showMapError() {
            const mapContainer = document.getElementById('map');
            if (mapContainer) {
                mapContainer.innerHTML = `
                    <div class="alert alert-danger" style="height: 100%; display: flex; align-items: center; justify-content: center;">
                        <div>
                            <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                            <h4>Failed to load map</h4>
                            <p>Please check your internet connection and try again.</p>
                            <button class="btn btn-primary mt-2" onclick="window.location.reload()">Reload Page</button>
                        </div>
                    </div>
                `;
            }
        }

        // Główna funkcja inicjalizacji
        async function initializePage() {
            try {
                console.log('Starting page initialization...');
                
                // Poczekaj na załadowanie DOM
                if (document.readyState === 'loading') {
                    await new Promise(resolve => {
                        document.addEventListener('DOMContentLoaded', resolve);
                    });
                }
                
                console.log('DOM loaded, loading Google Maps API...');
                await loadGoogleMapsAPI();
                
            } catch (error) {
                console.error('Error during page initialization:', error);
                showMapError();
            }
        }

        // Rozpocznij inicjalizację
        initializePage();

        // Function to collect route data for PDF export
        window.collectRouteDataForExport = function() {
            // This function will be overwritten by day-mapview.js
            console.log('Default collectRouteDataForExport called');
            return null;
        };

        // Przycisk eksportu PDF
        document.addEventListener('DOMContentLoaded', function() {
            const exportBtn = document.getElementById('exportPdfBtn');
            if (exportBtn) {
                exportBtn.addEventListener('click', function() {
                    const routeData = window.collectRouteDataForExport();
                    let url = '@Url.Action("ExportDayPdf", "Days", new { id = Model.Id })';
                    
                    console.log('Export PDF clicked, route data:', routeData);
                    
                    if (routeData) {
                        url += `?routeData=${encodeURIComponent(routeData)}`;
                        window.open(url, '_blank');
                    } else {
                        alert('Please calculate a route first using the "Find Route" button before exporting to PDF.');
                    }
                });
            }
            
            // Testowa funkcja do debugowania
            window.testMap = function() {
                console.log('Testing map...');
                console.log('Google defined:', typeof google !== 'undefined');
                console.log('Google.maps defined:', typeof google !== 'undefined' && typeof google.maps !== 'undefined');
                console.log('initMap defined:', typeof initMap === 'function');
                console.log('Map container:', document.getElementById('map'));
            };
        });
    </script>

