@using TravelHub.Domain.Entities
@using TravelHub.Web.ViewModels.Activities
@using Microsoft.AspNetCore.Http
@model TravelHub.Web.ViewModels.Trips.DayDetailViewModel
@{
    bool isGroup = Model.Number == null;
    ViewData["Title"] = isGroup ? "Group Details" : $"Day {Model.Number} Details";
    var apiKey = ViewData["GoogleApiKey"];
    var startLat = ViewData["Latitude"];
    var startLng = ViewData["Longitude"];
    var allActivities = new List<ActivityDetailsViewModel>();
    allActivities.AddRange(Model.Spots);
    allActivities.AddRange(Model.Activities);
    allActivities.Sort((a1, a2) => a1.Order.CompareTo(a2.Order));

    // Sprawdzamy czy to publiczny podgląd
    var isPublicView = Context.Request.Query["source"] == "public";
    var backUrl = isPublicView ? Url.Action("Details", "TripsSearch", new { id = Model.Trip!.Id }) : Url.Action("Details", "Trips", new { id = Model.Trip!.Id });
}

<h1>@ViewData["Title"]</h1>

<div id="warning-container" class="mt-3"></div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
            @if (isGroup)
            {
                <span class="badge bg-info ms-2">Group</span>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToString("D")
        </dd>

        <dt class="col-sm-2">
            Trip
        </dt>
        <dd class="col-sm-10">
            @Model.Trip?.Name
        </dd>
    </dl>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title h5 mb-0">Route Planning</h2>
            </div>
            <div class="card-body">
                <div id="map" style="height:400px;width:100%;"></div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="start-time" class="form-label">Start Time</label>
                            <input type="time" class="form-control" id="start-time" value="08:00">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="transit-threshold" class="form-label">Max Walking Time (minutes)</label>
                            <input type="number" class="form-control" id="transit-threshold" value="30" min="1" max="120">
                        </div>
                    </div>
                </div>

                <div class="route-controls">
                    <h6 class="mb-2">Find Route:</h6>
                    <div class="btn-group-vertical w-100" role="group">
                        <button id="route-walk-btn" class="btn btn-outline-primary text-start">
                            <i class="fas fa-walking me-2"></i>Find Route
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Spots -->
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Spots (@(Model.Spots.Count()))</h5>
                @if (!isPublicView)
                {
                    <a asp-controller="Spots" asp-action="AddToTrip" asp-route-tripId="@Model.Trip!.Id" asp-route-dayId="@Model.Id" asp-route-returnUrl="@Context.Request.Path" class="btn btn-sm btn-success">
                        <i class="fas fa-plus me-1"></i>Add Spot
                    </a>
                }
            </div>
            <div class="card-body p-0">
                <div class="list-group-item bg-light border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <strong>Default Travel Mode</strong>
                        <div>
                            <label class="me-3">
                                <input type="radio" name="global-travel-mode" value="WALKING" checked>
                                <i class="fas fa-walking"></i> Walking
                            </label>
                            <label class="me-3">
                                <input type="radio" name="global-travel-mode" value="DRIVING">
                                <i class="fas fa-car"></i> Driving
                            </label>
                            <label>
                                <input type="radio" name="global-travel-mode" value="TRANSIT">
                                <i class="fas fa-bus"></i> Transit
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Scrollable container for activities -->
                <div style="max-height: 600px; overflow-y: auto; overflow-x: hidden;" id="activitiesScrollContainer">
                    <div id="loading" class="loading" hidden>
                        <div class="spinner"></div>
                    </div>
                    @if (allActivities.Any())
                    {
                        int i = 0;
                        int spotNum = 0;
                        <div class="list-group list-group-flush" id="activitiesContainer">
                            @foreach (var activity in allActivities)
                            {
                                string id;
                                bool isSpot = activity is SpotDetailsViewModel;
                                bool isAccomm = activity is AccommodationBasicViewModel;
                                string controller = "Spots";

                                @if (isSpot)
                                {
                                    id = "spot-" + activity.Id;
                                    if (Model.PreviousAccommodation?.Id == activity.Id && i == 0)
                                    {
                                        id = id + "-prev";
                                    }
                                    else if (Model.NextAccommodation?.Id == activity.Id && i == allActivities.Count - 1)
                                    {
                                        id = id + "-next";
                                    }
                                }
                                else
                                {
                                    id = "activity-" + activity.Id;
                                    controller = "Activities";
                                }

                                if (isAccomm)
                                {
                                    controller = "Accommodations";
                                }

                                <!-- Activity Item -->
                                <div class="list-group-item d-flex justify-content-between align-items-start
                                                    @(isSpot ? "border-success" : "border-primary") activity-item"
                                     style="border-left-width: 4px;"
                                     data-activity-id="@(isAccomm && i > 0 ? activity.Id + "-last" : activity.Id)"
                                     data-order="@activity.Order"
                                     draggable="true"
                                     id="@id">

                                    <div class="d-flex justify-content-between align-items-start w-100">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">@activity.Name</h6>
                                            <p class="mb-1 small text-muted">@activity.Description</p>
                                            <div class="small">
                                                <span class="badge bg-light text-dark">@activity.DurationString h</span>
                                                @if (activity.CategoryName != null)
                                                {
                                                    <span class="badge bg-secondary">@activity.CategoryName</span>
                                                }
                                                <br>
                                                @if (activity is SpotDetailsViewModel)
                                                {
                                                    <small class="text-muted">
                                                        📍 @((activity as SpotDetailsViewModel).Latitude.ToString("F4")), @((activity as SpotDetailsViewModel).Longitude.ToString("F4"))
                                                    </small>
                                                }
                                            </div>
                                        </div>
                                        <div class="btn-group ms-2 flex-shrink-0">
                                            <a asp-controller="@controller" asp-action="Details" asp-route-id="@activity.Id" asp-route-source="@(isPublicView ? "public" : "")" asp-route-returnUrl="@Context.Request.Path" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (!isPublicView)
                                            {
                                                <a asp-controller="@controller" asp-action="Edit" asp-route-id="@activity.Id" asp-route-returnUrl="@Context.Request.Path" class="btn btn-sm btn-outline-secondary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form asp-controller="@controller" asp-action="Delete" asp-route-id="@activity.Id" asp-route-returnUrl="@Context.Request.Path" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this spot?')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </div>
                                    <div class="drag-handle ms-2 text-muted" style="cursor: grab;">
                                        <i class="fas fa-grip-vertical"></i>
                                    </div>
                                </div>

                                <!-- Travel Mode Selection (shown between spots, not after last one) -->
                                @if (isSpot)
                                {
                                    id = "travel-" + activity.Id;
                                    var radioName = "travel-mode-" + activity.Id;
                                    if (isAccomm && i > 0) { id += "-last"; radioName += "-last"; }
                                    <div class="list-group-item py-2 bg-light" id="@id">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                <i class="fas fa-arrow-right me-1"></i> Travel from <strong>@activity.Name</strong> to <strong class="to-spot">@(spotNum < Model.Spots.Count - 1 ? Model.Spots[spotNum + 1].Name : "")</strong>
                                            </small>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <input type="radio" class="btn-check travel-mode-radio" name="@radioName" id="@(radioName)-walk" value="WALKING" autocomplete="off" checked>
                                                <label class="btn btn-outline-secondary" for="@(radioName)-walk" title="Walking">
                                                    <i class="fas fa-walking"></i>
                                                </label>

                                                <input type="radio" class="btn-check travel-mode-radio" name="@radioName" id="@(radioName)-drive" value="DRIVING" autocomplete="off">
                                                <label class="btn btn-outline-secondary" for="@(radioName)-drive" title="Driving">
                                                    <i class="fas fa-car"></i>
                                                </label>

                                                <input type="radio" class="btn-check travel-mode-radio" name="@radioName" id="@(radioName)-transit" value="TRANSIT" autocomplete="off">
                                                <label class="btn btn-outline-secondary" for="@(radioName)-transit" title="Public Transit">
                                                    <i class="fas fa-bus"></i>
                                                </label>
                                            </div>
                                        </div>
                                        <!-- Travel info will be displayed here -->
                                        <div class="travel-info mt-1 small">
                                            <!-- Dynamic content will be added here -->
                                        </div>
                                    </div>
                                }

                                i++;
                                if (isSpot) spotNum++;
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center p-4">
                            <p class="text-muted mb-3">No spots added to this trip yet.</p>
                            @if (!isPublicView)
                            {
                                <a asp-controller="Spots" asp-action="AddToTrip" asp-route-tripId="@Model.Trip!.Id" asp-route-dayId="@Model.Id" asp-route-returnUrl="@Context.Request.Path" class="btn btn-success">
                                    <i class="fas fa-plus me-1"></i>Add Spot
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-grid gap-2">
                    <button id="order-apply" class="btn btn-outline-primary" onclick="applyActivityOrder()" @(isPublicView ? "hidden" : "")>
                        <i class="fas fa-save me-1"></i> Apply order change
                    </button>
                    <label>Optimize route:</label>
                    <div class="btn-group" role="group">
                        <button class="btn btn-outline-success" onclick="getOptimizedActivityOrders('WALK')" title="Optimize for walking">
                            <i class="fas fa-walking me-1"></i> Walk
                        </button>
                        <button class="btn btn-outline-info" onclick="getOptimizedActivityOrders('DRIVE')" title="Optimize for driving">
                            <i class="fas fa-car me-1"></i> Drive
                        </button>
                        <button class="btn btn-outline-warning" onclick="getOptimizedActivityOrders('TRANSIT')" title="Optimize for public transit">
                            <i class="fas fa-bus me-1"></i> Transit
                        </button>
                    </div>

                    <div class="form-check form-switch mt-2">
                        @if (Model.PreviousAccommodation == null)
                        {
                            <input class="form-check-input" type="checkbox" id="firstFixed" checked>
                            <label class="form-check-label" for="firstFixed">Keep first spot fixed</label>
                        }
                        else
                        {
                            <input class="form-check-input" type="checkbox" id="firstFixed" hidden>
                        }
                    </div>

                    <div class="form-check form-switch">
                        @if (Model.NextAccommodation == null)
                        {
                            <input class="form-check-input" type="checkbox" id="lastFixed" checked>
                            <label class="form-check-label" for="lastFixed">Keep last spot fixed</label>
                        }
                        else
                        {
                            <input class="form-check-input" type="checkbox" id="lastFixed" hidden>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation Buttons -->
    <div class="col-12 mt-4">
        <div class="d-flex flex-wrap gap-2">
            <a asp-controller="Days" asp-action="Details" asp-route-id="@Model.Id" asp-route-source="@(isPublicView ? "public" : "")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Day
            </a>
            <a href="@backUrl" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Trip
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script async
            src="https://maps.googleapis.com/maps/api/js?key=@apiKey&libraries=places&callback=initMap">
    </script>

    <script src="~/lib/luxon/luxon.js"></script>
    <script src="~/js/map-functions.js"></script>
    <script src="~/js/route-functions.js"></script>

    <!--Get needed variables from server -->
    <script>

        let points = JSON.parse('@Json.Serialize(Model.Spots)');
        //Get user defined route durations
        fillFixedDurations(points);
        let otherActivities = JSON.parse('@Json.Serialize(Model.Activities)')
        let activities = JSON.parse('@Json.Serialize(allActivities)');
        let previousAccommodation = JSON.parse('@Json.Serialize(Model.PreviousAccommodation)');
        let nextAccommodation = JSON.parse('@Json.Serialize(Model.NextAccommodation)');
        let center = { lat: parseFloat("@Html.Raw(startLat)".replace(',', '.')), lng: parseFloat("@Html.Raw(startLng)".replace(',', '.')) };
        let dayDate = luxon.DateTime.fromISO(@Json.Serialize(Model.Date));
        let dayId = '@Html.Raw(Model.Id)';
        let isGroup = '@Html.Raw(Model.IsGroup)' == 'True';
        let routeOptimizationUrl = '@Url.Action("RouteOptimization", "Days")';
        let updateActivityOrderUrl = '@Url.Action("UpdateActivityOrder", "Days")';

        // Initialize scrollbar customization
        document.addEventListener('DOMContentLoaded', function() {
            const container = document.getElementById('activitiesScrollContainer');
            if (container) {
                // Add custom scrollbar styling
                container.style.scrollbarWidth = 'thin';
                container.style.scrollbarColor = '#adb5bd #f8f9fa';
            }
        });

    </script>

    <script src="~/js/pages/day-mapview.js"></script>

    <style>
        /* Custom scrollbar for activities container */
        #activitiesScrollContainer::-webkit-scrollbar {
            width: 8px;
        }

        #activitiesScrollContainer::-webkit-scrollbar-track {
            background: #f8f9fa;
            border-radius: 4px;
        }

        #activitiesScrollContainer::-webkit-scrollbar-thumb {
            background: #adb5bd;
            border-radius: 4px;
        }

            #activitiesScrollContainer::-webkit-scrollbar-thumb:hover {
                background: #6c757d;
            }

        .list-group-item {
            transition: all 0.3s ease;
            border: 1px solid rgba(0,0,0,0.125);
        }

            .list-group-item:hover {
                opacity: 1 !important;
                transform: translateX(2px);
                background-color: #f8f9fa;
            }

        .selected-item {
            opacity: 1 !important;
            transform: translateX(2px);
            background-color: #e9ecef !important;
        }

        .transit-line {
            background-color: #dc3545;
            color: white;
            padding: 2px 6px;
            border-radius: 4px;
            font-weight: bold;
            margin-right: 5px;
        }

        .hour {
            color: #6c757d;
            font-weight: 500;
        }

        .route-controls .btn {
            margin-bottom: 5px;
        }

            .route-controls .btn:last-child {
                margin-bottom: 0;
            }

        .travel-card {
            background-color: #f8f9fa;
            border-left: 3px solid #0d6efd;
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
        }

        .btn-group .btn {
            padding: 0.25rem 0.5rem;
        }

        .route-warning {
            border-left: 4px solid #dc3545;
            background-color: #f8d7da;
            color: #842029;
            padding: 10px 15px;
            border-radius: 4px;
            margin-bottom: 8px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .route-warning button {
                border: none;
                background: transparent;
                font-size: 1.2rem;
                line-height: 1;
                cursor: pointer;
                color: #842029;
            }

        #map {
            min-height: 400px;
            background: linear-gradient(45deg, #f8f9fa 25%, #e9ecef 25%, #e9ecef 50%, #f8f9fa 50%, #f8f9fa 75%, #e9ecef 75%);
            background-size: 40px 40px;
            animation: loadingAnimation 1s linear infinite;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d;
        }

            #map::before {
                content: "Loading map...";
                font-size: 16px;
                font-weight: 500;
            }

            #map.loaded::before {
                content: "";
            }

            #map.loaded {
                background: none;
                animation: none;
            }

        /* Travel mode selection styling */
        .travel-mode-radio:checked + label {
            background-color: #0d6efd;
            color: white;
            border-color: #0d6efd;
        }

        /* Compact travel info display */
        .travel-info .badge {
            font-size: 0.7rem;
            padding: 0.2rem 0.4rem;
        }

        /* Make activity items more compact */
        .activity-item .small {
            font-size: 0.85rem;
        }

        .activity-item h6 {
            font-size: 0.95rem;
            margin-bottom: 0.25rem;
        }

        .loading {
            position: absolute; /* or fixed if covering whole screen */
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.3); /* semi-transparent grey */
            border-radius: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 999;
        }

        .spinner {
            border: 4px solid #f3f3f3;
            border-top: 4px solid #007bff;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 15px;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>
}