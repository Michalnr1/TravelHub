@model TravelHub.Web.ViewModels.Activities.ActivityCreateEditViewModel

@{
    ViewData["Title"] = "Edit Activity";
    var returnUrl = ViewData["ReturnUrl"] as string ?? Url.Action("Details", "Trips", new { id = Model.TripId }); ;
}

<h1>Edit Activity</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-route-returnUrl="@returnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div id="warning-box" class="alert alert-warning d-none"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartTimeString" class="control-label"></label>
                <input asp-for="StartTimeString" class="form-control" type="time" /> <!-- step="300" = 5 minut -->
                <span asp-validation-for="StartTimeString" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DurationString" class="control-label"></label>
                <input asp-for="DurationString" class="form-control" type="time" /> <!-- step="300" = 5 minut -->
                <span asp-validation-for="DurationString" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control">
                    <option value="">-- Select Category --</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id" selected="@(category.Id == Model.CategoryId)">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TripId" class="control-label"></label>
                <select asp-for="TripId" class="form-control" id="TripId">
                    <option value="">-- Select Trip --</option>
                    @foreach (var trip in Model.Trips)
                    {
                        <option value="@trip.Id" selected="@(trip.Id == Model.TripId)">@trip.Name</option>
                    }
                </select>
                <span asp-validation-for="TripId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DayId" class="control-label"></label>
                <select asp-for="DayId" class="form-control" id="DayId">
                    <option value="">-- Select Day --</option>
                    @foreach (var day in Model.Days)
                    {
                        <option value="@day.Id" data-tripid="@day.TripId" selected="@(day.Id == Model.DayId)">@day.Name</option>
                    }
                </select>
                <span asp-validation-for="DayId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a href="@returnUrl" class="btn btn-secondary">Back to Trip</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/new-collision-check.js"></script>

    <script>
        const dayId = @Model.DayId;
        const collisionCheckUrl = "@Html.Raw(Url.Action("CheckNewForCollisions", "Days"))"

        $(document).ready(function() {
            // Filter days based on selected trip
            function filterDays() {
                var tripId = $('#TripId').val();
                $('#DayId option').show();
                if (tripId) {
                    $('#DayId option[data-tripid!="' + tripId + '"]').hide();
                    $('#DayId option[value=""]').show();
                }
            }

            $('#TripId').change(filterDays);
            filterDays(); // Initial filter on page load
        });
    </script>
}