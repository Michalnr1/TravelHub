@model TravelHub.Web.ViewModels.Activities.ActivityDetailsViewModel

@{
    ViewData["Title"] = "Activity Details";

    // Sprawdzamy czy to publiczny podgląd
    var isPublicView = Context.Request.Query["source"] == "public";
    var backUrl = isPublicView ? Url.Action("Details", "TripsSearch", new { id = Model.TripId }) : Url.Action("Details", "Trips", new { id = Model.TripId });
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Model.Name</h1>
    <div>
        @if (!isPublicView)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        }
        <a asp-controller="Activities" asp-action="ChecklistActivity" asp-route-activityId="@Model.Id" class="btn btn-primary">
            View checklist
        </a>
        <a href="@backUrl" class="btn btn-outline-secondary">Back to Trip</a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-running text-primary"></i> Activity Information
                </h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.StartTimeString)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.StartTimeString)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Duration)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DurationString) hours</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Order)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Order)</dd>

                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CategoryName)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>

                    <dt class="col-sm-3">Type</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-primary">
                            <i class="fas fa-running"></i> @Html.DisplayFor(model => model.Type)
                        </span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-map-marked-alt text-info"></i> Trip Information
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Trip:</strong><br>
                    <a href="@backUrl" class="text-decoration-none">
                        @Html.DisplayFor(model => model.TripName)
                    </a>
                </div>

                <div class="mb-3">
                    <strong>Day:</strong><br>
                    @Html.DisplayFor(model => model.DayName)
                </div>

                <div class="d-grid gap-2 mt-4">
                    @if (!isPublicView)
                    {           
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit Activity
                        </a>
                    }
                    <a asp-controller="Activities" asp-action="ChecklistActivity" asp-route-activityId="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-list-check"></i> View Checklist
                    </a>
                    <a href="@backUrl" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Trip
                    </a>
                </div>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle text-info"></i> Quick Info
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <strong>Start time:</strong>
                    <span class="badge bg-info">@Model.StartTimeString</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <strong>Duration:</strong>
                    <span class="badge bg-info">@Model.DurationString hours</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <strong>Order:</strong>
                    <span class="badge bg-secondary">@Model.Order</span>
                </div>
                <div class="d-flex justify-content-between">
                    <strong>Category:</strong>
                    <span>@(Model.CategoryName ?? "No category")</span>
                </div>
            </div>
        </div>
    </div>
</div>