@using TravelHub.Domain.Entities
@model TravelHub.Web.ViewModels.Blog.PublicBlogViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h1>@Model.Name</h1>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="lead">@Model.Description</p>
                    }
                    <p class="text-muted">
                        Blog for trip: @Model.TripName |
                        <span class="badge @(Model.Visibility == BlogVisibility.Public ? "bg-success" : "bg-warning")">
                            <i class="fas fa-globe me-1"></i>@(Model.Visibility == BlogVisibility.ForMyFriends ? "For owner's friends blog" : Model.Visibility == BlogVisibility.ForTripParticipantsFriends ? "For all participants friends blog" : "Public blog")
                        </span>
                    </p>
                </div>
                <div>
                    <a href="@Url.Action("PublicBlogs")" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Public Blogs
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
            @if (Model.Posts.Any())
            {
                foreach (var post in Model.Posts.OrderByDescending(p => p.PublishedDate))
                {
                    <div class="card mb-4">
                        <div class="card-body">
                            <h3 class="card-title">
                                <a href="@Url.Action("PublicPost", new { id = post.Id })" class="text-decoration-none">
                                    @post.Title
                                </a>
                            </h3>
                            <p class="card-text">@Html.Raw(post.Content.Replace("\n", "<br>"))</p>

                            @if (post.Photos.Any())
                            {
                                <div class="row mt-3">
                                    @foreach (var photo in post.Photos.Take(3))
                                    {
                                        <div class="col-4">
                                            <img src="@photo.FilePath" class="img-fluid rounded" alt="@photo.Alt">
                                        </div>
                                    }
                                    @if (post.Photos.Count > 3)
                                    {
                                        <div class="col-4 d-flex align-items-center justify-content-center">
                                            <span class="text-muted">+@(post.Photos.Count - 3) more</span>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                        <div class="card-footer text-muted">
                            <small>
                                Author: @post.AuthorName |
                                Date: @post.PublishedDate?.ToString("MM/dd/yyyy HH:mm") |
                                Comments: @post.Comments.Count
                                @if (post.DayName != null)
                                {
                                    <span>| Day: @post.DayName</span>
                                }
                            </small>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">
                    <p>No posts in this blog yet.</p>
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Blog Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Trip:</strong> @Model.TripName</p>
                    <p><strong>Visibility:</strong> <span class="badge bg-success">Public</span></p>
                    <p><strong>Number of Posts:</strong> @Model.Posts.Count</p>
                    <p><strong>Number of Comments:</strong> @Model.Posts.Sum(p => p.Comments.Count)</p>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h5>About Public Blogs</h5>
                </div>
                <div class="card-body">
                    <p class="small text-muted">
                        This is a public travel blog. You can read posts and comments but cannot add new content.
                        To participate in discussions, you need to be a trip participant.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>