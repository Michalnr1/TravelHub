@model TravelHub.Web.ViewModels.Blog.PublicPostViewModel
@using TravelHub.Domain.Entities
@{
    ViewData["Title"] = Model.Title;
    var isPublicView = ViewBag.IsPublicView ?? false;
    var canComment = ViewBag.CanComment ?? false;
    var isAuthenticated = ViewBag.IsAuthenticated ?? false;
    var blogVisibility = ViewBag.BlogVisibility ?? BlogVisibility.Public;
}

<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("PublicBlogs", "Blog")">Travel Blogs</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("PublicView", "Blog", new { id = ViewBag.BlogId })">@ViewData["BlogName"]</a></li>
            <li class="breadcrumb-item active">@Model.Title</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <!-- Post Content -->
            <article class="card shadow-sm mb-4">
                <div class="card-body">
                    <!-- Post Header -->
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h1 class="card-title h2 mb-0">@Model.Title</h1>
                        <span class="badge @GetVisibilityBadgeClass(blogVisibility)">
                            <i class="fas @GetVisibilityIcon(blogVisibility) me-1"></i>@blogVisibility
                        </span>
                    </div>

                    <!-- Post Meta -->
                    <div class="post-meta mb-4">
                        <div class="d-flex flex-wrap align-items-center text-muted small">
                            <div class="me-3">
                                <i class="fas fa-user me-1"></i>
                                @Model.AuthorName
                            </div>
                            <div class="me-3">
                                <i class="fas fa-calendar me-1"></i>
                                @Model.CreationDate.ToString("MM/dd/yyyy HH:mm")
                            </div>
                            @if (Model.EditDate.HasValue)
                            {
                                <div class="me-3">
                                    <i class="fas fa-edit me-1"></i>
                                    Edited: @Model.EditDate.Value.ToString("MM/dd/yyyy HH:mm")
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.DayName))
                            {
                                <div class="me-3">
                                    <i class="fas fa-calendar-day me-1"></i>
                                    @Model.DayName
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Post Content -->
                    <div class="post-content mb-4">
                        @Html.Raw(Model.Content.Replace("\n", "<br>"))
                    </div>

                    <!-- Post Photos -->
                    @if (Model.Photos.Any())
                    {
                        <div class="post-photos mb-4">
                            <h5 class="mb-3">
                                <i class="fas fa-images me-2"></i>Attached Photos (@Model.Photos.Count)
                            </h5>
                            <div class="row g-3">
                                @foreach (var photo in Model.Photos)
                                {
                                    <div class="col-sm-6 col-lg-4">
                                        <div class="card h-100">
                                            <img src="@photo.FilePath" class="card-img-top photo-thumbnail"
                                                 alt="@photo.Alt" style="height: 200px; object-fit: cover;">
                                            <div class="card-body p-2">
                                                <p class="card-text small text-muted mb-0">@photo.Name</p>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </article>

            <!-- Comments Section -->
            <section class="comments-section">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="h4 mb-0">
                        <i class="fas fa-comments me-2"></i>Comments
                        <span class="badge bg-primary ms-2">@Model.Comments.Count</span>
                    </h3>

                    @if (canComment)
                    {
                        <a href="@Url.Action("Post", "Blog", new { id = Model.Id })"
                           class="btn btn-primary btn-sm">
                            <i class="fas fa-plus me-1"></i>Add Comment
                        </a>
                    }
                </div>

                <!-- Comments List -->
                @if (Model.Comments.Any())
                {
                    <div class="comments-list">
                        @foreach (var comment in Model.Comments)
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <!-- Comment Header -->
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h6 class="card-subtitle mb-1 fw-bold">@comment.AuthorName</h6>
                                            <small class="text-muted">
                                                <i class="fas fa-clock me-1"></i>
                                                @comment.CreationDate.ToString("MM/dd/yyyy HH:mm")
                                                @if (comment.EditDate.HasValue)
                                                {
                                                    <span class="ms-2">
                                                        <i class="fas fa-edit me-1"></i>
                                                        Edited: @comment.EditDate.Value.ToString("MM/dd/yyyy HH:mm")
                                                    </span>
                                                }
                                            </small>
                                        </div>
                                    </div>

                                    <!-- Comment Content -->
                                    <div class="card-text comment-content">@Html.Raw(comment.Content)</div>

                                    <!-- Comment Photos -->
                                    @if (comment.Photos.Any())
                                    {
                                        <div class="comment-photos mt-3">
                                            <div class="row g-2">
                                                @foreach (var photo in comment.Photos)
                                                {
                                                    <div class="col-4 col-md-3">
                                                        <img src="@photo.FilePath" class="img-fluid rounded"
                                                             alt="@photo.Alt" style="height: 100px; object-fit: cover;">
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No comments yet.</p>
                    </div>
                }

                <!-- Commenting Information -->
                @if (!canComment)
                {
                    <div class="card mt-4 bg-light">
                        <div class="card-body text-center">
                            <i class="fas fa-info-circle fa-2x text-muted mb-2"></i>
                            <h5>@(isAuthenticated ? "Limited Access" : "Read-Only Mode")</h5>
                            <p class="text-muted mb-0">
                                @if (!isAuthenticated)
                                {
                                    <text>You need to <a href="@Url.Action("Login", "Account")">log in</a> to participate in discussions.</text>
                                }
                                else
                                {
                                    <text>You can read posts and comments but cannot add new content. To participate in discussions, you need appropriate access permissions.</text>
                                }
                            </p>
                            @if (isAuthenticated && !canComment)
                            {
                                <div class="mt-3">
                                    <small class="text-muted">
                                        Current access level: <span class="badge @GetVisibilityBadgeClass(blogVisibility)">@blogVisibility</span>
                                    </small>
                                </div>
                            }
                        </div>
                    </div>
                }
            </section>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="sticky-top" style="top: 20px;">
                <!-- Blog Info -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-info-circle me-2"></i>Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <strong>Post Author:</strong><br>
                            @Model.AuthorName
                        </div>
                        <div class="mb-3">
                            <strong>Publication Date:</strong><br>
                            @Model.CreationDate.ToString("MM/dd/yyyy HH:mm")
                        </div>
                        @if (!string.IsNullOrEmpty(Model.DayName))
                        {
                            <div class="mb-3">
                                <strong>Trip Day:</strong><br>
                                @Model.DayName
                            </div>
                        }
                        <div class="mb-3">
                            <strong>Blog Visibility:</strong><br>
                            <span class="badge @GetVisibilityBadgeClass(blogVisibility)">
                                @blogVisibility
                            </span>
                        </div>
                        <div>
                            <strong>Number of Comments:</strong><br>
                            @Model.Comments.Count
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-bolt me-2"></i>Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <a href="@Url.Action("PublicView", "Blog", new { id = ViewBag.BlogId })"
                           class="btn btn-outline-primary w-100 mb-2">
                            <i class="fas fa-arrow-left me-2"></i>Back to Blog
                        </a>
                        <a href="@Url.Action("PublicBlogs")"
                           class="btn btn-outline-info w-100">
                            <i class="fas fa-globe me-2"></i>Browse Travel Blogs
                        </a>
                        @if (canComment)
                        {
                            <hr>
                            <a href="@Url.Action("Post", "Blog", new { id = Model.Id })"
                               class="btn btn-success w-100">
                                <i class="fas fa-comment me-2"></i>Add Comment
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetVisibilityBadgeClass(BlogVisibility visibility)
    {
        return visibility switch
        {
            BlogVisibility.Public => "bg-success",
            BlogVisibility.ForMyFriends => "bg-info",
            BlogVisibility.ForTripParticipantsFriends => "bg-warning",
            BlogVisibility.Private => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    private string GetVisibilityIcon(BlogVisibility visibility)
    {
        return visibility switch
        {
            BlogVisibility.Public => "fa-globe",
            BlogVisibility.ForMyFriends => "fa-user-friends",
            BlogVisibility.ForTripParticipantsFriends => "fa-users",
            BlogVisibility.Private => "fa-lock",
            _ => "fa-eye"
        };
    }
}

@section Styles {
    <style>
        .photo-thumbnail {
            transition: transform 0.2s ease-in-out;
            cursor: pointer;
        }

            .photo-thumbnail:hover {
                transform: scale(1.05);
            }

        .comments-section .card {
            border-left: 4px solid #0d6efd;
        }

        .sticky-top {
            z-index: 1;
        }
    </style>
}