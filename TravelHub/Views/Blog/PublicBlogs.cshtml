@model TravelHub.Web.ViewModels.Blog.PublicBlogsViewModel
@using TravelHub.Domain.Entities

@{
    ViewData["Title"] = "Travel Blogs";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Travel Blogs</h1>
            <p class="lead text-muted">Discover travel stories and experiences from around the world</p>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label for="countryFilter" class="form-label">Filter by Country</label>
                            <select id="countryFilter" name="countryCode" class="form-select">
                                <option value="">All Countries</option>
                                @foreach (var country in Model.AvailableCountries)
                                {
                                    <option value="@country.Code" selected="@(Model.SelectedCountryCode == country.Code)">
                                        @country.Name (@country.BlogCount)
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="searchFilter" class="form-label">Search</label>
                            <input type="text" id="searchFilter" name="searchTerm" class="form-control"
                                   placeholder="Search blogs..." value="@Model.SearchTerm" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Filter by</label>
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="checkbox" id="friendsOnly" name="showFriendsOnly"
                                       value="true" @(Model.ShowFriendsOnly ? "checked" : "") />
                                <label class="form-check-label" for="friendsOnly">
                                    Show friends' blogs & trips
                                </label>
                            </div>
                            <small class="form-text text-muted">
                                Blogs owned by friends or trips with friends
                            </small>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search me-2"></i>Apply Filters
                                </button>
                                <a href="@Url.Action("PublicBlogs")" class="btn btn-outline-secondary">Clear All</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Results Count -->
    @if (!string.IsNullOrEmpty(Model.SelectedCountryCode) || !string.IsNullOrEmpty(Model.SearchTerm) || Model.ShowFriendsOnly)
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="fas fa-filter me-2"></i>
                    Showing @Model.Blogs.Count blogs
                    @if (Model.ShowFriendsOnly)
                    {
                        <text>from <strong>your friends' blogs and trips</strong></text>
                    }
                    @if (!string.IsNullOrEmpty(Model.SelectedCountryCode))
                    {
                        var country = Model.AvailableCountries.FirstOrDefault(c => c.Code == Model.SelectedCountryCode);
                        <text>from <strong>@country?.Name</strong></text>
                    }
                    @if (!string.IsNullOrEmpty(Model.SearchTerm))
                    {
                        <text>matching "<strong>@Model.SearchTerm</strong>"</text>
                    }
                    <a href="@Url.Action("PublicBlogs")" class="btn btn-sm btn-outline-info ms-2">Clear Filters</a>
                </div>
            </div>
        </div>
    }

    <!-- Blogs Grid -->
    @if (Model.Blogs.Any())
    {
        <div class="row">
            @foreach (var blog in Model.Blogs)
            {
                <div class="col-lg-6 col-xl-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">@blog.Name</h5>
                            <div>
                                @if (blog.IsFriend)
                                {
                                    <span class="badge bg-warning me-1" data-bs-toggle="tooltip" title="Blog owner is your friend">
                                        <i class="fas fa-crown me-1"></i>Friend's Blog
                                    </span>
                                }
                                else if (blog.HasFriendParticipants)
                                {
                                    <span class="badge bg-info me-1" data-bs-toggle="tooltip" title="Friends are participating in this trip">
                                        <i class="fas fa-users me-1"></i>Friends on Trip
                                    </span>
                                }
                                <span class="badge @GetVisibilityBadgeClass(blog.Visibility)">
                                    <i class="fas @GetVisibilityIcon(blog.Visibility) me-1"></i>@GetVisibilityDisplayName(blog.Visibility)
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(blog.Description))
                            {
                                <p class="card-text">@blog.Description</p>
                            }

                            <div class="mb-3">
                                <strong>Trip:</strong> @blog.TripName<br>
                                <strong>Author:</strong> @blog.OwnerName<br>
                                <strong>Posts:</strong> @blog.PostsCount<br>
                                <strong>Comments:</strong> @blog.CommentsCount
                            </div>

                            <!-- Friend Participants Section -->
                            @if (blog.HasFriendParticipants)
                            {
                                <div class="mb-3">
                                    <strong>Friends on this trip:</strong>
                                    <div class="mt-1">
                                        @foreach (var friend in blog.FriendParticipants.Take(2))
                                        {
                                            <span class="badge bg-success me-1 mb-1">
                                                <i class="fas fa-user-friends me-1"></i>@friend
                                            </span>
                                        }
                                        @if (blog.FriendParticipants.Count > 2)
                                        {
                                            <span class="badge bg-secondary" data-bs-toggle="tooltip"
                                                  title="@string.Join(", ", blog.FriendParticipants.Skip(2))">
                                                +@(blog.FriendParticipants.Count - 2) more
                                            </span>
                                        }
                                    </div>
                                </div>
                            }

                            @if (blog.Countries.Any())
                            {
                                <div class="mb-3">
                                    <strong>Countries:</strong>
                                    <div class="mt-1">
                                        @foreach (var country in blog.Countries.Take(3))
                                        {
                                            <span class="badge bg-light text-dark me-1 mb-1">@country</span>
                                        }
                                        @if (blog.Countries.Count > 3)
                                        {
                                            <span class="badge bg-secondary">+@(blog.Countries.Count - 3) more</span>
                                        }
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(blog.Catalog))
                            {
                                <div class="mb-3">
                                    <strong>Category:</strong>
                                    <span class="badge bg-primary">@blog.Catalog</span>
                                </div>
                            }
                        </div>
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("PublicView", "Blog", new { id = blog.Id })" class="btn btn-primary btn-sm">
                                <i class="fas fa-book-open me-1"></i>Read Blog
                            </a>
                            <small class="text-muted">
                                @if (blog.LatestPostDate.HasValue)
                                {
                                    <text>Last post: @blog.LatestPostDate.Value.ToString("MM/dd/yyyy")</text>
                                }
                                else
                                {
                                    <text>No posts yet</text>
                                }
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="fas fa-blog fa-4x text-muted mb-3"></i>
                    <h3>No blogs found</h3>
                    <p class="text-muted">
                        @if (!string.IsNullOrEmpty(Model.SelectedCountryCode) || !string.IsNullOrEmpty(Model.SearchTerm) || Model.ShowFriendsOnly)
                        {
                            <text>Try adjusting your filters to see more results.</text>
                        }
                        else
                        {
                            <text>There are no accessible blogs available at the moment.</text>
                        }
                    </p>
                    @if (!string.IsNullOrEmpty(Model.SelectedCountryCode) || !string.IsNullOrEmpty(Model.SearchTerm) || Model.ShowFriendsOnly)
                    {
                        <a href="@Url.Action("PublicBlogs")" class="btn btn-primary">View All Blogs</a>
                    }
                    else if (User.Identity.IsAuthenticated && Model.FriendsBlogsCount == 0)
                    {
                        <div class="mt-3">
                            <p class="text-muted">You don't have any friends with travel blogs yet.</p>
                            <a href="@Url.Action("Index", "Friends")" class="btn btn-outline-primary">
                                <i class="fas fa-user-plus me-2"></i>Find Friends
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Statistics -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Blog Statistics
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <h3 class="text-primary">@Model.TotalBlogs</h3>
                            <p class="text-muted mb-0">Total Blogs</p>
                        </div>
                        <div class="col-md-3">
                            <h3 class="text-success">@Model.TotalPosts</h3>
                            <p class="text-muted mb-0">Total Posts</p>
                        </div>
                        <div class="col-md-3">
                            <h3 class="text-info">@Model.TotalCountries</h3>
                            <p class="text-muted mb-0">Countries Covered</p>
                        </div>
                        <div class="col-md-3">
                            <h3 class="text-warning">@Model.FriendsBlogsCount</h3>
                            <p class="text-muted mb-0">Friends' Blogs & Trips</p>
                        </div>
                    </div>
                    @if (Model.ShowFriendsOnly && Model.FriendsBlogsCount > 0)
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="alert alert-warning mb-0">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Showing <strong>@Model.Blogs.Count</strong> blogs from your friends' blogs and trips they participate in.
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetVisibilityBadgeClass(BlogVisibility visibility)
    {
        return visibility switch
        {
            BlogVisibility.Public => "bg-success",
            BlogVisibility.ForMyFriends => "bg-info",
            BlogVisibility.ForTripParticipantsFriends => "bg-warning",
            BlogVisibility.Private => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    private string GetVisibilityIcon(BlogVisibility visibility)
    {
        return visibility switch
        {
            BlogVisibility.Public => "fa-globe",
            BlogVisibility.ForMyFriends => "fa-user-friends",
            BlogVisibility.ForTripParticipantsFriends => "fa-users",
            BlogVisibility.Private => "fa-lock",
            _ => "fa-eye"
        };
    }

    private string GetVisibilityDisplayName(BlogVisibility visibility)
    {
        return visibility switch
        {
            BlogVisibility.Public => "Public",
            BlogVisibility.ForMyFriends => "Friends",
            BlogVisibility.ForTripParticipantsFriends => "Trip Friends",
            BlogVisibility.Private => "Private",
            _ => visibility.ToString()
        };
    }
}

@section Scripts {
    <script>
        // Auto-submit form when country changes
        document.getElementById('countryFilter').addEventListener('change', function() {
            this.form.submit();
        });

        // Auto-submit form when friends only checkbox changes
        document.getElementById('friendsOnly').addEventListener('change', function() {
            this.form.submit();
        });

        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}