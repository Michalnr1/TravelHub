@model TravelHub.Web.ViewModels.Blog.BlogViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>@Model.Name</h1>
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <p class="lead">@Model.Description</p>
            }
            <p class="text-muted">
                Blog for trip: @Model.TripName |
                <span class="badge @(Model.IsPrivate ? "bg-danger" : "bg-success")">
                    @(Model.IsPrivate ? "Private" : "Public")
                </span>
            </p>
        </div>
        <div>
            @if (User.Identity!.IsAuthenticated && Model.OwnerId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
            {
                <a href="@Url.Action("EditBlog", new { id = Model.Id })" class="btn btn-outline-secondary">
                    <i class="fas fa-cog me-2"></i>Edit Blog
                </a>
            }
            @* <a href="@Url.Action("PublicBlogs")" class="btn btn-outline-info ms-2">
                <i class="fas fa-globe me-2"></i>Browse Public Blogs
            </a> *@
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Posts</h2>
                <a href="@Url.Action("CreatePost", new { blogId = Model.Id })" class="btn btn-primary">
                    <i class="fas fa-plus"></i> New Post
                </a>
            </div>

            @if (Model.Posts.Any())
            {
                foreach (var post in Model.Posts)
                {
                    <div class="card mb-4">
                        <div class="card-body">
                            <h3 class="card-title">
                                <a href="@Url.Action("Post", new { id = post.Id })" class="text-decoration-none">
                                    @post.Title
                                </a>
                            </h3>
                            <p class="card-text">@Html.Raw(post.Content.Replace("\n", "<br>"))</p>

                            @if (post.Photos.Any())
                            {
                                <div class="row mt-3">
                                    @foreach (var photo in post.Photos.Take(3))
                                    {
                                        <div class="col-4">
                                            <img src="@photo.FilePath" class="img-fluid rounded" alt="@photo.Alt">
                                        </div>
                                    }
                                    @if (post.Photos.Count > 3)
                                    {
                                        <div class="col-4 d-flex align-items-center justify-content-center">
                                            <span class="text-muted">+@(post.Photos.Count - 3) more</span>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                        <div class="card-footer text-muted">
                            <small>
                                Author: @post.AuthorName |
                                Date: @post.CreationDate.ToString("MM/dd/yyyy HH:mm") |
                                Comments: @post.Comments.Count
                                @if (post.DayName != null)
                                {
                                    <span>| Day: @post.DayName</span>
                                }
                            </small>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info">
                    <p>No posts in this blog yet. Be the first to add a post!</p>
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Blog Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Trip:</strong> @Model.TripName</p>
                    <p>
                        <strong>Visibility:</strong>
                        <span class="badge @(Model.IsPrivate ? "bg-danger" : "bg-success")">
                            @(Model.IsPrivate ? "Private" : "Public")
                        </span>
                    </p>
                    <p><strong>Number of Posts:</strong> @Model.Posts.Count</p>
                    <p><strong>Number of Comments:</strong> @Model.Posts.Sum(p => p.Comments.Count)</p>
                </div>
            </div>
        </div>
    </div>
</div>