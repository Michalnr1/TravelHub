@using TravelHub.Domain.Entities
@model TravelHub.Web.ViewModels.Blog.BlogViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h1>@Model.Name</h1>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="lead">@Model.Description</p>
                    }
                    <p class="text-muted">
                        Blog for trip: @Model.TripName |
                        <span class="badge @(Model.Visibility == BlogVisibility.Private ? "bg-danger" : Model.Visibility == BlogVisibility.Public ? "bg-success" : "bg-warning")">
                            @(Model.Visibility == BlogVisibility.Private ? "Private" : Model.Visibility == BlogVisibility.ForMyFriends ? "For owner's friends" : Model.Visibility == BlogVisibility.ForTripParticipantsFriends ? "For all participants friends" : "Public")
                        </span>
                    </p>
                </div>
                <div>
                    @if (User.Identity!.IsAuthenticated && Model.OwnerId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                    {
                        <a href="@Url.Action("EditBlog", new { id = Model.Id })" class="btn btn-outline-secondary">
                            <i class="fas fa-cog me-2"></i>Edit Blog
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2>Posts</h2>
                <a href="@Url.Action("CreatePost", new { blogId = Model.Id })" class="btn btn-primary">
                    <i class="fas fa-plus"></i> New Post
                </a>
            </div>

            <!-- Scheduled Posts Section -->
            @{
                var scheduledPosts = Model.Posts.Where(p => p.IsScheduled).ToList();
                var publishedPosts = Model.Posts.Where(p => !p.IsScheduled).ToList();
            }

            @if (scheduledPosts.Any())
            {
                <div class="mb-4">
                    <h4 class="text-warning mb-3">
                        <i class="fas fa-clock me-2"></i>Scheduled Posts (@scheduledPosts.Count)
                    </h4>
                    @foreach (var post in scheduledPosts.OrderBy(p => p.ScheduledFor))
                    {
                        <div class="card mb-3 border-warning">
                            <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fas fa-clock me-1"></i>
                                    <strong>Scheduled</strong> - Will be published on @post.ScheduledFor?.ToString("MM/dd/yyyy HH:mm")
                                </div>
                                <span class="badge bg-dark">Scheduled</span>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="@Url.Action("Post", new { id = post.Id })" class="text-decoration-none text-dark">
                                        @post.Title
                                    </a>
                                </h5>
                                <p class="card-text">@Html.Raw(post.Content.Replace("\n", "<br>"))</p>

                                @if (post.Photos.Any())
                                {
                                    <div class="row mt-3">
                                        @foreach (var photo in post.Photos.Take(3))
                                        {
                                            <div class="col-4">
                                                <img src="@photo.FilePath" class="img-fluid rounded" alt="@photo.Alt" style="height: 100px; object-fit: cover;">
                                            </div>
                                        }
                                        @if (post.Photos.Count > 3)
                                        {
                                            <div class="col-4 d-flex align-items-center justify-content-center">
                                                <span class="text-muted">+@(post.Photos.Count - 3) more</span>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                            <div class="card-footer text-muted">
                                <small>
                                    Author: @post.AuthorName |
                                    Created: @post.CreationDate.ToString("MM/dd/yyyy HH:mm") |
                                    Scheduled: @post.ScheduledFor?.ToString("MM/dd/yyyy HH:mm")
                                    @if (post.DayName != null)
                                    {
                                        <span>| Day: @post.DayName</span>
                                    }
                                </small>
                            </div>
                        </div>
                    }
                </div>
            }

            <!-- Published Posts Section -->
            @if (publishedPosts.Any())
            {
                <div>
                    <h4 class="text-success mb-3">
                        <i class="fas fa-check-circle me-2"></i>Published Posts (@publishedPosts.Count)
                    </h4>
                    @foreach (var post in publishedPosts.OrderByDescending(p => p.PublishedDate))
                    {
                        <div class="card mb-4">
                            <div class="card-body">
                                <h3 class="card-title">
                                    <a href="@Url.Action("Post", new { id = post.Id })" class="text-decoration-none">
                                        @post.Title
                                    </a>
                                </h3>
                                <p class="card-text">@Html.Raw(post.Content.Replace("\n", "<br>"))</p>

                                @if (post.Photos.Any())
                                {
                                    <div class="row mt-3">
                                        @foreach (var photo in post.Photos.Take(3))
                                        {
                                            <div class="col-4">
                                                <img src="@photo.FilePath" class="img-fluid rounded" alt="@photo.Alt" style="height: 100px; object-fit: cover;">
                                            </div>
                                        }
                                        @if (post.Photos.Count > 3)
                                        {
                                            <div class="col-4 d-flex align-items-center justify-content-center">
                                                <span class="text-muted">+@(post.Photos.Count - 3) more</span>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                            <div class="card-footer text-muted">
                                <small>
                                    Author: @post.AuthorName |
                                    Published: @post.PublishedDate?.ToString("MM/dd/yyyy HH:mm") |
                                    Comments: @post.Comments.Count
                                    @if (post.DayName != null)
                                    {
                                        <span>| Day: @post.DayName</span>
                                    }
                                    @if (post.EditDate.HasValue)
                                    {
                                        <span>| Edited: @post.EditDate.Value.ToString("MM/dd/yyyy HH:mm")</span>
                                    }
                                </small>
                            </div>
                        </div>
                    }
                </div>
            }

            @if (!Model.Posts.Any())
            {
                <div class="alert alert-info">
                    <p>No posts in this blog yet. Be the first to add a post!</p>
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Blog Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Trip:</strong> @Model.TripName</p>
                    <p>
                        <strong>Visibility:</strong>
                        <span class="badge @(Model.Visibility == BlogVisibility.Private ? "bg-danger" : Model.Visibility == BlogVisibility.Public ? "bg-success" : "bg-warning")">
                            @(Model.Visibility == BlogVisibility.Private ? "Private" : Model.Visibility == BlogVisibility.ForMyFriends ? "For owner's friends" : Model.Visibility == BlogVisibility.ForTripParticipantsFriends ? "For all participants friends" : "Public")
                        </span>
                    </p>
                    <p><strong>Total Posts:</strong> @Model.Posts.Count</p>
                    <p><strong>Published:</strong> @publishedPosts.Count</p>
                    <p><strong>Scheduled:</strong> @scheduledPosts.Count</p>
                    <p><strong>Total Comments:</strong> @Model.Posts.Sum(p => p.Comments.Count)</p>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6>Quick Actions</h6>
                </div>
                <div class="card-body">
                    <a href="@Url.Action("CreatePost", new { blogId = Model.Id })" class="btn btn-primary w-100 mb-2">
                        <i class="fas fa-plus me-2"></i>Create New Post
                    </a>
                    <a href="@Url.Action("MyTrips", "Trips")" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-arrow-left me-2"></i>Back to My Trips
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>